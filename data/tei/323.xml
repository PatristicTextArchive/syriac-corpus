        <body>
            <div type="title" n="69">
                <ab xml:lang="en">Hymn LXIX</ab>
            </div>
            <div type="body">
                <lg type="superscript">
                    <l xml:lang="syr">ܥܠ ܩܠܐ ܕܐܝܙܓܕܐ ܗܕܝܐܐ</l>
                </lg>
                <lg type="stanza" n="1"> 
                    <l xml:lang="syr">ܐܢܬ ܗܘ ܓܒܠܬܝܗܝ ܠܥܦܪܐ </l>
                    <l xml:lang="syr">ܡܢ ܫܘܪܝܐ ܒܪ̈ܚܡܐ </l>
                    <l xml:lang="syr">ܘܐܢܬ ܗܘ ܡܫܿܠܡ ܠܘܬܗ </l>
                    <l xml:lang="syr">ܡܘܗܒܬܟ ܒܚܘܒܐ </l>
                    
                </lg>
                
                <lg type="refrain">
                    <l xml:lang="syr">ܥܘܢܝܬܐ : ܬܫ̈ܒܚܢ ܠܡܪܘܬܟ</l>
                    
                </lg>
                <lg type="stanza" n="2"> 
                    <l xml:lang="syr">ܐܢܬ ܗܘ ܛܿܒܐ ܒܪܝܬܝܗܝ </l>
                    <l xml:lang="syr">ܠܐܕܡ ܟܕ ܓܠܼܐ ܠܟ </l>
                    <l xml:lang="syr">ܕܛܿܠܡ ܠܟ ܘܛܥܿܐ </l>
                    <l xml:lang="syr">ܓܒܠܬܝܗܝ ܐܝܟ ܕܬܙܟܝܘܗܝ</l>
                    
                </lg>
                <lg type="stanza" n="3"> 
                    <l xml:lang="syr">ܒܦܓܪܐ ܚܿܪܬ ܟܕ ܐܒܝܠ </l>
                    <l xml:lang="syr">ܒܢܦܫܐ ܟܕ ܟܡܝܪܐ </l>
                    <l xml:lang="syr">ܕܡܿܙܓܬ ܐܢܘܢ ܒܚܘܒܐ </l>
                    <l xml:lang="syr">ܘܥܢܕܘ ܘܦܪܫܼܘ ܒܚܫܐ </l>
                    
                </lg>
                <lg type="stanza" n="4"> 
                    <l xml:lang="syr">ܓܒܝܠ ܦܓܪܐ ܒܚܟܡܐ </l>
                    <l xml:lang="syr">ܢܦܝܚܐ ܢܦܫܐ ܒܛܝܒܘ</l>
                    <l xml:lang="syr">ܡܙܝܓ ܚܘܒܐ ܒܫܠܡܘ </l>
                    <l xml:lang="syr">ܦܪܫܗ ܚܘܝܐ ܒܒܝܫܘ </l>
                    
                </lg>
                <lg type="stanza" n="5"> 
                    <l xml:lang="syr">ܕܐܿܢ ܦܓܪܐ ܘܢܦܫܐ </l>
                    <l xml:lang="syr">ܕܐܝܢܐ ܐܚܛܝ ܠܚܒܪܗ</l>
                    <l xml:lang="syr">ܣܟܠܘܬܐ ܕܓܘܐ ܗܝ </l>
                    <l xml:lang="syr">ܕܚܐܪܘܬ ܕܓܘܐ ܗܝ</l>
                    <l>܀܀܀</l>
                </lg>
                <lg type="stanza" n="6"> 
                    <l xml:lang="syr">ܕܝܠܟ ܗܝ ܒܪܝܟܐ </l>
                    <l xml:lang="syr">ܕܬܘܒ ܬܬܿܢܐ ܬܪܚܡ </l>
                    <l xml:lang="syr">ܐܝܕܟ ܬܓܒܘܠ ܡܕܪܝܫ </l>
                    <l xml:lang="syr">ܨܒܥܟ ܠܐܕܡ ܬܨܘܪܝܘܗܝ</l>
                    
                </lg>
                <lg type="stanza" n="7"> 
                    <l xml:lang="syr">ܗܐ ܓܝܪ ܡܪܝ ܡܢ ܡܬܘܡ </l>
                    <l xml:lang="syr">ܠܐ ܓܙ ܡܢܗ ܚܢܢܟ</l>
                    <l xml:lang="syr">ܫܿܪܝܬ ܥܡܗ ܒܚܘܒܐ </l>
                    <l xml:lang="syr">ܫܿܠܡ ܥܡܗ ܒܪ̈ܚܡܐ </l>
                    
                </lg>
                <lg type="stanza" n="8"> 
                    <l xml:lang="syr">ܘܐܢ ܓܝܪ ܟܕ ܠܝܬ ܗܘܐ </l>
                    <l xml:lang="syr">ܕܢܗܘܐ ܐܝܬܘܗܝ ܒܪܝܬܗܝ</l>
                    <l xml:lang="syr">ܗܫܐ ܕܐܝܬܘܗܝ ܠܥܦܪܗ </l>
                    <l xml:lang="syr">ܒܟ ܢܬܚܕܬ ܗܝܟܠܗ</l>
                    
                </lg>
                <lg type="stanza" n="9"> 
                    <l xml:lang="syr">ܙܕܩ ܗܘ ܠܡܠܟܐ </l>
                    <l xml:lang="syr">ܕܚܙܐ ܕܐܥܬܩ </l>
                    <l xml:lang="syr">ܕܒܣܡ̈ܡܢܐ ܓܒ̈ܝܐ </l>
                    <l xml:lang="syr">ܢܦܼܨܚ ܨܠܡܐ ܟܡܝܪܐ </l>
                    
                </lg>
                <lg type="stanza" n="10"> 
                    <l xml:lang="syr">ܚܙܬܐ ܗܘܬ ܕܬܗܪܐ </l>
                    <l xml:lang="syr">ܕܪܟܢ ܪܘܡܟ ܫܒܝܚܐ </l>
                    <l xml:lang="syr">ܠܘܬ ܥܦܪܐ ܫܚܝܡܐ </l>
                    <l xml:lang="syr">ܕܢܨܘܪ ܨܠܡܐ ܗܕܝܪܐ </l>
                    
                </lg>
                <lg type="stanza" n="11"> 
                    <l xml:lang="syr">ܛܒܐ ܗܝ ܗܕܐ ܐܚܪܝܬ </l>
                    <l xml:lang="syr">ܡܢ ܗܿܝ ܕܗܘܬ ܒܪܫܝܬ</l>
                    <l xml:lang="syr">ܕܠܘ ܡܒܪܐ ܒܪܝܬܝܗܝ </l>
                    <l xml:lang="syr">ܐܠܐ ܡܠܼܒܫ ܠܒܫܬܝܗܝ</l>
                    
                </lg>
                <lg type="stanza" n="12"> 
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܝܕܥ ܪܡܐ ܕܐܕܡ </l>
                    <l xml:lang="syr">ܐܠܗܐ ܨܒܼܐ ܕܢܗܘܐ </l>
                    <l xml:lang="syr">ܫܕܪ ܠܒܪܗ ܘܠܒܫܗ </l>
                    <l xml:lang="syr">ܕܢܬܠ ܠܗ ܪܓܬܗ</l>
                    
                </lg>
                <lg type="stanza" n="13"> 
                    <l xml:lang="syr">ܟܡܝܪ ܒܝܫܐ ܕܚܼܙܐ </l>
                    <l xml:lang="syr">ܕܟܡܐ ܕܣܚܦܗ ܠܐܕܡ </l>
                    <l xml:lang="syr">ܝܬܝܪ ܕܪܓܐ ܣܠܼܩ ܗܘܐ </l>
                    <l xml:lang="syr">ܕܢܒܗܬ ܡܢ ܕܣܚܦܗ</l>
                    
                </lg>
                <lg type="stanza" n="14"> 
                    <l xml:lang="syr">ܠܦܓܪܐ ܚܕܝܗܝ ܒܢܦܫܐ </l>
                    <l xml:lang="syr">ܠܢܦܫܐ ܦܢܗܿ ܠܦܓܪܐ </l>
                    <l xml:lang="syr">ܠܚ̈ܕܕܐ ܢܣܘܚܘܢ </l>
                    <l xml:lang="syr">ܕܦܼܪܫܘ ܘܦܢܘ ܘܐܬܡܙܓܘ</l>
                    
                </lg>
                <lg type="stanza" n="15"> 
                    <l xml:lang="syr">ܡܢܥܝܗܿ ܠܢܦܫܐ </l>
                    <l xml:lang="syr">ܘܬܥܘܠ ܠܗܿ ܠܒܝܬܗܿ</l>
                    <l xml:lang="syr">ܢܫܬܝܢ ܡܫܟܢܗܿ</l>
                    <l xml:lang="syr">ܘܢܢܗܪ ܒܗܿ ܫܪܓܗ</l>
                    
                </lg>
                <lg type="stanza" n="16"> 
                    <l xml:lang="syr">ܢܫܪܐ ܢܘܗܪܐ ܒܥܝ̈ܢܘܗܝ </l>
                    <l xml:lang="syr">ܢܥܒܪ ܩܠܐ ܒܐ̈ܕܢܘܗܝ</l>
                    <l xml:lang="syr">ܪ̈ܓܫܘܗܝ ܕܚܼܪܒܘ ܐܦ ܨܕܘ </l>
                    <l xml:lang="syr">ܨܘܬܐ ܘܫܝܢܐ ܢܬܡܠܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="17"> 
                    <l xml:lang="syr">ܣܝܒܘܬܐ ܣܢܝܬܐ </l>
                    <l xml:lang="syr">ܥܠܝܗܘܢ ܠܐ ܡܕܝܩܐ </l>
                    <l xml:lang="syr">ܐܦ ܠܐ ܟܐ̈ܒܐ ܘܚ̈ܫܐ </l>
                    <l xml:lang="syr">ܕܫܠܼܚܘ ܐܢܘܢ ܒܡܘܬܐ</l>
                    
                </lg>
                <lg type="stanza" n="18"> 
                    <l xml:lang="syr">ܥܠܬܐ ܗܘ ܓܝܪ ܚܕܬܐ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܗܘܐ ܡܘܬܐ ܠܡ̈ܝܬܐ </l>
                    <l xml:lang="syr">ܕܚܫܐ ܒܗ ܫܠܚܝܢ </l>
                    <l xml:lang="syr">ܘܒܗ ܫܘܒܚܐ ܠܒܫܝܢ </l>
                    
                </lg>
                <lg type="stanza" n="19"> 
                    <l xml:lang="syr">ܦܘܡܗ ܕܡܝܬܐ ܒܓܘ ܥܕܢ </l>
                    <l xml:lang="syr">ܗܘ ܥܡ ܢܦܫܐ ܡܡܠܠ</l>
                    <l xml:lang="syr">ܕܡܢ ܐܝܟܐ ܘܠܐܝܟܐ </l>
                    <l xml:lang="syr">ܘܐܝܟܢ ܐܬܝܬ ܠܗܪܟܐ </l>
                    
                </lg>
                <lg type="stanza" n="20"> 
                    <l xml:lang="syr">ܨܒܿܥ ܠܗ ܠܦܓܪܐ </l>
                    <l xml:lang="syr">ܢܘܗܪܐ ܕܬܡܢ ܒܓܘ̈ܢܘܗܝ </l>
                    <l xml:lang="syr">ܗܿܘܐ ܚܿܙܐ ܩܢܘܡܗ </l>
                    <l xml:lang="syr">ܕܐܝܟ ܙܠܝ̈ܩܐ ܡܼܥܛܦ </l>
                    
                </lg>
                <lg type="stanza" n="21"> 
                    <l xml:lang="syr">ܨܠܝܒ ܢܘܗܪܐ ܕܬܡܢ </l>
                    <l xml:lang="syr">ܙܝܘܗ ܡܒܪܩ ܥܠܝܗܘܢ</l>
                    <l xml:lang="syr">ܕܡܢ ܗܪܟܐ ܪܫܡܼܘ ܗܘܘ </l>
                    <l xml:lang="syr">ܪܙܗ ܪܒܐ ܥܠܝܗܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="22"> 
                    <l xml:lang="syr">ܩܿܪܒܝܢ ܥܝܪ̈ܐ ܕܢܘܪܐ </l>
                    <l xml:lang="syr">ܠܘܬ ܐܢܫܐ ܕܒܣܪܐ </l>
                    <l xml:lang="syr">ܒܚܘܒܐ ܠܗܘܢ ܣܿܘܚܝܢ </l>
                    <l xml:lang="syr">ܕܥܡܼܠܘ ܘܐܢܚܘ ܢܦܫܗܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="23"> 
                    <l xml:lang="syr">ܩܪܒܝܢ ܥܝܪ̈ܐ ܠܡܬܢܐ </l>
                    <l xml:lang="syr">ܠܙܕܝ̈ܩܐ ܪܗܛܗܘܢ </l>
                    <l xml:lang="syr">ܢܨܚ̈ܢܝܗܘܢ ܡܕܟܪܝܢ </l>
                    <l xml:lang="syr">ܒܕܝܠܗܘܢ ܠܗܘܢ ܡܘܪܒܝܢ </l>
                    
                </lg>
                <lg type="stanza" n="24"> 
                    <l xml:lang="syr">ܪܫܝܬܐ ܕܫܘܒܚܐ </l>
                    <l xml:lang="syr">ܕܫܪܘܬܝܢ ܣܠܩܐ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܡܢ ܦܘܡ̈ܐ ܣܟܝܪ̈ܐ </l>
                    <l xml:lang="syr">ܕܒܫܝܘܠ ܗܐ ܚܒܝܫܝܢ</l>
                    
                </lg>
                <lg type="stanza" n="25"> 
                    <l xml:lang="syr">ܫܿܡܥ ܡܘܬܐ ܨܠܠܬܐ </l>
                    <l xml:lang="syr">ܨܿܠܐ ܐܕܢܗ ܒܕܚܠܐ</l>
                    <l xml:lang="syr">ܢܦܼܠ ܒܗ ܪܬܝܪܬܐ </l>
                    <l xml:lang="syr">ܕܫܪܝܘ ܡ̈ܝܬܐ ܠܡܪܬܡ</l>
                    
                </lg>
                <lg type="stanza" n="26"> 
                    <l xml:lang="syr">ܫܒܩܝܢ ܠܗ ܚܒܝܫ̈ܘܗܝ </l>
                    <l xml:lang="syr">ܕܡܪܕܘ ܥܠܘܗܝ ܐܣܝܪ̈ܘܗܝ</l>
                    <l xml:lang="syr">ܚܒܘܫܐ ܚܒܝܫܐ </l>
                    <l xml:lang="syr">ܕܚܒܫܘܗܝ ܒܚܒܘܫܬܗ</l>
                    
                </lg>
                <lg type="stanza" n="27"> 
                    <l xml:lang="syr">ܬܘܕܝܬܐ ܥܡܟܘܢ </l>
                    <l xml:lang="syr">ܢܫܘܝܢ ܡܪܢ ܕܢܣܩ </l>
                    <l xml:lang="syr">ܐܘ ܟܐ̈ܢܐ ܒܪ̈ܝܛܐ </l>
                    <l xml:lang="syr">ܕܠܐ ܓܐܙ ܩܠܗܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="28"> 
                    <l xml:lang="syr">ܬܘܕܝ ܠܡܿܢ ܕܡܪܕܐ </l>
                    <l xml:lang="syr">ܢܒܥܐ ܒܦܘܡܐ ܣܟܝܪܐ</l>
                    <l xml:lang="syr">ܕܢܬܠ ܫܘܒܚܐ ܐܡܝܢܐ </l>
                    <l xml:lang="syr">ܒܒܪܐ ܠܐܒܐ ܣܓܝܕܐ </l>
                    
                </lg>
