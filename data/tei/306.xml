        <body>
            <div type="title" n="52">
                <ab xml:lang="en">Hymn LII</ab>
            </div>
            <div type="body">
                <lg type="superscript">
                    <l xml:lang="syr">ܥܠ ܣܛܢܐ ܘܡܘܬܐ </l>
                    <l xml:lang="syr">ܥܠ ܩܠܐ ܕܐܘ ܡܘܬܐ ܠܐ ܬܫܬܥܠܐ </l>
                </lg>
                <lg type="stanza" n="1"> 
                    <l xml:lang="syr">ܠܡܘܬܐ ܘܣܛܢܐ ܫܡܿܥܬ ܩܠܐ ܟܕ ܢܨܿܝܢ ܗܘܘ</l>
                    <l xml:lang="syr">ܕܐܝܢܐ ܚܿܣܝܢ ܡܢ ܚܒܪܗ ܨܝܕ ܒܪܢܫܐ </l>
                    
                </lg>
                
                <lg type="refrain">
                    <l xml:lang="syr">ܥܘܢܝܬܐ : ܠܟ ܫܘܒܚܐ ܒܪ ܪܥܿܐ ܟܠ ܕܦܪܩ ܥܢܗ</l>
                    <l xml:lang="syr">ܡܢ ܕܐ̈ܒܐ ܟܣ̈ܝܐ ܕܒܠܥܘܗܿ ܒܝܫܐ ܘܡܘܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="2"> 
                    <l xml:lang="syr">ܡܘܬܐ ܚܿܘܝ ܫܘܠܛܢܗ ܕܠܟܠ ܙܿܟܐ </l>
                    <l xml:lang="syr">ܣܛܢܐ ܚܿܘܝ ܢܟܠܗ ܕܠܟܠ ܡܚܿܛܐ </l>
                    
                </lg>
                <lg type="stanza" n="3"> 
                    <l xml:lang="syr">ܠܟ ܒܝܫܐ ܐܝܢܐ ܕܨܒܿܐ ܠܚܘܕ ܫܿܡܥ ܠܟ </l>
                    <l xml:lang="syr">ܠܝ ܕܨܒܿܐ ܘܕܠܐ ܨܒܿܐ ܨܐܕܝ ܐܬܿܝܢ </l>
                    
                </lg>
                <lg type="stanza" n="4"> 
                    <l xml:lang="syr">ܠܟ ܡܘܬܐ ܩܛܝܪܐ ܗܘ ܒܠܚܘܕ ܕܛܪܘܢܘܬܐ </l>
                    <l xml:lang="syr">ܠܝ ܕܝܢ ܦܚ̈ܐ ܐܦ ܢܫ̈ܒܐ ܕܥܪܝܡܘܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="5"> 
                    <l xml:lang="syr">ܫܡܼܥ ܒܝܼܫܐ ܕܐܝܢܐ ܕܥܪܝܡ ܢܝܪܟ ܬܒܪܗ</l>
                    <l xml:lang="syr">ܠܐ ܕܝܢ ܐܝܬ ܐܝܢܐ ܕܡܫܟܚ ܡܪܕ ܡܢ ܢܝܪܝ</l>
                    
                </lg>
                <lg type="stanza" n="6"> 
                    <l xml:lang="syr">ܐܢܬ ܡܘܬܐ ܒܐܝܢܐ ܕܟܪܝܗ ܚܝܠܟ ܒܩܝܬ </l>
                    <l xml:lang="syr">ܐܢܐ ܕܝܢ ܒܚ̈ܠܝܡܐ ܝܬܝܪ ܡܬܓܒܪ ܐܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="7"> 
                    <l xml:lang="syr">ܒܝܫܐ ܠܐ ܫܠܝܛ ܥܠ ܟܠ ܕܡܿܨܚܐ ܠܗ</l>
                    <l xml:lang="syr">ܠܝ ܕܠܛܢܝ ܕܠܐܛ ܠܝ ܠܐܝ̈ܕܝ ܐܿܬܝܢ </l>
                    
                </lg>
                <lg type="stanza" n="8"> 
                    <l xml:lang="syr">ܐܢܬ ܡܘܬܐ ܡܢ ܐܠܗܐ ܚܝܠܐ ܩܒܠܬ</l>
                    <l xml:lang="syr">ܠܝ ܒܠܚܘܕ ܕܠܐ ܡܥܕܪ ܠܝ ܟܕ ܡܚܿܛܐ ܐܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="9"> 
                    <l xml:lang="syr">ܐܢܬ ܒܝܫܐ ܐܝܟ ܚܠܫܐ ܦܚ̈ܐ ܨܠܝܬ</l>
                    <l xml:lang="syr">ܘܐܝܟ ܡܠܟܐ ܐܢܐ ܒܫܘܠܛܢܐ ܡܬܚܫܚ ܐܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="10"> 
                    <l xml:lang="syr">ܣܟܠ ܐܢܬ ܗܘ ܡܘܬܐ ܠܡܕܥ ܕܟܡܐ ܪܒ ܐܢܐ</l>
                    <l xml:lang="syr">ܕܠܚܐܪܘܬܐ ܡܫܛܠܬܐ ܣܦܩܬ ܕܐܨܘܕ</l>
                    
                </lg>
                <lg type="stanza" n="11"> 
                    <l xml:lang="syr">ܐܢܬ ܒܝܫܐ ܐܝܟ ܣܪܘܚܐ ܗܐ ܚܕܪ ܐܢܬ </l>
                    <l xml:lang="syr">ܐܢܐ ܐܝܟ ܐܪܝܐ ܬܒܿܪ ܐܢܐ ܘܠܐ ܩܿܢܛ ܐܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="12"> 
                    <l xml:lang="syr">ܠܟ ܡܘܬܐ ܠܝܬ ܕܦܿܠܚ ܐܦ ܠܐ ܕܣܿܓܕ </l>
                    <l xml:lang="syr">ܠܝ ܒܕܒ̈ܚܐ ܡ̈ܠܟܐ ܦܠܚܘܢܝ ܐܝܟ ܠܐܠܗܐ </l>
                    
                </lg>
                <lg type="stanza" n="13"> 
                    <l xml:lang="syr">ܠܡܘܬܐ ܣ̈ܓܝܐܐ ܩܿܪܝܢ ܐܝܟ ܕܠܛܿܒܐ </l>
                    <l xml:lang="syr">ܠܟ ܒܝܫܐ ܠܟ ܐܝܬ ܕܩܪܟ ܐܘ ܩܿܪܐ ܠܟ</l>
                    
                </lg>
                <lg type="stanza" n="14"> 
                    <l xml:lang="syr">ܠܐ ܪܓܝܫ ܐܢܬ ܡܘܬܐ ܒܗܕܐ ܕܟܡܐ ܐܢܘܢ </l>
                    <l xml:lang="syr">ܕܒܐܣܟܝܡ ܐܣܟܝܡ ܩܪܝܢ ܠܝ ܘܡܢܩܝܢ ܠܝ</l>
                    
                </lg>
                <lg type="stanza" n="15"> 
                    <l xml:lang="syr">ܣܢܐ ܗܘ ܫܡܟ ܐܘ ܣܛܢܐ </l>
                    <l xml:lang="syr">ܠܐ ܬܫܦܪܝܗܝ ܠܫܡܟ ܟܠ ܠܐܛ ܠܗ ܟܣܐ ܨܥܪܟ</l>
                    
                </lg>
                <lg type="stanza" n="16"> 
                    <l xml:lang="syr">ܐܕܢܟ ܡܘܬ ܝܩܝܪܐ ܕܠܐ ܫܡܿܥ ܐܢܬ </l>
                    <l xml:lang="syr">ܕܟܠ ܐܢܫ ܥܠܝܟ ܗܘ ܥܿܘܐ ܛܿܫܐ ܢܦܫܟ</l>
                    
                </lg>
                <lg type="stanza" n="17"> 
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܓܗܠܝܢ ܐ̈ܦܝ ܒܒܪܝܬܐ ܠܐ ܓܝܪ ܢܟܠܬ ܐܟܘܬܟ</l>
                    <l xml:lang="syr">ܕܕܠܐ ܢܟ̈ܠܐ ܠܐ ܒܐܿܬ ܐܢܬ</l>
                    
                    
                </lg>
                <lg type="stanza" n="18"> 
                    <l xml:lang="syr">ܠܘ ܡܕܡ ܝܬܝܪ ܐܫܟܚܬ ܐܝܟ ܫܪܝܪܐ </l>
                    <l xml:lang="syr">ܕܣܢܝܬ ܗܘ ܐܦ ܐܢܬ ܐܟܘܬܝ ܠܒ̈ܢܝ ܐܢܫܐ </l>
                    
                </lg>
                <lg type="stanza" n="19"> 
                    <l xml:lang="syr">ܡܢܝ ܡܕܚܠ ܕܚܿܠ ܟܠ ܐܢܫ ܐܝܟ ܡܢ ܡܪܐ</l>
                    <l xml:lang="syr">ܠܟ ܕܝܢ ܡܣܢܐ ܗܘ ܣܿܢܝܢ ܠܟ ܐܝܟ ܕܠܒܝܫܐ </l>
                    
                </lg>
                <lg type="stanza" n="20"> 
                    <l xml:lang="syr">ܠܟ ܡܘܬܐ ܣܢܝܢ ܠܫܡܟ ܐܦ ܠܥܒܿܕܟ</l>
                    <l xml:lang="syr">ܫܡܝ ܕܝܠܝ ܣܼܢܐ ܘܐܪ̈ܓܝܓܬܝ ܣܿܓܝ ܐܪ̈ܚܝܡܢ</l>
                    
                </lg>
                <lg type="stanza" n="21"> 
                    <l xml:lang="syr">ܠܡܪܬ ܫ̈ܢܐ ܡܬܗܦܟܐ ܗܿܝ ܚܠܝܘܬܟ</l>
                    <l xml:lang="syr">ܬܘܬ ܢܦܫܐ ܠܘܝܐ ܟܠܫܥ ܠܪ̈ܓܝܓܬܟ</l>
                    
                </lg>
                <lg type="stanza" n="22"> 
                    <l xml:lang="syr">ܫܝܘܠ ܣܢܝܐ ܕܠܝܬ ܒܓܘܗܿ ܐܦ ܠܐ ܬܘܬܐ</l>
                    <l xml:lang="syr">ܗܘܬܐ ܕܒܠܥܬ ܐܦ ܟܡܬ ܥܠ ܟܠ ܙܘ̈ܥܝܢ </l>
                    
                </lg>
                <lg type="stanza" n="23"> 
                    <l xml:lang="syr">ܫܝܘܠ ܨܡܪܬܐ ܡܬܢܚܿܡ ܟܠ ܕܢܦܼܠ ܒܗܿ</l>
                    <l xml:lang="syr">ܚܛܝܬܐ ܗܘ ܣܢܝܐ ܕܦܣܩܬܗ ܣܒܪܗ ܕܐܢܫܐ </l>
                    
                </lg>
                <lg type="stanza" n="24"> 
                    <l xml:lang="syr">ܐܦܢ ܟܪܝܐ ܠܝ ܒܬܝ̈ܒܐ ܝܗܒܬ ܐܬܪܐ </l>
                    <l xml:lang="syr">ܦܣܩܬܝܗܝ ܣܒܪܗ ܕܚܛܝܐ ܕܡܝܬ ܒܚܛܗ̈ܘܗܝ</l>
                    
                </lg>
                <lg type="stanza" n="25"> 
                    <l xml:lang="syr">ܡܢ ܨܐܕܝܟ ܗܘ ܡܩܕܡ ܗܘܐ ܘܦܣܝܩ ܣܒܪܗ</l>
                    <l xml:lang="syr">ܕܐܠܘ ܐܢܬ ܠܐ ܐܚܛܝܬܝܗܝ ܫܦܝܪ ܥܿܢܕ</l>
                    
                </lg>
                <lg type="stanza" n="26"> 
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܒܪܝܟ ܕܐܪܡܝ ܐܢܘܢ ܒܚ̈ܕܕܐ ܠܥ̈ܒܕܐ ܠܝ̈ܛܐ </l>
                    <l xml:lang="syr">ܕܢܚܙܐ ܒܗܘܢ ܐܝܟ ܕܚܙܘ ܒܢ ܐܦ ܐܗܠܘ ܒܢ</l>
                    
                </lg>
                <lg type="stanza" n="27"> 
                    <l xml:lang="syr">ܪܗܒܘܢܐ ܗܘ ܗܢܐ ܐܚ̈ܝ ܕܚܙܝܢ ܒܗܘܢ </l>
                    <l xml:lang="syr">ܕܬܘܒ ܐܝܬ ܠܗ ܕܒܗܘܢ ܢܚܙܐ ܡܐ ܕܐܬܢܚܡܢ</l>
                    
                </lg>
            </div>
