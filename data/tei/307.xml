        <body>
            <div type="title" n="53">
                <ab xml:lang="en">Hymn LIII</ab>
            </div>
            <div type="body">
                <lg type="superscript">
                    <l xml:lang="syr">ܒ ܒܪ ܩܠܗ </l>
                </lg>
                <lg type="stanza" n="1"> 
                    <l xml:lang="syr">ܬܘ ܢܫܡܥ ܟܕ ܡܬܟܫܝܢ ܥܠ ܙܟܘܬܐ</l>
                    <l xml:lang="syr">ܚܝ̈ܒܐ ܕܠܐ ܙܟܘ ܡܢ ܡܬܘܡ ܐܦ ܠܐ ܙܟܿܝܢ </l>
                    
                    
                    
                </lg>
                <lg type="stanza" n="2"> 
                    <l xml:lang="syr">ܡܘܬܐ ܠܒܝܫܐ ܐܡܪ ܠܗ ܠܚܪܬܐ ܗܝ ܙܟܘܬܒ</l>
                    <l xml:lang="syr">ܕܡܘܬܐ ܗܘ ܐܚܝܕ ܫܘܠܡܐ ܐܝܟ ܙܟܝܐ </l>
                    
                </lg>
                <lg type="stanza" n="3"> 
                    <l xml:lang="syr">ܡܘܬܐ ܫܪܝܪܐ ܗܢܘܢ ܐܢ ܡܫܟܚ ܐܢܬ</l>
                    <l xml:lang="syr">ܕܬܡܝܬܝܘܗܝ ܠܐܢܫ ܟܕ ܚܝ ܒܪ̈ܓܝܓܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="4"> 
                    <l xml:lang="syr">ܐܢܐ ܕܡܝܬܝܢ ܗܐ ܚܿܘܐ ܐܢܐ ܛ̈ܒܐ ܘܒܝܼܫ̈ܐ </l>
                    <l xml:lang="syr">ܙܕܝܩ̈ܐ ܕܒܣܪܘܟ ܒܝܫܐ ܠܝ ܠܐ ܒܣܪܘܢܝ</l>
                    
                </lg>
                <lg type="stanza" n="5"> 
                    <l xml:lang="syr">ܗܕܐ ܡܝܬܘܬܐ ܕܦܓܪܐ ܫܢܬ ܙܒܢܐ ܗܝ</l>
                    <l xml:lang="syr">ܠܐ ܬܣܒܪ ܡܘܬܐ ܕܡܘܬܐ ܐܢܬ ܕܐܝܟ ܛܠܠܐ ܐܢܬ</l>
                    
                </lg>
                <lg type="stanza" n="6"> 
                    <l xml:lang="syr">ܠܟ ܒܝܫܐ ܙܟܐܘܟ ܟܐ̈ܢܐ ܐܦ ܙܟܿܝܢ ܠܟ </l>
                    <l xml:lang="syr">ܐܢܬ ܕܝܢ ܠܐܝܠܝܢ ܕܙܟܐܘܟ ܗܐ ܙܟܿܐ ܐܢܐ </l>
                    
                    <l>܀܀܀</l>
                </lg>
                <lg type="stanza" n="7"> 
                    <l xml:lang="syr">ܐܦ ܠܟܐ̈ܢܐ ܕܡܡܝܬ ܐܢܬ ܠܘ ܕܝܠܟ ܗܝ</l>
                    <l xml:lang="syr">ܒܥܠܬ ܐܕܡ ܗܿܘ ܕܙܟܝܬ ܐܫܬܝܘ ܟܣܐ</l>
                    
                </lg>
                <lg type="stanza" n="8"> 
                    <l xml:lang="syr">ܗܐ ܫܝܘܠ ܡܠܝܐ ܣܕܘܡ̈ܝܐ ܘܐܬܘܪ̈ܝܐ </l>
                    <l xml:lang="syr">ܘܓܢܒܪ̈ܐ ܕܒܛܘܦܢܐ ܡܢܘ ܕܐܟܘܬܝ</l>
                    
                </lg>
                <lg type="stanza" n="9"> 
                    <l xml:lang="syr">ܗܠܝܢ ܟܠܗܘܢ ܐܘ ܡܘܬܐ ܠܝ ܗܘ ܩܛܝܠܝܢ</l>
                    <l xml:lang="syr">ܐܢܐ ܐܢܐ ܕܚܛܝܬ ܐܢܘܢ ܐܝܟ ܕܢܣܘܦܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="10"> 
                    <l xml:lang="syr">ܝܘܣܦ ܕܙܟܼܟ ܙܟܝܬܗ ܐܘ ܣܛܢܐ </l>
                    <l xml:lang="syr">ܒܬܘܢܐ ܙܟܟ ܘܒܩܒܪܐ ܙܟܝܬ ܘܐܪܡܝܬܗ</l>
                    
                </lg>
                <lg type="stanza" n="11"> 
                    <l xml:lang="syr">ܡܘܫܐ ܕܙܟܟ ܐܘ ܡܘܬܐ ܒܪܣܣ ܕܡܐ </l>
                    <l xml:lang="syr">ܙܟܟ ܒܡܨܪܝܢ ܘܥܠ ܟܐܦܐ ܡܢܘ ܕܙܟܝܗܝ</l>
                    
                </lg>
                <lg type="stanza" n="12"> 
                    <l xml:lang="syr">ܐܠܝܐ ܕܠܐ ܕܚܼܠ ܡܢܟ ܐܘ ܣܛܢܐ </l>
                    <l xml:lang="syr">ܡܢ ܩܕܡ ܐܝܙܒܠ ܥܪܩ ܗܘܐ ܕܒܝ ܕܚܠܬܗ</l>
                    
                </lg>
                <lg type="stanza" n="13"> 
                    <l xml:lang="syr">ܐܗܪܘܢ ܕܟܠܟ ܐܘ ܡܘܬܐ ܒܥܛܪܐ ܕܒܣܡ̈ܐ </l>
                    <l xml:lang="syr">ܩܕܫ̈ܐ ܕܕܗܒܐ ܝܗܒܬ ܠܗ ܘܚܫܠ ܥܓܠܐ </l>
                    
                </lg>
                <lg type="stanza" n="14"> 
                    <l xml:lang="syr">ܠܐܝܓܘܢܐ ܢܚܬܬ ܥܡ ܐܝܘܒ ܘܙܟܟ ܘܣܠܼܩ</l>
                    <l xml:lang="syr">ܐܢܐ ܕܝܢ ܡܢ ܒܬܪ ܕܙܟܟ ܟܢ ܗܘ ܙܟܝܬܗ</l>
                    
                    
                </lg>
                <lg type="stanza" n="15"> 
                    <l xml:lang="syr">ܕܘܝܕ ܕܟܠܝܗܝ ܒܣܩܗ ܠܗܿܘ ܡܘܬܢܐ </l>
                    <l xml:lang="syr">ܥܠ ܐܓܪܐ ܙܟܝܬ ܠܗܿܘ ܕܙܟܼܐ ܠܓܘܠܝܕ </l>
                    
                </lg>
                <lg type="stanza" n="16"> 
                    <l xml:lang="syr">ܝܗܘ ܕܥܩܼܪ ܒܝܬ ܒܥܠܐ ܗܝܟܠ ܒܝܫܐ</l>
                    <l xml:lang="syr">ܕܢܥܩܘܪ ܠܫܝܘܠ ܠܐ ܐܫܟܚ ܒܝܪܬ ܡܠܟܘܬܝ</l>
                    
                </lg>
                <lg type="stanza" n="17"> 
                    <l xml:lang="syr">ܫܠܝܡܘܢ ܕܐܥܕܝ ܡܢ ܦܘܡܟ ܛܠܝܐ ܒܕܝܢܼܐ </l>
                    <l xml:lang="syr">ܦܥܠܐ ܥܒܕܬܗ ܒܣܝܒܘܬܗ ܠܥܠܘ̈ܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="18"> 
                    <l xml:lang="syr">ܫܡܘܐܝܠ ܕܒܕܗܒܐ ܒܣܪܟ ܐܘ ܣܛܢܐ </l>
                    <l xml:lang="syr">ܐܢܐ ܙܟܝܬܗ ܠܗܿܘ ܙܟܝܐ ܙܟܼܐ ܫܘܚܕܐ </l>
                    
                </lg>
                <lg type="stanza" n="19"> 
                    <l xml:lang="syr">ܫܡܫܘܢ ܕܒܓܘܪܝܐ ܕܐܪܝܐ ܒܣܪܟ ܡܘܬܐ</l>
                    <l xml:lang="syr">ܒܕܠܝܠܐ ܡܐܢܐ ܕܠܝܠܐ ܒܪܚܝܐ ܟܕܢܬܗ</l>
                    
                </lg>
                <lg type="stanza" n="20"> 
                    <l xml:lang="syr">ܝܘܫܝܐ ܡܢ ܛܠܝܘܬܗ ܫܛܟ ܒܝܫܐ </l>
                    <l xml:lang="syr">ܠܝ ܕܝܢ ܐܦܠܐ ܒܣܝܒܘܬܗ ܐܫܟܚ ܚܣܢܢܝ</l>
                    
                </lg>
                <lg type="stanza" n="21"> 
                    <l xml:lang="syr">ܚܙܩܝܐ ܚܣܢܟ ܡܘܬܐ ܕܙܟܐ ܠܩܨܐ </l>
                    <l xml:lang="syr">ܕܘܕܬܗ ܕܫܒܼܩ ܬܗܪܐ ܘܚܿܘܝ ܓܙܘ̈ܗܝ</l>
                    
                </lg>
                <lg type="stanza" n="22"> 
                    <l xml:lang="syr">ܝܘܚܢܢ ܕܙܟܟ ܒܝܼܫܐ ܘܚܿܣܝ ܘܐܥܡܕ</l>
                    <l xml:lang="syr">ܐܕܥܟܬܗ ܠܗܿܘ ܫܪܓܐ ܕܠܟ ܦܪܣܝ ܗܘܐ</l>
                    
                </lg>
                <lg type="stanza" n="23"> 
                    <l xml:lang="syr">ܫܡܥܘܢ ܙܟܟ ܕܐܚܝ ܗܘܐ ܠܛܘܒܢܝܬܐ </l>
                    <l xml:lang="syr">ܒܐܢܬܬܐ ܙܟܟ ܘܒܝܕ ܐܢܬܬܐ ܙܟܝܬ ܘܐܟܦܪܬܗ</l>
                    
                </lg>
                <lg type="stanza" n="24"> 
                    <l xml:lang="syr">ܫܠܝ̈ܚܐ ܘܢܒ̈ܝܐ ܐܟܚܕ ܠܛܘܟ ܡܘܬܐ </l>
                    <l xml:lang="syr">ܕܐܝܟܐ ܗܝ ܙܟܘܬܗ ܕܡܘܬܐ ܘܥܘܩܣܗܿ ܕܫܝܘܠ</l>
                    
                </lg>
                <lg type="stanza" n="25"> 
                    <l xml:lang="syr">ܠܡܪܟ ܒܫܝܘܠ ܚܒܫܬܝܗܝ ܥܒܼܕܐ ܠܝܛܐ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܣܢܟ ܐܠܗܐ ܐܦ ܐܢܫܐ ܫܠܐ ܢܦܫܟ</l>
                    
                </lg>
                <lg type="stanza" n="26"> 
                    <l xml:lang="syr">ܨܒܝܢܗ ܗܘ ܕܡܚܐ ܟܠ ܚܒܫܗ ܒܫܝܘܠ</l>
                    <l xml:lang="syr">ܐܢܬ ܗܘ ܩܪܝܬܝܗܝ ܠܗܕܐ ܕܠܐܕܡ ܐܚܛܝܬ</l>
                    
                </lg>
                <lg type="stanza" n="27"> 
                    <l xml:lang="syr">ܟܢܬܗ ܕܢܒܠ ܕܒܕܒܪܐ ܨܥܿܪ ܡܪܗ </l>
                    <l xml:lang="syr">ܚܪܡ ܦܘܡܟ ܗܿܘ ܕܐܡܼܪ ܠܗ ܕܦܠ ܘܣܓܘܕ ܠܝ</l>
                    
                    
                </lg>
            </div>
        </body>
