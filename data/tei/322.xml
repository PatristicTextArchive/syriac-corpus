        <body>
            <div type="title" n="68">
                <ab xml:lang="en">Hymn LXVIII</ab>
            </div>
            <div type="body">
                <lg type="superscript">
                    <l xml:lang="syr">ܝܙ ܒܪ ܩܠܗ</l>
                </lg>
                <lg type="stanza" n="1"> 
                    <l xml:lang="syr">ܐܘ ܡܘܬܐ ܠܐ ܬܫܬܥܠܐ ܥܠ ܙܕܝ̈ܩܐ </l>
                    <l xml:lang="syr">ܒ̈ܢܝ ܡܪܟ ܕܒܦܘܩܕܢܗ ܐܬܝܢ ܨܐܕܝܟ</l>
                    
                </lg>
                
                <lg type="refrain">
                    <l xml:lang="syr">ܥܘܢܝܬܐ : ܠܟ ܫܘܒܚܐ ܕܒܦܘܩܕܢܟ ܐܡܠܟ ܡܘܬܐ </l>
                    <l xml:lang="syr">ܘܒܢܘܚܡܟ ܡܫܬܦܠ ܐܝܟ ܡܣܟܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="2"> 
                    <l xml:lang="syr">ܒܗܕܐ ܝܬܝܪ ܝܪܒ ܐܢܐ ܐܝܟ ܡܠܬܟܘܢ </l>
                    <l xml:lang="syr">ܕܟܕ ܥܒܼܕܐ ܐܢܐ ܕܐܫ ܐܢܐ ܠܒ̈ܢܝ ܚܐܪ̈ܐ </l>
                    
                </lg>
                <lg type="stanza" n="3"> 
                    <l xml:lang="syr">ܓܒܐ ܗܘܐ ܐܕܡ ܘܡܫܠܛ ܘܬܚܝܬ ܢܝܪܗ </l>
                    <l xml:lang="syr">ܐܢܬ ܡܘܬܐ ܘܒܝܫܐ ܟܢܬܟ ܥܒܼ̈ܕܐ ܗܘܝܬܘܢ </l>
                    <l>܀܀܀</l>
                </lg>
                <lg type="stanza" n="4"> 
                    <l xml:lang="syr">ܕܫܘܒܗܪܢ ܗܝ ܕܗܐ ܥܒ̈ܕܐ ܗܘܘ ܡܪ̈ܝܐ </l>
                    <l xml:lang="syr">ܡܘܬܐ ܘܣܛܢܐ ܟܢܬܗ ܕܫܘܗܝ ܠܐܕܡ </l>
                    
                </lg>
                <lg type="stanza" n="5"> 
                    <l xml:lang="syr">ܗܐ ܫܦܠܟ ܐܦ ܕܟܢܬܟ ܥܒ̈ܕܐ ܟܦܝܪ̈ܐ </l>
                    <l xml:lang="syr">ܕܚܢܘܟ ܕܫ ܗܘܐ ܠܬܪ̈ܝܟܘܢ ܘܦܼܪܚ ܘܐܡܠܟ </l>
                    
                </lg>
                <lg type="stanza" n="6"> 
                    <l xml:lang="syr">ܘܐܢ ܗܼܘ ܕܚܢܘܟ ܐܟܪܝ ܠܢ ܡܬܒܝܐ ܐܢܐ </l>
                    <l xml:lang="syr">ܕܥܠ ܥܦܪܗ ܕܢܘܚ ܒܫܝܘܠ ܗܐ ܕܐܫ ܐܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="7"> 
                    <l xml:lang="syr">ܙܘܥ ܡܘܬܐ ܡܢ ܒܪܢܫܐ ܕܐܦ ܟܕ ܥܒܕ ܗܘ </l>
                    <l xml:lang="syr">ܢܝܪܐ ܕܡܪܘܬܗ ܡܡܠܟ ܥܠ ܒܪ̈ܝܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="8"> 
                    <l xml:lang="syr">ܚܿܕܐ ܐܢܐ ܕܠܘ ܠܒܨܝܪ̈ܐ ܡܕܝܢ ܙܟܝܬ </l>
                    <l xml:lang="syr">ܟܡܐ ܕܢܐܪܒ ܓܝܪ ܚܝܒܐ ܪܒ ܗܘ ܕܙܟܝܗܝ</l>
                    
                </lg>
                <lg type="stanza" n="9"> 
                    <l xml:lang="syr">ܛܒ ܢܨܪ ܩܠܟ ܡܘܬܐ ܥܠ ܙܕܝ̈ܩܐ </l>
                    <l xml:lang="syr">ܚܢܘܟ ܓܝܪ ܘܐܠܝܐ ܬܒܪܘ ܙܘܓܐ ܕܓ̈ܦܝܟ </l>
                    
                </lg>
                <lg type="stanza" n="10"> 
                    <l xml:lang="syr">ܝܕܥ ܐܢܐ ܕܬܩܘܠ ܐܒ̈ܠܝ ܥܡ ܒܘ̈ܝܐܝ</l>
                    <l xml:lang="syr">ܚܠܦ ܬܪ̈ܝܢ ܗܐ ܣܓ̈ܝܐܐ ܕܐܬܘ ܘܐܿܬܝܢ </l>
                    
                </lg>
                <lg type="stanza" n="11"> 
                    <l xml:lang="syr">ܟܠ ܕܐܬܐ ܘܐܿܬܐ ܨܐܕܝܟ ܐܝܟ ܬܘܬܒܐ </l>
                    <l xml:lang="syr">ܫܪܐ ܘܡܫܩܠ ܡܢ ܕܝܪܟ ܐܝܟ ܠܥܙܪ</l>
                    
                </lg>
                <lg type="stanza" n="12"> 
                    <l xml:lang="syr">ܠܐ ܬܒܪܢܝ ܗܢܐ ܩܠܐ ܐܝܟ ܡܐ ܕܥܨܒܢܝ</l>
                    <l xml:lang="syr">ܕܠܥܙܪ ܕܡܪܕ ܥܠܝ ܬܘܒ ܫܥܒܕܬܗ</l>
                    
                </lg>
                <lg type="stanza" n="13"> 
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܡܘܬܐ ܐܫܬܐܠ ܘܕܪܘܫ ܕܡ ܐܠܨܬ ܗܘܬ </l>
                    <l xml:lang="syr">ܕܢܬܢܚܡ ܐܢ ܠܘ ܪܙܐ ܨܪ ܢܘܚܡܗ</l>
                    
                </lg>
                <lg type="stanza" n="14"> 
                    <l xml:lang="syr">ܢܗܝܪܝܢ ܐܢܬܘܢ ܠܕܪܫܐ ܐܝܟ ܒ̈ܛܝܠܐ </l>
                    <l xml:lang="syr">ܐܢܐ ܓܝܪ ܒܥܒܿܕܝ ܥܡܿܠ ܐܢܐ ܕܐܦܪܘܫ ܘܐܕܒܪ</l>
                    
                </lg>
                <lg type="stanza" n="15"> 
                    <l xml:lang="syr">ܣܓܝ ܠܡܕܪܫ ܐܬܛܝܒܬ ܡܢܘ ܙܓܪܟ </l>
                    <l xml:lang="syr">ܫܪܪܗ ܕܢܘܚܡܢ ܐܠܨܟ ܒܗ̈ܦܟܬܗ</l>
                    
                </lg>
                <lg type="stanza" n="16"> 
                    <l xml:lang="syr">ܥܒܕܬܘܢܢܝ ܠܟܘܢ ܣܢܝܐ ܟܕ ܠܐ ܣܢܐ ܐܢܐ </l>
                    <l xml:lang="syr">ܐܢܐ ܐܢܐ ܕܡܢܝܚ ܐܢܐ ܣ̈ܒܝܟܘܢ ܘܐ̈ܠܝܨܝܟܘܢ</l>
                    
                </lg>
                <lg type="stanza" n="17"> 
                    <l xml:lang="syr">ܥܒܕܬܘܢܢܝ ܐܝܟ ܣܪܘܚܐ ܐܘ ܡܝܘ̈ܬܐ </l>
                    <l xml:lang="syr">ܐܕܡ ܩܛܠܟܘܢ ܘܐܢܐ ܡܨܛܚܐ ܐܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="18"> 
                    <l xml:lang="syr">ܦܫܝܩܐܝܬ ܐܦܪܣܝܟܘܢ ܥܒܕܐ ܗܘܝܬ ܓܝܪ</l>
                    <l xml:lang="syr">ܘܐܢܬܘܢ ܗܘ ܒܚܛܗ̈ܝܟܘܢ ܐܡܠܟܬܘܢܢܝ</l>
                    
                </lg>
                <lg type="stanza" n="19"> 
                    <l xml:lang="syr">ܨܒܝܢ ܐܕܡ ܐܥܝܪܢܝ ܕܫܠܐ ܗܘܝܬ ܓܝܪ</l>
                    <l xml:lang="syr">ܡܝܬܐ ܗܘܝܬ ܘܐܚܝܬܘܢܢܝ ܕܬܡܘܬܘܢ ܒܝ</l>
                    
                </lg>
                <lg type="stanza" n="20"> 
                    <l xml:lang="syr">ܩܒܠ ܐܢܐ ܡܢ ܟܕܒ̈ܐ ܕܩܼܛܠܘ ܘܟܦܼܪܘ </l>
                    <l xml:lang="syr">ܐܕܡ ܓܝܪ ܩܼܛܠ ܢܦܫܗ ܘܒܝ ܡܬܥܿܕܠ </l>
                    
                </lg>
                <lg type="stanza" n="21"> 
                    <l xml:lang="syr">ܪܝܫ ܗܪܬܐ ܚܘܝܐ ܗܘ ܠܝܛܐ ܕܫܦܝܪ ܚܓܝܪ</l>
                    <l xml:lang="syr">ܕܪܫܦ ܥܠ ܣܡ ܡܨܘܬܐ ܒܝܬ ܠܝ ܘܠܟܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="22"> 
                    <l xml:lang="syr">ܫܒܝܩ ܣܛܢܐ ܘܥܠܝ ܗܘ ܡܬܓܪܝܢ ܐܢܬܘܢ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܙܠܘ ܐܬܟܬܫܘ ܥܡ ܒܝܼܫܐ ܕܗܼܘ ܚܝܒܟܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="23"> 
                    <l xml:lang="syr">ܫܘܬܦܝ ܗܘ ܘܠܐ ܟܿܦܪ ܐܢܐ ܘܕܣܢܐ ܗܘ ܣܓܝ </l>
                    <l xml:lang="syr">ܡܢ ܐܠܨܬ ܕܐܨܛܚܐ ܒܗ ܟܦܝܪ ܒܗ ܡܟܝܠ</l>
                    
                </lg>
                <lg type="stanza" n="24"> 
                    <l xml:lang="syr">ܫܡܼܥܘ ܡ̈ܠܝ ܐܘ ܡܝ̈ܘܬܐ ܘܐܒܝܐܟܘܢ </l>
                    <l xml:lang="syr">ܐܢܐ ܐܥܝܩܬ ܘܐܢܐ ܡܘܕܐ ܒܚܝܬ ܡ̈ܝܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="25"> 
                    <l xml:lang="syr">ܫܪܝ ܓܝܪ ܢܛܿܦ ܒܐ̈ܕܢܝ ܩܠ ܛܘܝܒܐ </l>
                    <l xml:lang="syr">ܕܫܝܦܘܪܐ ܕܣܥܿܪ ܢܦܫܗ ܠܡܝܒܒܘ </l>
                    
                </lg>
                <lg type="stanza" n="26"> 
                    <l xml:lang="syr">ܫܡܥܘ ܡ̈ܠܝ ܘܐܣܓܘ ܡܫܚܐ ܠܠܡܦܐ̈ܕܝܟܘܢ </l>
                    <l xml:lang="syr">ܕܟܠܝܬܐ ܓܝܪ ܡܢ ܨܐܕܝ ܠܐ ܐܝܬ ܠܟܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="27"> 
                    <l xml:lang="syr">ܬܗܘܘܢ ܝܕܥܝܢ ܕܐܦ ܟܕ ܛܒ ܗܠܝܢ ܐܡܪܬ </l>
                    <l xml:lang="syr">ܪܚܝܡܝܢ ܐܢܘܢ ܨܘ̈ܬܝܟܘܢ ܠܨܕܝܗܿ ܕܫܝܘܠ</l>
                    
                </lg>
                <lg type="stanza" n="28"> 
                    <l xml:lang="syr">ܬܩܝܠ ܗܘ ܠܝ ܓܝܪ ܒܪ ܐܢܫܐ ܘܪܒ ܗܘ ܫܝܢܗ</l>
                    <l xml:lang="syr">ܕܪܚܫܐ ܘܢܘ̈ܢܐ ܘܦܪܚܬܐ ܠܘܥܕܗ ܐܿܬܝܢ </l>
                    
                </lg>
                <lg type="stanza" n="29"> 
                    <l xml:lang="syr">ܬܡܗܐ ܕܝܢ ܕܐܦ ܥܠ ܥܝܪ̈ܐ ܚܒܝܒ ܨܘܬܗ </l>
                    <l xml:lang="syr">ܐܦ ܗܼܘ ܒܝܫܼܐ ܠܓܗܢܐ ܠܘܝܬܗ ܒܿܥܐ </l>
                    
                </lg>
                <lg type="stanza" n="30"> 
                    <l xml:lang="syr">ܬܗܘܐ ܠܟܘܢ ܚܝܬ ܡ̈ܝܬܐ ܐܘ ܡ̈ܝܘܬܐ </l>
                    <l xml:lang="syr">ܘܐܢܐ ܕܓܙܝܬ ܐܬܿܓܙܐ ܒܓܘܗܿ ܕܫܝܘܠ</l>
                    
                </lg>
                <lg type="stanza" n="31"> 
                    <l xml:lang="syr">ܬܘܕܝܬܐ ܬܣܩ ܡܢ ܟܠ ܠܟ ܡܿܚܐ ܟܠ </l>
                    <l xml:lang="syr">ܕܡܢ ܟܠ ܕܘܟܐ ܡܟܢܫ ܐܢܬ ܥܦܪܗ ܕܐܕܡ</l>
                    <l>܀܀܀</l>
                    
                    
                </lg>
            </div>
