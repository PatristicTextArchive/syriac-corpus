        <body>
            <div type="title" n="77">
                <ab xml:lang="en">Hymn LXXVII</ab>
            </div>
            <div type="body">
                <lg type="superscript">
                    <l xml:lang="syr">ܕ ܒܪ ܩܠܗ </l>
                </lg>
                <lg type="stanza" n="1"> 
                    <l xml:lang="syr">ܒܥܢܝܕܐ ܢܚܙܝܘܗܝ ܠܥܘܡܪܢ ܕܐܝܟ ܚܠܡܐ ܗܘ </l>
                    <l xml:lang="syr">ܐܢ ܓܝܪ ܩܢܝܐ </l>
                    <l xml:lang="syr">ܗܐ ܛܠܩ ܐܝܟ ܚܙܘܐ </l>
                    <l xml:lang="syr">ܚܕ ܟܡܐ ܩܢܝܢܗ </l>
                    
                </lg>
                
                <lg type="refrain">
                    <l xml:lang="syr">ܥܘܢܝܬܐ : ܐܢܬ ܡܪܝ ܢܚܡܝܗܝ</l>
                    
                </lg>
                <lg type="stanza" n="2"> 
                    <l xml:lang="syr">ܒܗܢܐ ܟܝܬ ܝܘܡܐ </l>
                    <l xml:lang="syr">ܕܒܛܠ ܪܘܟܒܢ</l>
                    <l xml:lang="syr">ܬܘ ܢܒܼܛܠ ܢܚܙܝܘܗܝ </l>
                    <l xml:lang="syr">ܠܥܠܡܐ ܕܒܛܠ ܠܗ</l>
                    <l xml:lang="syr">ܠܡܪܢ ܬܘ ܢܦܠܘܚ</l>
                    
                </lg>
                <lg type="stanza" n="3"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܡܫܿܬܩ </l>
                    <l xml:lang="syr">ܠܦܘܡܐ ܘܠܐ ܢܨܿܪ</l>
                    <l xml:lang="syr">ܕܓܙ ܡܒܘܥ ܡ̈ܠܘܗܝ </l>
                    <l xml:lang="syr">ܘܡܥܝܢ ܦܬܓܡ̈ܘܗܝ</l>
                    <l xml:lang="syr">ܒܡܠܬܟ ܢܬܒܝܐ </l>
                    <l>܀܀܀</l>
                </lg>
                <lg type="stanza" n="4"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܣܿܟܪ </l>
                    <l xml:lang="syr">ܐ̈ܕܢܐ ܦܬܝܚ̈ܬܐ </l>
                    <l xml:lang="syr">ܕܫܥ ܐܢܝܢ ܡܘܬܐ </l>
                    <l xml:lang="syr">ܘܗ̈ܘܝ ܚܪ̈ܫܬܐ </l>
                    <l xml:lang="syr">ܒܩܠܟ ܢܬܦܬܚܢ</l>
                    
                </lg>
                <lg type="stanza" n="5"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܡܥܡܨ </l>
                    <l xml:lang="syr">ܥܝ̈ܢܐ ܦܐܝ̈ܬܐ </l>
                    <l xml:lang="syr">ܫܪ̈ܓܐ ܘܠܡܦܐ̈ܕܐ </l>
                    <l xml:lang="syr">ܕܗܝܟܠ ܢܦܫ̈ܬܐ </l>
                    <l xml:lang="syr">ܢܚܙܝܢ ܢܗܝܪܟ </l>
                    
                </lg>
                <lg type="stanza" n="6"> 
                    <l xml:lang="syr">ܥܝ̈ܢܐ ܐܝܟ ܟܘ̈ܐ </l>
                    <l xml:lang="syr">ܣܟܪ ܐܦ ܡܚܫܟ</l>
                    <l xml:lang="syr">ܠܒܝܬܐ ܕܫܒܩܬܗ </l>
                    <l xml:lang="syr">ܬܘܬܒܬܐ ܢܦܫܐ </l>
                    <l xml:lang="syr">ܢܩܒܠܗܿ ܒܢܘܚܡܐ </l>
                    
                </lg>
                <lg type="stanza" n="7"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܠܐ̈ܝܕܐ </l>
                    <l xml:lang="syr">ܦܿܟܪ ܘܡܿܫܠܐ </l>
                    <l xml:lang="syr">ܫܿܪܝ ܘܠܐ ܫܿܠܡ </l>
                    <l xml:lang="syr">ܘܫܒܼܩ ܚ̈ܢܓܬܐ </l>
                    <l xml:lang="syr">ܒܚܝܠܟ ܢܬܠܒܒ</l>
                    
                </lg>
                <lg type="stanza" n="8"> 
                    <l xml:lang="syr">ܡܓܪܣ ܗ̈ܠܟܬܐ </l>
                    <l xml:lang="syr">ܡܟܦܪ ܥܩܒ̈ܬܐ </l>
                    <l xml:lang="syr">ܠܝܬ ܬܘܒ ܕܘܪ̈ܟܬܗ </l>
                    <l xml:lang="syr">ܕܦܣܼܩ ܐܘܪ̈ܚܬܗ</l>
                    <l xml:lang="syr">ܢܕܘܨܢ ܒܚܠܘܠܟ </l>
                    
                </lg>
                <lg type="stanza" n="9"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܬܟܣ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܢܫܡܬܐ ܕܠܐ ܬܥܘܠ</l>
                    <l xml:lang="syr">ܡܢ ܓܘ ܐܠܨ ܠܗܿ </l>
                    <l xml:lang="syr">ܕܬܦܘܩ ܪܕܦ ܠܗܿ</l>
                    <l xml:lang="syr">ܬܪܕܦܝܘܗܝ ܒܢܘܚܡܐ </l>
                    
                </lg>
                <lg type="stanza" n="10"> 
                    <l xml:lang="syr">ܡܚܫܒܬܗ ܕܐܝܬܝܗܿ </l>
                    <l xml:lang="syr">ܓܝܓܠ ܟܠ ܙܘ̈ܥܝܢ </l>
                    <l xml:lang="syr">ܒܬܡܗܐ ܐܣܪ ܠܗܿ </l>
                    <l xml:lang="syr">ܒܫܬܩܐ ܡܫܠܐ ܠܗܿ</l>
                    <l xml:lang="syr">ܬܫܘܐ ܠܡܠܟܘܬܟ</l>
                    
                </lg>
                <lg type="stanza" n="11"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܓܘܢܐ </l>
                    <l xml:lang="syr">ܒܓܘܢܐ ܡܬܚܠܦ</l>
                    <l xml:lang="syr">ܚܠܦ ܗܿܘ ܕܚ̈ܝܐ </l>
                    <l xml:lang="syr">ܕܡ̈ܝܬܐ ܡܬܥܿܛܦ</l>
                    <l xml:lang="syr">ܒܢܘܗܪܟ ܢܿܙܕܗܐ </l>
                    
                </lg>
                <lg type="stanza" n="12"> 
                    <l xml:lang="syr">ܬܩܘܠܘ ܓ̈ܠܐ ܘܦܓܪ̈ܐ </l>
                    <l xml:lang="syr">ܘܚܙܘ ܠܛܿܒܐ </l>
                    <l xml:lang="syr">ܕܐܢ ܓ̈ܠܐ ܡܢܚܿܡ </l>
                    <l xml:lang="syr">ܟܡܐ ܟܝܬ ܦܓܪ̈ܝܟܘܢ </l>
                    <l xml:lang="syr">ܢܚܐ ܠܬܫܒܘܚܬܗ</l>
                    
                </lg>
                <lg type="stanza" n="13"> 
                    <l xml:lang="syr">ܫ̈ܥܐ ܣܕܝܪ̈ܢ ܐܢܝܢ </l>
                    <l xml:lang="syr">ܚܕܐ ܚܕܐ ܒܥܕܢܗܿ</l>
                    <l xml:lang="syr">ܗܟܢ ܣܕܝܪ̈ܝܢ </l>
                    <l xml:lang="syr">ܙܒ̈ܢܐ ܠܡܪܐ ܟܠ</l>
                    <l xml:lang="syr">ܫܘܒܚܐ ܠܡܬܩܢ ܟܠ</l>
                    
                </lg>
                <lg type="stanza" n="14"> 
                    <l xml:lang="syr">ܫܥܬܐ ܗܿܝ ܕܥܣܪ </l>
                    <l xml:lang="syr">ܠܐ ܩܕܡܐ ܠܕܫܬ </l>
                    <l xml:lang="syr">ܗܟܢ ܠܐ ܬܥܘܢ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܙܒ̈ܢܐ ܩܕܡ ܙܒ̈ܢܐ </l>
                    <l xml:lang="syr">ܒܪܝܟ ܗܘ ܡܛܟܣ ܟܠ</l>
                    
                </lg>
                <lg type="stanza" n="15"> 
                    <l xml:lang="syr">ܫܦܝܪ ܬܘܒ ܣܝܡܝܢ </l>
                    <l xml:lang="syr">ܝܪ̈ܚܐ ܠܛܘܟܣܐ </l>
                    <l xml:lang="syr">ܘܠܐ ܩܕܡ ܝܪܚܐ </l>
                    <l xml:lang="syr">ܠܝܪ̈ܚܐ ܒܡܢܝܢܐ </l>
                    <l xml:lang="syr">ܒܪܝܟ ܗܘ ܒܛܘܟ̈ܣܘܗܝ</l>
                    
                </lg>
                <lg type="stanza" n="16"> 
                    <l xml:lang="syr">ܫܓܝܫܐ ܗܝ ܕܠܬܫܪܝܢ </l>
                    <l xml:lang="syr">ܢܝܣܢ ܗܘܐ ܩܕܡ </l>
                    <l xml:lang="syr">ܘܫܓܝܫ ܡܿܢ ܕܐܡܿܪ </l>
                    <l xml:lang="syr">ܕܐܝܟܘ ܢܘܚܡܐ </l>
                    <l xml:lang="syr">ܒܪܝܟ ܗܘ ܣܕܪ ܟܘܠ</l>
                    
                </lg>
                <lg type="stanza" n="17"> 
                    <l xml:lang="syr">ܫܓܝܫܐ ܗܝ ܕܠܙܪܥܐ </l>
                    <l xml:lang="syr">ܚܨܕܐ ܗܘܐ ܩܕܡ</l>
                    <l xml:lang="syr">ܘܗܟܢ ܕܠܡܘܬܐ </l>
                    <l xml:lang="syr">ܢܩܕܘܡ ܢܘܚܡܐ </l>
                    <l xml:lang="syr">ܫܘܒܚܐ ܠܐܟܪܢ </l>
                    
                </lg>
                <lg type="stanza" n="18"> 
                    <l xml:lang="syr">ܫܿܠܡ ܓܝܪ ܘܡܿܘܦܐ </l>
                    <l xml:lang="syr">ܙܪܥ ܕܥܢܝ̈ܕܐ </l>
                    <l xml:lang="syr">ܘܡܿܛܠ ܙܒܢ ܥܝܪ̈ܐ </l>
                    <l xml:lang="syr">ܠܡܿܦܩ ܠܚܨܕܐ </l>
                    <l xml:lang="syr">ܫܘܒܚܐ ܠܙܪܘܥܢ</l>
                    
                </lg>
                <lg type="stanza" n="19"> 
                    <l xml:lang="syr">ܫܦܝܪ ܟܝܬ ܪܕܐ </l>
                    <l xml:lang="syr">ܝܠܕܐ ܩܕܡ ܡܘܬܐ </l>
                    <l xml:lang="syr">ܘܫܦܝܪ ܕܠܡܘܬܐ </l>
                    <l xml:lang="syr">ܡܚܿܬܡ ܢܘܚܡܐ </l>
                    <l xml:lang="syr">ܫܘܒܚܐ ܠܝܕܥܿ ܟܘܠ</l>
                    <l>܀܀܀</l>
                </lg>
                <lg type="rubric">
                    <l xml:lang="syr">ܫܠܡܬ ܦܢܩܝܬܐ ܕܡܕܪ̈ܫܐ ܕܢܨ̈ܝܒܝܐ </l>
                    <l xml:lang="syr">ܕܛܘܒܢܐ ܡܪܝ ܐܦܪܝܡ </l>
                    <l xml:lang="syr">ܕܗܿܘܝܢ ܒܡܢܝܢܐ ܫܒܥܝܢ ܘܫܒܥܐ </l>
                    
                    <l xml:lang="syr">ܫܘܒܚܐ ܠܐܒܐ ܘܠܒܪܐ</l>
                    <l xml:lang="syr">ܘܠܪܘܚܐ ܕܩܘܕܫܐ </l>
                    <l xml:lang="syr">ܗܫܐ ܘܒܟܠ ܙܒܢ ܘܠܥܠܡ ܥܠܡܝܢ </l>
                    <l xml:lang="syr">ܐܡܝܢ</l>
                </lg>
            </div>
        </body>
