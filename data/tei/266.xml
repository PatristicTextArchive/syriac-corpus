        <body>
            <div type="title" n="9">
                <ab xml:lang="en">Hymn IX</ab>
            </div>
            <div type="body">
                <lg type="superscript">
                    <l xml:lang="syr">[ܒ ܒܪ ܩܠܗ]</l>
                </lg>
                <lg type="stanza" n="1">
                    <l>Line Missing</l>
                    <l xml:lang="syr">ܥܩ̈ܬܝ ܐܝܟ ܕܐܝܘܒ   ܦܪܩܬܗ ܟܐܢܘܬܟ </l>
                    <l xml:lang="syr">ܬܚܢܢܝ ܛܝܒܘܬܟ </l>
                    
                </lg>
                <lg type="stanza" n="2">
                    <l xml:lang="syr">ܒܬܪ̈ܬܝܢ ܝܘܬܪܢܐ ܗܘ   ܕܐܦ ܠܐ ܙܕܝ̈ܩܐ </l>
                    <l xml:lang="syr">ܢܠܐܘܢ ܠܡܒܥܐ   ܐܦ ܠܐ ܡܪ̈ܘܕܐ </l>
                    <l xml:lang="syr">ܢܣܓܘܢ ܠܡܚܛܐ </l>
                    
                </lg>
                <lg type="stanza" n="3">
                    <l xml:lang="syr">ܒܒ̈ܢܝܐ ܥܡܠܬ   ܕܬܪܕܐ ܘܬܥܕܪ</l>
                    <l xml:lang="syr">ܘܕܠܐ ܒܩܠ ܢܓܕܟ   ܢܟܪܘܢ ܐܒܗ̈ܝܢ </l>
                    <l xml:lang="syr">ܫܒܩܘܢܝ ܒܫܠܡܐ </l>
                    
                </lg>
                <lg type="stanza" n="4">
                    <l xml:lang="syr">ܒܥܒ̈ܝ ܒܪ̈ܝܐ   ܚܘܪ ܡܪܝ ܕܦܣܝܩܝܢ</l>
                    <l xml:lang="syr">ܠܥܘ̈ܒܝ ܓܘ̈ܝܐ   ܚܙܝ ܡܪܝ ܕܡܚܝܠܝܢ</l>
                    <l xml:lang="syr">ܕܐܛܥܢ ܚܒ̈ܝܒܝ</l>
                    
                </lg>
                <lg type="stanza" n="5">
                    <l xml:lang="syr">ܒܣܝ̈ܦܐ ܩܨܨܘ ܗܘܘ   ܓ̈ܦܝ ܒܪ̈ܝܐ </l>
                    <l xml:lang="syr">ܢܘܪܐ ܩܕܚܬ ܬܘܒ   ܒܥܘܒ̈ܝ ܓܘ̈ܝܐ </l>
                    <l xml:lang="syr">ܠܒܘܢܬܐ ܕܣܘܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="6">
                    <l xml:lang="syr">ܒܕܒܪܐ ܢܟܣܘ ܠܒ̈ܢܝ   ܣܓ̈ܘܕܝ ܫܡܫܐ </l>
                    <l xml:lang="syr">ܒܟܪܟܐ ܕܒܿܚܘ ܬܘܪ̈ܝ   ܦܠܚ̈ܝ ܒܥܠܐ</l>
                    <l xml:lang="syr">ܥܪ̈ܒܝ ܥܡ ܝ̈ܠܕܝ </l>
                    
                </lg>
                <lg type="stanza" n="7">
                    <l xml:lang="syr">ܒܚܩ̈ܠܬܝ ܝ̈ܠܠܬܐ   ܒܕܪ̈ܬܝ ܡܪܩܘܕܬܐ </l>
                    <l xml:lang="syr">ܒܟܪ̈ܡܝ ܣܘܪܕܐ   ܒܫܘ̈ܩܝ ܒܘܠܒܠܐ </l>
                    <l xml:lang="syr">ܡܢܘ ܢܣܦܼܩ ܠܝ</l>
                    
                </lg>
                <lg type="stanza" n="8">
                    <l xml:lang="syr">ܒܝܫܐ ܕܐܨܛܿܢܥ   ܘܫܓܫ ܒܡ̈ܠܘܗܝ</l>
                    <l xml:lang="syr">ܬܘܗܬܐ ܥܒܕ ܡܢ ܓܘ   ܕܬܕܡܐ ܓܘܝܘܬܝ</l>
                    <l xml:lang="syr">ܟܠܗܿ ܠܒܪܝܘܬܝ</l>
                    
                </lg>
                <lg type="stanza" n="9">
                    <l xml:lang="syr">ܒܐܝܠܝܢ ܡܪܝ ܐ̈ܦܝ   ܐܩܪܝܟ ܕܬܫܕܪ</l>
                    <l xml:lang="syr">ܡܫܪܝܬ ܩܕܝ̈ܫܐ   ܕܬܢܛܪ ܥܘ̈ܒܝ</l>
                    <l xml:lang="syr">ܕܡܠܝܢ ܛܡܐܘܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="10">
                    <l xml:lang="syr">ܒܚܡܝܪܟ ܚܕܬܐ   ܢܓܕܬܗ ܠܒܪܝܬܐ </l>
                    <l xml:lang="syr">ܒܚܡܝܪܟ ܕܡܿܝ   ܚܡܝܪܐ ܥܬܝܩܐ </l>
                    <l xml:lang="syr">ܕܫܕܠ ܘܡܢܚܦ</l>
                    
                </lg>
                <lg type="stanza" n="11">
                    <l xml:lang="syr">ܒܐܝܓܘܢܐ ܓܠܝܐ   ܕܚܝܠܟ ܢܬܢܨܚ </l>
                    <l xml:lang="syr">ܕܠܐ ܟܝܬ ܬܟܠܠ   ܛܘܥܝܝ ܠܐ̈ܬܠܝܛܝܟ </l>
                    <l xml:lang="syr">ܒܫܕܠܐ ܗܘ ܡܬܬܠܝܐ </l>
                    
                </lg>
                <lg type="stanza" n="12">
                    <l xml:lang="syr">ܒܙܒܢܢ ܐܢ ܢܿܨܕ   ܕܡܐ ܗܘ ܠܙܐܦܢ </l>
                    <l xml:lang="syr">ܕܒܫ̈ܢܝ ܫܪܝܪܐ   ܩܨܡ̈ܐ ܗܘ ܫܡܫܢ ܚܢܢ</l>
                    <l xml:lang="syr">ܒܟܣܝܐ ܙܟܪܢ ܐܢܚܢܢ</l>
                    
                </lg>
                <lg type="stanza" n="13">
                    <l xml:lang="syr">ܒܙܒܢܐ ܐܢ ܐܚܘܪ   ܡܓܪܓ ܘܠܓܠܝܐ </l>
                    <l xml:lang="syr">ܡܿܝܬܐ ܟܣܝ̈ܬܐ   ܕܢܬܟܐܪ ܙܐܦܢ </l>
                    <l xml:lang="syr">ܕܩܘܫܬܐ ܡܥܛܦ ܗܘܐ </l>
                    
                </lg>
                <lg type="stanza" n="14">
                    <l xml:lang="syr">ܒܫܪܝܪܐ ܐܝܬܘܗܝ   ܩܘܫܬܐ ܙܿܟܐ ܟܠ</l>
                    <l xml:lang="syr">ܘܝܡܐ ܒܡܪܪܘܗܝ   ܠܐ ܡܨܐ ܕܠܚܿ ܠܗ </l>
                    <l xml:lang="syr">ܕܫܦܝܐ ܗܘ ܒܟܝܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="15">
                    <l xml:lang="syr">ܒܚܟܡܐ ܥܒܕܬܗ ܡܪܝ   ܕܓܠܬ ܚܘܬܚܬܗܿ</l>
                    <l xml:lang="syr">ܕܫܒܪܐ ܢܬܪܦܐ   ܘܕܠܐ ܢܬܠܒܒ</l>
                    <l xml:lang="syr">ܚܦܬܗ ܠܟܠܝܠܐ </l>
                    
                </lg>
                <lg type="stanza" n="16">
                    <l xml:lang="syr">ܒܫܘܪ̈ܐ ܪ̈ܥܝܠܐ   ܕܒܗܘܢ ܢܨܚܬܢܝ</l>
                    <l xml:lang="syr">ܦܪܥܘܟ ܛܠܘܡ̈ܐ   ܕܒܼܚܐ ܘܢܘܩܝܐ </l>
                    <l xml:lang="syr">ܕܡܪܓܙ ܓܠܝܐܝܬ </l>
                    
                </lg>
                <lg type="stanza" n="17">
                    <l xml:lang="syr">ܒܗܿܘ ܙܒܢܐ ܐܠܘ   ܕܒܗܚܐ ܐܬܩܪܒܘ</l>
                    <l xml:lang="syr">ܠܛܘܥܝܝ ܐܦ ܐܬܪܐ   ܐܝܬ ܗܘܐ ܠܡܣܒܪܘ </l>
                    <l xml:lang="syr">ܕܒܗܘܢ ܐܬܦܪܩܬ </l>
                    
                </lg>
                <lg type="stanza" n="18">
                    <l xml:lang="syr">ܒܣܘܓܐܐ ܕܦܘܪ̈ܩܢܐ   ܐܟܣܬ ܠܬܪ̈ܬܝܢ </l>
                    <l xml:lang="syr">ܠܛܘܥܝܝ ܕܓ̈ܠܝܦܐ   ܠܝܘܠܦܢ ܡܓܘ̈ܫܐ </l>
                    <l xml:lang="syr">ܕܒܟ ܡܪܝ ܐܬܦܪܩܬ </l>
                    
                </lg>
            </div>
        </body>
