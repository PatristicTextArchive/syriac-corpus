        <body>
            <div type="title" n="70">
                <ab xml:lang="en">Hymn LXX</ab>
            </div>
            <div type="body">
                <lg type="superscript">
                    <l xml:lang="syr">ܒ ܒܪ ܩܠܗ</l>
                </lg>
                <lg type="stanza" n="1"> 
                    <l xml:lang="syr">ܐܘ ܡܐ ܡܪܝܪ ܐܚ̈ܝ </l>
                    <l xml:lang="syr">ܟܣܐ ܗܢܐ ܕܡܘܬܐ </l>
                    <l xml:lang="syr">ܕܡܪܘܐ ܐܦ ܠܢܟ̈ܦܐ </l>
                    <l xml:lang="syr">ܕܢܫܬܢܘܢ ܒܕܡ̈ܥܐ </l>
                    
                    <l>܀܀܀</l>
                </lg>
                
                <lg type="refrain">
                    <l xml:lang="syr">ܥܘܢܝܬܐ : ܒܪܝܟ ܗܘ ܕܡܿܚܐ ܠܡ̈ܝܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="2"> 
                    <l xml:lang="syr">ܒܥܘܢܕܢܗ ܕܡܝܬܐ </l>
                    <l xml:lang="syr">ܐܦ ܝܩܝܪܐ ܡܙܕܟܐ </l>
                    <l xml:lang="syr">ܕܢܙܕܠܠ ܘܢܝܠܠ </l>
                    <l xml:lang="syr">ܥܠ ܚܒܝܒܗ ܕܦܼܪܫ</l>
                    
                </lg>
                <lg type="stanza" n="3"> 
                    <l xml:lang="syr">ܓܥܿܐ ܗܘ ܓܝܪ ܒܚܘܒܗ </l>
                    <l xml:lang="syr">ܗܕܡܐ ܕܦܐܫ </l>
                    <l xml:lang="syr">ܥܠ ܒܪ ܙܘܓܗ ܕܐܬܦܣܩ </l>
                    <l xml:lang="syr">ܘܐܘܦܝ ܥܝܕܗ ܘܨܘܬܗ</l>
                    
                </lg>
                <lg type="stanza" n="4"> 
                    <l xml:lang="syr">ܕܠܝ̈ܠܐ ܗܘ ܕܕܡܿܝܢ </l>
                    <l xml:lang="syr">ܠܐܒܪܗܡ ܕܥܿܙܝ</l>
                    <l xml:lang="syr">ܕܢܬܠ ܦܐܪܐ ܕܪ̈ܚܡܘܗܝ </l>
                    <l xml:lang="syr">ܡܛܠ ܡܪܗ ܠܡܘܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="5"> 
                    <l xml:lang="syr">ܗܢܘ ܥܡܘܕܝ ܫܪܪܐ </l>
                    <l xml:lang="syr">ܕܛܥܢ ܝܘܩܪܐ ܒܥܡܐ </l>
                    <l xml:lang="syr">ܕܓ̈ܠܠܐ ܕܚܫ̈ܐ ܛܪܘ ܒܗ </l>
                    <l xml:lang="syr">ܘܠܐ ܐܙܕܥܙܥ ܫܪܪܗ</l>
                    
                </lg>
                <lg type="stanza" n="6"> 
                    <l xml:lang="syr">ܗܐ ܦܠܚܐ ܕܟܕ ܚܼܙܐ </l>
                    <l xml:lang="syr">ܦܐܪܐ ܒܣܬܗ ܥܩܪܬܐ </l>
                    <l xml:lang="syr">ܣܓܘܠܐ ܕܗܘܐ ܠܢܘܓܪܐ </l>
                    <l xml:lang="syr">ܐܝܟ ܪܝܫܝܬܐ ܩܪܒܗ </l>
                    
                </lg>
                <lg type="stanza" n="7"> 
                    <l xml:lang="syr">ܘܕܢܦܬܚ ܬܘܒ ܬܡܝܗܐ ܗܝ </l>
                    <l xml:lang="syr">ܦܠܚܐ ܕܩܛܦܗܿ</l>
                    <l xml:lang="syr">ܠܛܘܛܝܬܐ ܕܒܥܠܬ </l>
                    <l xml:lang="syr">ܠܡܪܐ ܟܪܡܐ ܩܪܒܗܿ</l>
                    <l>܀܀܀</l>
                </lg>
                <lg type="stanza" n="8"> 
                    <l xml:lang="syr">ܙܟܼܐ ܩܪܒܗ ܠܪ̈ܚܡܘܗܝ </l>
                    <l xml:lang="syr">ܘܥܼܨܐ ܚܘܒܗ ܘܐܣܩܗܿ</l>
                    <l xml:lang="syr">ܘܠܐ ܐܫܬܢܝ ܒܚܫܗ </l>
                    <l xml:lang="syr">ܕܗܝܡܢܘܬܗ ܣܡܟܬܗ</l>
                    
                </lg>
                <lg type="stanza" n="9"> 
                    <l xml:lang="syr">ܚܡܪܗ ܓܝܪ ܕܡܘܬܐ </l>
                    <l xml:lang="syr">ܬܛܪܐ ܗܘ ܕܕܠܝܚ ܒܚܫܐ </l>
                    <l xml:lang="syr">ܒܕܡ̈ܥܐ ܡܪܘܐ ܚܪ̈ܝܦܘܗܝ </l>
                    <l xml:lang="syr">ܘܠܙܡ̈ܝܢܘܗܝ ܒܒܟܝܐ</l>
                    
                </lg>
                <lg type="stanza" n="10"> 
                    <l xml:lang="syr">ܛܒ ܗܟܝܠ ܡܒܿܝܐ </l>
                    <l xml:lang="syr">ܛܘܦܣܗ ܪܒܐ ܕܢܦܬܚ</l>
                    <l xml:lang="syr">ܕܒܣܝܦܐ ܩܪܒܗܿ </l>
                    <l xml:lang="syr">ܣܝܡܬ ܚ̈ܝܐ ܠܡܪܗܿ</l>
                    
                </lg>
                <lg type="stanza" n="11"> 
                    <l xml:lang="syr">ܝܡܝܢܗ ܦܫܼܛ ܗܘܐ </l>
                    <l xml:lang="syr">ܢܦܬܚ ܘܐܣܩ ܕܒܚܬܐ </l>
                    <l xml:lang="syr">ܝܘܢܐ ܚܙܬܗ ܕܐܟܪܝ </l>
                    <l xml:lang="syr">ܘܠܒܒܬܗ ܒܩܠܗܿ</l>
                    
                </lg>
                <lg type="stanza" n="12"> 
                    <l xml:lang="syr">ܝܐܐ ܗܘܐ ܟܗܢܐ </l>
                    <l xml:lang="syr">ܕܟܗܿܢ ܒܕܡܐ ܕܡܢܗ </l>
                    <l xml:lang="syr">ܕܢܗܘܐ ܛܘܦܣܐ ܠܡܪܗ </l>
                    <l xml:lang="syr">ܕܟܗܿܢ ܒܕܡܐ ܕܢܦܫܗ </l>
                    
                </lg>
                <lg type="stanza" n="13"> 
                    <l xml:lang="syr">ܟܠ ܡܢ ܕܪܘܐ ܒܚܘܒܐ </l>
                    <l xml:lang="syr">ܘܙܟܿܐ ܒܪܚܡܬ ܫܪܪܐ </l>
                    <l xml:lang="syr">ܐܝܟ ܕܒܚܠܡܐ ܗܘ ܚܿܘܐ </l>
                    <l xml:lang="syr">ܠܚܒܝܒܗ ܕܥܢܕ</l>
                    
                </lg>
                <lg type="stanza" n="14"> 
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܠܚܒܪܗ ܓܝܪ ܒܚܠܡܗ </l>
                    <l xml:lang="syr">ܓܕܫ ܚܿܙܐ ܕܡܐܬ </l>
                    <l xml:lang="syr">ܘܐܬܐ ܨܦܪܐ ܘܒܝܐܗ </l>
                    <l xml:lang="syr">ܡܢ ܟܪܝܘܬܗ ܕܚܠܡܐ </l>
                    
                </lg>
                <lg type="stanza" n="15"> 
                    <l xml:lang="syr">ܡܐ ܕܡܿܐ ܠܗ ܥܢܝܕܐ </l>
                    <l xml:lang="syr">ܠܗܿܘ ܕܡܟܐ ܫܟܝܒܐ </l>
                    <l xml:lang="syr">ܘܕܡܿܐ ܡܘܬܐ ܠܚܠܡܐ </l>
                    <l xml:lang="syr">ܐܦ ܢܘܚܡܐ ܠܨܦܪܐ</l>
                    
                </lg>
                <lg type="stanza" n="16"> 
                    <l xml:lang="syr">ܢܕܢܚ ܒܢ ܫܪܪܐ </l>
                    <l xml:lang="syr">ܒܕܡܘܬ ܢܘܗܪܐ ܒܥܝܢܐ </l>
                    <l xml:lang="syr">ܘܗܐ ܚܙܝܢܝܗܝ ܠܡܘܬܐ </l>
                    <l xml:lang="syr">ܕܐܝܟ ܣܘܪܕܐ ܗܘ ܕܚܠܡܐ </l>
                    
                </lg>
                <lg type="stanza" n="17"> 
                    <l xml:lang="syr">ܣܟܼܠ ܓܝܪ ܐܝܢܐ ܕܚܿܙܐ </l>
                    <l xml:lang="syr">ܫܢܬܐ ܕܠܝܬܝܗܿ ܠܨܦܪܐ </l>
                    <l xml:lang="syr">ܘܢܣܒܪ ܥܠܘܗܝ ܕܡܘܬܐ </l>
                    <l xml:lang="syr">ܕܫܢܬܐ ܠܥܠܡ ܬܩܘܐ </l>
                    
                </lg>
                <lg type="stanza" n="18"> 
                    <l xml:lang="syr">ܥܝܢܐ ܕܣܒܪܐ ܐܢ ܩܿܢܐ </l>
                    <l xml:lang="syr">ܡܨܐ ܚܙܐ ܠܗܿ ܒܟܣܝܐ</l>
                    <l xml:lang="syr">ܠܗܿܝ ܫܢܬܗ ܕܡܘܬܐ </l>
                    <l xml:lang="syr">ܕܒܗܿܘ ܨܦܪܐ ܒܛܠܐ </l>
                    
                </lg>
                <lg type="stanza" n="19"> 
                    <l xml:lang="syr">ܦܪܚ ܪܝܚܗ ܬܡܝܗܐ </l>
                    <l xml:lang="syr">ܕܗܿܘ ܓܙܐ ܕܚ̈ܝܐ </l>
                    <l xml:lang="syr">ܒܦܓܪܐ ܒܝܬܗܿ ܕܢܦܫܐ </l>
                    <l xml:lang="syr">ܕܢܦܩܬ ܡܢܗ ܘܐܬܢܕܕ</l>
                    
                </lg>
                <lg type="stanza" n="20"> 
                    <l xml:lang="syr">ܨܒ̈ܬܘܗܝ ܣ̈ܓܝܐܝܢ ܘܫܘܦܪ̈ܘܗܝ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܕܗܝܟܠ ܚܘܒܐ ܗܿܘ ܕܪܘܚܐ </l>
                    <l xml:lang="syr">ܡܫܬܝܢ ܕܨܕܐ </l>
                    <l xml:lang="syr">ܘܗܘܼܐ ܡܫܟܢ ܫܠܡܐ </l>
                    
                </lg>
                <lg type="stanza" n="21"> 
                    <l xml:lang="syr">ܩܠ ܫܝܦܘܪܐ ܡܿܝܒܒ </l>
                    <l xml:lang="syr">ܠܟܢ̈ܫܐ ܫ̈ܠܝܐ </l>
                    <l xml:lang="syr">ܕܩܘܡܘ ܙܡܪܘ ܘܫܒܿܚܘ </l>
                    <l xml:lang="syr">ܩܕܡ ܚܬܢܐ ܒܩܠܐ </l>
                    
                </lg>
                <lg type="stanza" n="22"> 
                    <l xml:lang="syr">ܪܘܒܐ ܗܘܐ ܒܦܘܡ̈ܐ </l>
                    <l xml:lang="syr">ܕܡܬܦܬܚܝܢ ܩܒܪ̈ܐ </l>
                    <l xml:lang="syr">ܚܕ ܠܚܕ ܠܥܙ ܒܡ̈ܢܘܗܝ </l>
                    <l xml:lang="syr">ܫܘܒܚܐ ܝܗܒ ܒܩ̈ܠܘܗܝ</l>
                    
                </lg>
                <lg type="stanza" n="23"> 
                    <l xml:lang="syr">ܫܘܒܚܐ ܠܟ ܕܐܘܪܒܬ </l>
                    <l xml:lang="syr">ܠܐܕܡ ܟܕ ܕܟܼܐ ܗܘܐ </l>
                    <l xml:lang="syr">ܠܟ ܫܘܒܚܐ ܕܒܫܝܘܠ </l>
                    <l xml:lang="syr">ܡܟܟܬܝܗܝ ܕܐܬܬܪܝܡ </l>
                    
                </lg>
                <lg type="stanza" n="24"> 
                    <l xml:lang="syr">ܬܘܕܝ ܠܡܿܢ ܕܡܿܟܟ </l>
                    <l xml:lang="syr">ܘܬܘܕܝ ܠܡܿܢ ܕܢܚܿܡ </l>
                    <l xml:lang="syr">ܘܐܦ ܟܢܪܝ ܢܫܿܒܚ </l>
                    <l xml:lang="syr">ܒܢܘܚܡܗ ܠܡܪܗ </l>
                    
                </lg>
            </div>
