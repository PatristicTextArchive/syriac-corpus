        <body>
            <div type="title" n="56">
                <ab xml:lang="en">Hymn LVI</ab>
            </div>
            <div type="body">
                <lg type="superscript">
                    <l xml:lang="syr">ܗ ܒܪ ܩܠܗ</l>
                </lg>
                <lg type="stanza" n="1"> 
                    <l xml:lang="syr">ܥܡ ܚܐܪܘܬܐ ܐܝܓܘܢܐ ܐܝܬ ܠܟ ܒܝܫܐ </l>
                    <l xml:lang="syr">ܒܠܡܐ ܡܨܝܐ ܕܬܪܡܐ ܒܟ ܐܢ ܫܿܦܪ ܠܗܿ</l>
                    
                </lg>
                
                <lg type="refrain">
                    <l xml:lang="syr">ܥܘܢܝܬܐ : ܠܟ ܫܘܒܚܐ ܕܒܙܟܘܬܟ ܐܬܚܝܠܢ ܚܢܢ</l>
                    <l xml:lang="syr">ܘܒܢܘܚܡܟ ܐܡܣܪܢ ܚܢܢ ܐܦ ܥܠ ܡܘܬܐ</l>
                    
                </lg>
                <lg type="stanza" n="2"> 
                    <l xml:lang="syr">ܗܢܘܢ ܠܗܘܢ ܬܘܒ ܗܐ ܦܪܣܝܘ ܕܡ̈ܚܝܠܐ ܐܢܘܢ</l>
                    <l xml:lang="syr">ܡܘܬܐ ܠܒܝܫܐ ܐܕܟܪ ܠܗ ܓܢܒܪܘܬܟܝ</l>
                    
                </lg>
                <lg type="stanza" n="3"> 
                    <l xml:lang="syr">ܢܘܪܟ ܒܩܢܟ ܐܘ ܡܘܬܐ ܘܠܐ ܪܓܫ ܐܢܬ</l>
                    <l xml:lang="syr">ܗܝܡܢܘܬܐ ܕܥܢܝ̈ܕܐ ܠܟ ܛܘܠܩܐ ܗܝ</l>
                    
                    <l>܀܀܀</l>
                </lg>
                <lg type="stanza" n="4"> 
                    <l xml:lang="syr">ܗܐ ܡܘܬܐ ܘܒܝܫܐ ܐܟܪܙ ܓܢܒܪܘܬܟܝ</l>
                    <l xml:lang="syr">ܐܦ ܗܼܘ ܒܝܫܐ ܐܕܟܪ ܠܗ ܗܝܡܢܘܬܟܝ</l>
                    
                </lg>
                <lg type="stanza" n="5"> 
                    <l xml:lang="syr">ܐܢ ܕܝܢ ܗܿܢܘܢ ܕܠܩܘܒܠܟܝ ܢܗܘܘܢ ܚܘܠܦܝܢܟܝ</l>
                    <l xml:lang="syr">ܗܕܐ ܪܒܐ ܗܝ ܕܪ̈ܕܘܦܐ ܗܘܘ ܟܪ̈ܘܙܐ </l>
                    
                </lg>
                <lg type="stanza" n="6"> 
                    <l xml:lang="syr">ܐܢܐ ܡܿܘܕܐ ܐܢܐ ܐܘ ܒܝܫܐ ܕܐܝܟ ܪܒܝܬܐ </l>
                    <l xml:lang="syr">ܢܿܛܪ ܐܢܐ ܓ̈ܙܝ ܡܠܟܐ ܥܕ ܡܐܬܝܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="7"> 
                    <l xml:lang="syr">ܐܢܐ ܡܘܬܐ ܛܒ ܟܿܦܪ ܐܢܐ ܕܠܘ ܕܐܠܗܐ ܗܘ </l>
                    <l xml:lang="syr">ܗܢܐ ܓܙܐ ܕܨܢܥܬܐ ܕܡܟܢܫ ܠܝ</l>
                    
                </lg>
                <lg type="stanza" n="8"> 
                    <l xml:lang="syr">ܛܒܥܟ ܡܕܝܢ ܕܙܐܦܐ ܗܘ ܐܘ ܣܛܢܐ </l>
                    <l xml:lang="syr">ܕܒܝܬ ܣܝܡ̈ܬܗ ܕܐܠܗܐ ܠܐ ܡܬܩܿܒܠ </l>
                    
                </lg>
                <lg type="stanza" n="9"> 
                    <l xml:lang="syr">ܛܒܥܐ ܚܕܬܐ ܛܒܿܥ ܐܢܐ ܒܕܡܘܬ ܡܠܟܐ </l>
                    <l xml:lang="syr">ܗܐ ܬܓܪ̈ܝ ܒܒܪܝܬܐ ܬܘܟܐ ܡܝܬܝܢ </l>
                    
                </lg>
                <lg type="stanza" n="10"> 
                    <l xml:lang="syr">ܐܠܗܐ ܡܢ ܠܐ ܡܕܡ ܒܼܪܐ ܟܠ ܡܕܡ</l>
                    <l xml:lang="syr">ܘܐܢܐ ܒܿܪܝܬ ܡܢ ܠܐ ܡܕܡ ܥܘܠܐ ܪܒܐ </l>
                    
                </lg>
                <lg type="stanza" n="11"> 
                    <l xml:lang="syr">ܣܟܝܪ ܘܣܛܝܡ ܦܘܡܟ ܒܝܫܐ ܕܟܡܐ ܡܪܚ </l>
                    <l xml:lang="syr">ܕܦܘܚܡܟ ܨܝܕ ܒܪܘܝܐ ܗܐ ܡܬܩܪܒ</l>
                    
                </lg>
                <lg type="stanza" n="12"> 
                    <l xml:lang="syr">ܠܝ ܡܘܬܐ ܫܠܝܛ ܗܘ ܠܝ ܕܐܡܪܚ ܘܐܡܪ</l>
                    <l xml:lang="syr">ܠܫܢܟ ܕܝܠܟ ܥܒܕܐ ܗܘ ܕܬܚܝܬ ܩܢܛܐ ܗܘ </l>
                    
                </lg>
                <lg type="stanza" n="13"> 
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܦܚܬܐ ܗܘ ܡܟܝܠ ܒܝܢܬܢ ܐܘ ܣܛܢܐ </l>
                    <l xml:lang="syr">ܦܩܪܐܝܬ ܓܝܪ ܒܡܪܟ ܗܐ ܣܿܒܟ ܐܢܬ </l>
                    
                </lg>
                <lg type="stanza" n="14"> 
                    <l xml:lang="syr">ܡܘܬܐ ܠܡܢܐ ܐܬܦܠܓܬ ܥܠ ܫܘܝܘܬܢ</l>
                    <l xml:lang="syr">ܗܘܼܝ ܠܝ ܚܒܪܐ ܘܗܕܡܐ ܘܗܐ ܐܡܠܟܢ ܚܢܢ</l>
                    
                </lg>
                <lg type="stanza" n="15"> 
                    <l xml:lang="syr">ܬܐ ܢܫܡܘܛ ܙܘܓܐ ܕܣܝ̈ܦܐ ܥܠ ܐܢܫܘܬܐ</l>
                    <l xml:lang="syr">ܐܢܐ ܒܟܣܝܐ ܘܐܢܬ ܒܓܠܝܐ ܘܗܐ ܓܡܪܢܗܿ</l>
                    
                </lg>
                <lg type="stanza" n="16"> 
                    <l xml:lang="syr">ܚܛܝܬܐ ܘܫܝܘܠ ܝܗܒ ܡܠܟܐ ܬܪ̈ܬܝܢ ܠܬܪ̈ܝܢ </l>
                    <l xml:lang="syr">ܕܐܢ ܗܘ ܠܡ ܕܐܬܦܠܓܬܘܢ ܐܬܛܠܩܬܘܢ</l>
                    
                </lg>
                <lg type="stanza" n="17"> 
                    <l xml:lang="syr">ܚܙܘ ܡ̈ܝܐ ܕܐܢ ܐܬܒܕܪܘ ܘܐܦ ܐܫܬܦܠܘ </l>
                    <l xml:lang="syr">ܘܐܢ ܐܬܟܢܫܘ ܐܬܥܿܫܢܘ ܐܝܟ ܕܐܦ ܐܢܬܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="18"> 
                    <l xml:lang="syr">ܐܬܦܠܓܬܘܢ ܐܘܦܝܬܘܢ ܐܝܟ ܚܠܫ̈ܐ </l>
                    <l xml:lang="syr">ܘܐܬܡܙܓܬܘܢ ܐܡܠܟܬܘܢ ܐܝܟ ܚ̈ܣܝܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="19"> 
                    <l xml:lang="syr">ܚܘܒܐ ܠܣ̈ܓܝܐܐ ܢܣܿܟ ܐܝܟ ܕܠܟܘܪܐ </l>
                    <l xml:lang="syr">ܘܥܒܿܕ ܚܕ ܓܘܫܡܐ ܪܒܐ ܕܠܟܘܠ ܙܟܿܐ </l>
                    
                </lg>
                <lg type="stanza" n="20"> 
                    <l xml:lang="syr">ܒܗ ܚܟܡ̈ܬܐ ܘܨܢܥ̈ܬܐ ܚܝܠܐ ܘܥܘܫܢܐ </l>
                    <l xml:lang="syr">ܡܢ ܨܠܡܐ ܕܐܫܬܝܢ ܐܡ̈ܝܢ ܪܒ ܗܘ ܣܿܓܝ</l>
                    
                </lg>
                <lg type="stanza" n="21"> 
                    <l xml:lang="syr">ܐܬܪܥܘ ܢܟܢܘܫ ܢܐܙܠ ܥܠ ܗܿܘ ܕܓܒܐ </l>
                    <l xml:lang="syr">ܕܟܡܐ ܕܐܘܐ ܠܝܬ ܦܪܘܣ ܕܢܚܘܒ ܡܢ ܡܬܘܡ</l>
                    
                </lg>
                <lg type="stanza" n="22"> 
                    <l xml:lang="syr">ܗܠܝܢ ܡܠܠܘ ܙܝ̈ܥܐ ܘܟܢܫܘ ܘܐܬܘ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܝܘܡܟ ܡܪܝ ܢܟܢܘܫ ܐܢܘܢ ܨܝܕ ܓܗܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="23"> 
                    <l xml:lang="syr">ܒܚܢܢܟ ܠܟ ܡܪܝ ܐܣܓܘܕ ܟܕ ܐܬܢܚܿܡ</l>
                    <l xml:lang="syr">ܒܫܝܦܘܪܟ ܠܒܪܟ ܐܘܕܐ ܟܕ ܐܬܚܿܣܐ </l>
                    
                </lg>
            </div>
        </body>
