        <body>
            <div type="title" n="#11">
                <ab xml:lang="en">Hymn XI</ab>
            </div>
            <div type="body">
                <lg type="superscript">
                    <l xml:lang="syr">ܕ ܒܪ ܩܠܗ</l>
                </lg>
                <lg type="stanza" n="1">
                    <l xml:lang="syr">ܡܪܕܘܬܟ ܐܝܬܝܗܿ   ܐܡܐ ܕܫܒܪܘܬܢ</l>
                    <l xml:lang="syr">ܟܐܬܗܿ ܕܚܢܢܐ ܗܝ   ܕܙܓܪܬ ܫܥܝܐ </l>
                    <l xml:lang="syr">ܠܫܒܪ̈ܐ ܘܐܬܚܟܡܘ </l>
                    
                </lg>
                
                <lg type="refrain">
                    <l xml:lang="syr">ܥܘܢܝܬܐ : ܫܘܒܚܐ ܠܟܐܢܘܬܟ</l>
                    
                </lg>
                <lg type="stanza" n="2">
                    <l xml:lang="syr">ܢܒܼܨܐ ܟܐܢܘܬܟ   ܟܕ ܡܿܢ ܣܿܦܩ ܠܗܿ</l>
                    <l xml:lang="syr">ܕܢܟܝܠ ܥܘܕܪ̈ܢܝܗܿ   ܕܒܗܿ ܗܘ ܙ̈ܠܝܠܐ </l>
                    <l xml:lang="syr">ܐܣܓܝܘ ܐܬܿܢܟܦܘ</l>
                    
                </lg>
                <lg type="stanza" n="3">
                    <l xml:lang="syr">ܣܿܓܝ ܗܘ ܣܥܪܬ ܡܪܝ   ܐܝܕܗܿ ܠܟܪ̈ܝܗܐ</l>
                    <l xml:lang="syr">ܕܗܝܝ ܐܣܝܬܐ   ܟܣܝܬܐ ܕܟܐܒ̈ܝܗܘܢ </l>
                    <l xml:lang="syr">ܘܡܥܝܢ ܚܝ̈ܝܗܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="4">
                    <l xml:lang="syr">ܣܿܓܝ ܪܟܝܟܐ   ܨܒܥܗܿ ܕܟܐܢܘܬܟ</l>
                    <l xml:lang="syr">ܒܚܘܒܐ ܘܚܘܣܢܐ   ܓܫܐ ܢܟܝ̈ܢܘܗܝ</l>
                    <l xml:lang="syr">ܕܐܝܢܐ ܕܡܬܐܣܐ</l>
                    
                </lg>
                <lg type="stanza" n="5">
                    <l xml:lang="syr">ܣܿܓܝ ܢܝܚ ܘܪܚܝܡ   ܓܙܪܗܿ ܠܕܚܟܝܡ </l>
                    <l xml:lang="syr">ܣܡܗܿ ܚܪܝܦܐ   ܒܚܘܒܗ ܥܙܝܙܐ </l>
                    <l xml:lang="syr">ܐܟܠ ܬܡܣܘܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="6">
                    <l xml:lang="syr">ܣܿܓܝ ܦܐܐ ܪܘܓܙܗ   ܠܐܝܢܐ ܕܦܪܘܫܐ ܗܘ </l>
                    <l xml:lang="syr">ܣܢܝܐ̈ܝܢ ܣܡ̈ܡܢܝܗܿ   ܠܣܟܠܐ ܕܒܿܣܡ ܠܗ</l>
                    <l xml:lang="syr">ܒܘܣܒܣ ܗܕܡ̈ܘܗܝ</l>
                    
                </lg>
                <lg type="stanza" n="7">
                    <l xml:lang="syr">ܣܿܓܝ ܬܿܟܒ ܠܗ   ܥܨܒܗܿ ܠܓܙܪܗܿ </l>
                    <l xml:lang="syr">ܡܐ ܕܡܚܬ ܚܢܬ   ܕܡܢ ܒܝܬ ܬܪ̈ܬܝܗܝܢ</l>
                    <l xml:lang="syr">ܬܘܠܕ ܚܘܠܡܢܐ</l>
                    
                </lg>
                <lg type="stanza" n="8">
                    <l xml:lang="syr">ܣܿܓܝ ܦܐܐ ܪܘܓܙܗ   ܘܚܡܬܗܿ ܒܣܝܡܐ </l>
                    <l xml:lang="syr">ܘܚܠܐ ܡܘܪܡܪܗܿ   ܡܚܠܐ ܠܡܪ̈ܝܪܐ </l>
                    <l xml:lang="syr">ܕܢܗܘܘܢ ܒܣܝܡ̈ܐ </l>
                    
                </lg>
                <lg type="stanza" n="9">
                    <l xml:lang="syr">ܥܠܬ ܒܛܠܢܐ ܗܘ   ܢܘܚܟ ܠܪ̈ܦܝܐ </l>
                    <l xml:lang="syr">ܥܠܬ ܝܘܬܪܢܐ ܗܘ   ܫܒܛܟ ܨܝܕ ܫ̈ܦܠܐ </l>
                    <l xml:lang="syr">ܕܢܗܘܘܢ ܬܓܪ̈ܐ </l>
                    
                </lg>
                <lg type="stanza" n="10">
                    <l xml:lang="syr">ܥܠܬ ܚܝܨܘܬܢ   ܐܝܬܝܗܿ ܟܐܢܘܬܟ</l>
                    <l xml:lang="syr">ܥܠܬ ܪܦܝܘܬܢ   ܐܝܬܝܗܿ ܛܝܒܘܬܟ</l>
                    <l xml:lang="syr">ܕܣܟܠ ܒܘܝܢܢ</l>
                    
                </lg>
                <lg type="stanza" n="11">
                    <l xml:lang="syr">ܦܪܥܘܢ ܕܐܬܩܿܫܝ   ܡܛܠ ܛܝܒܘܬܟ</l>
                    <l xml:lang="syr">ܕܡܐ ܕܪܟܘ ܗܘܘ ܢܓܕ̈ܘܗܝ   ܥܙܘ ܗܘܘ ܣܘܪ̈ܚܢܘܗܝ</l>
                    <l xml:lang="syr">ܘܕܓܠ ܫܘܘ̈ܕܝܘܗܝ</l>
                    
                </lg>
                <lg type="stanza" n="12">
                    <l xml:lang="syr">ܦܪܥܬܗ ܟܐܢܘܬܐ   ܕܐܣܓܝ ܕܓܿܠ ܒܗܿ</l>
                    <l xml:lang="syr">ܒܚܬܗܿ ܒܪܬ ܚܐܪ̈ܐ   ܐܦ ܠܗ ܚܣܟܬܗ ܬܘܒ</l>
                    <l xml:lang="syr">ܕܐܠ ܬܘܒ ܢܪܓܙ ܗܘܐ </l>
                    
                </lg>
                <lg type="stanza" n="13">
                    <l xml:lang="syr">ܨ̈ܢܥܬܝ ܡܪܝ ܐܟܿܣ   ܕܟܕܒ ܐܝܟ ܡܨܪܝܢ </l>
                    <l xml:lang="syr">ܨܠܘ̈ܬܝ ܡܦܝܣܢ   ܕܠܐ ܗܘܝܬ ܐܟܘܬܗܿ</l>
                    <l xml:lang="syr">ܕܬܪܥܟ ܠܐ ܫܒܩܬ</l>
                    
                </lg>
                <lg type="stanza" n="14">
                    <l xml:lang="syr">ܨܠܝܒܟ ܡܪܝ ܕܩܡ   ܒܬܘܪ̈ܥܬܝ ܓ̈ܠܝܬܐ </l>
                    <l xml:lang="syr">ܢܣܘܓ ܬܘܒ ܟܣ̈ܝܬܐ   ܕܚܠܦ ܒܪ̈ܝܐ </l>
                    <l xml:lang="syr">ܬܪܥܘܢܝ ܓܘ̈ܝܐ </l>
                    
                </lg>
                <lg type="stanza" n="15">
                    <l xml:lang="syr">ܨܪܐ ܝܡܐ ܘܐܪܡܝ   ܡܓܕܠܐ ܕܢܨܚܬ ܒܗ </l>
                    <l xml:lang="syr">ܣܥܼܐ ܥܘܠܐ ܘܐܩܝܡ   ܢܘܣܐ ܕܒܗܬܬ ܒܗ</l>
                    <l xml:lang="syr">ܚܢܩܢܝ ܢܘܩܝܗ</l>
                    
                </lg>
                <lg type="stanza" n="16">
                    <l xml:lang="syr">ܨܠܘ̈ܬܝ ܥܠ ܫܘܪ̈ܝ   ܫܡܼܥܘ ܗܘܘ ܪ̈ܕܘܦܝ</l>
                    <l xml:lang="syr">ܒܗܼܬܝ ܗܘܐ ܒܡܓܘܫ̈ܘܗܝ   ܫܡܫܐ ܘܣܓ̈ܘܕܘܗܝ</l>
                    <l xml:lang="syr">ܕܢܨܚܬ ܒܨܠܝܒܟ</l>
                    
                </lg>
                <lg type="stanza" n="17">
                    <l xml:lang="syr">ܩܥ̈ܝ ܗܘܝ ܒܪ̈ܝܬܐ   ܕܚ̈ܙܝ ܐܝܓܘܢܐ </l>
                    <l xml:lang="syr">ܫܪܪܐ ܕܥܡ ܛܘܥܝܝ   ܒܫܘܪ̈ܐ ܪ̈ܥܝܠܐ </l>
                    <l xml:lang="syr">ܐܩܪܒ ܘܐܬܟܠܠ</l>
                    
                </lg>
                <lg type="stanza" n="18">
                    <l xml:lang="syr">ܩܛܝܪܗ ܕܫܪܪܐ   ܠܛܘܥܝܝ ܢܓܕ ܗܘܐ </l>
                    <l xml:lang="syr">ܒܗ̈ܓܕܝܗܿ ܪܓܫܬ ܒܗ   ܘܒܝܕ ܚܘܒ̈ܬܗܿ</l>
                    <l xml:lang="syr">ܝܠܦܬ ܙܟܘܬܗܿ</l>
                    
                </lg>
                <lg type="stanza" n="19">
                    <l xml:lang="syr">ܩܢܛܐ ܗܘ ܠܝ ܪܒܐ   ܕܒܬܪ ܦܘܪܩܢܐ </l>
                    <l xml:lang="syr">ܫܒ̈ܝܚܐ ܘܥܙܝ̈ܙܐ   ܕܪܚܦܘ ܥܠ ܡܕܒܚܝ </l>
                    <l xml:lang="syr">ܒܢܼܘ ܒܝ ܥܠܘ̈ܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="20">
                    <l xml:lang="syr">ܪ̈ܓܫܝ ܡܪܝ ܫܒܥܐ   ܐܠܘ ܡܒ̈ܘܥܐ </l>
                    <l xml:lang="syr">ܗܘܘ ܗܘܘ ܕܒܟܬܐ   ܙܥܘܪ̈ܢ ܐܢܝܢ ܕܡ̈ܥܝ</l>
                    <l xml:lang="syr">ܠܒܟܝܗ ܕܬܒܪܢ</l>
                    
                </lg>
                <lg type="stanza" n="21">
                    <l xml:lang="syr">ܫܘܩ̈ܐ ܕܒܣܩ̈ܐ   ܘܩܛܡܐ ܓܿܥܝܢ ܗܘܘ </l>
                    <l xml:lang="syr">ܫܓܝܫܝܢ ܒܫܥܝܐ   ܚܒܪܗ ܕܗܿܘ ܕܗܘܼܐ </l>
                    <l xml:lang="syr">ܒܕܒܪܐ ܩܕܡ ܥܓܠܐ </l>
                    
                </lg>
                <lg type="stanza" n="22">
                    <l xml:lang="syr">ܫܘܦܪܐ ܕܫ̈ܘܫܢܐ   ܡܪܪܐ ܫܐܠ ܘܠܒܼܫ</l>
                    <l xml:lang="syr">ܘܟܡܐ ܕܟܣܝܢ ܗ̈ܘܝ   ܡܛܥܝܢ ܦܪ̈ܥܝܗܝܢ</l>
                    <l xml:lang="syr">ܐܦܪܥ ܓܕܕܝ̈ܗܝܢ</l>
                    
                </lg>
            </div>
        </body>
