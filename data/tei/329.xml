        <body>
            <div type="title" n="75">
                <ab xml:lang="en">Hymn LXXV</ab>
            </div>
            <div type="body">
                <lg type="superscript">
                    <l xml:lang="syr">ܒ ܒܪ ܩܠܗ </l>
                </lg>
                <lg type="stanza" n="1"> 
                    <l xml:lang="syr">ܝܘܡܐ ܕܥܘܢܕܢܐ </l>
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܡܪܝܪܐ</l>
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܚܢܓܬܐ </l>
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܒܟܬܐ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܗܼܘܝ ܡܪܢ ܒܘܝܐܢ</l>
                    
                </lg>
                
                <lg type="refrain">
                    <l xml:lang="syr">ܥܘܢܝܬܐ : ܗܼܘܝ ܡܪܝ ܒܘܝܐܢ</l>
                    
                </lg>
                <lg type="stanza" n="2"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܓܙܪ </l>
                    <l xml:lang="syr">ܫܩܠ ܗܕܡܐ </l>
                    <l xml:lang="syr">ܡܢ ܓܘܫܡܐ ܐܘܝܐ </l>
                    <l xml:lang="syr">ܕܐܚ̈ܘܗܝ ܘܐܚ̈ܝܢܘܗܝ</l>
                    <l xml:lang="syr">ܒܟ ܡܪܝ ܢܬܪܟܒ</l>
                    
                </lg>
                <lg type="stanza" n="3">
                    <l>Missing</l>
                    
                </lg>
                <lg type="stanza" n="4">
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܕܒܪ ܬܘܒ </l>
                    <l xml:lang="syr">ܐܚܝܕܐ ܡܢ ܐܡܗ</l>
                    <l xml:lang="syr">ܘܦܣܩܗܿ ܠܕܪܥܐ </l>
                    <l xml:lang="syr">ܕܡܣܡܟ ܗܘܐ ܠܗܿ</l>
                    <l xml:lang="syr">ܐܢܬ ܡܪܝ ܣܡܟܝܗܿ</l>
                    
                </lg>
                <lg type="stanza" n="5"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܐܒܗ̈ܐ </l>
                    <l xml:lang="syr">ܥܢܕܘ ܒܗ ܘܦܼܪܫܘ ܒܗ</l>
                    <l xml:lang="syr">ܘܫܒܼܩܘ ܝ̈ܠܕܝܗܘܢ </l>
                    <l xml:lang="syr">ܝܬܡ̈ܐ ܘܚܣ̈ܝܠܐ </l>
                    <l xml:lang="syr">ܐܢܬ ܡܪܝ ܪܒܿܐ ܐܢܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="6"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܬܘܒ ܕܐܚܐ </l>
                    <l xml:lang="syr">ܦܿܪܫ ܡܢ ܐܚܘܗܝ</l>
                    <l xml:lang="syr">ܘܚܿܣܪ ܡܢܝܢܐ </l>
                    <l xml:lang="syr">ܘܙܥܼܪ ܨܒ̈ܥܬܐ </l>
                    <l xml:lang="syr">ܒܟ ܡܪܝ ܢܬܡܠܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="7"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܒܪܬܗ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܕܣܒܐ ܦܪܫ ܡܢܗ </l>
                    <l xml:lang="syr">ܘܐܬܥܘܪܬ ܥܝܢܗ </l>
                    <l xml:lang="syr">ܕܒܗܿ ܗܘ ܚܿܙܐ ܗܘܐ </l>
                    <l xml:lang="syr">ܢܒܝܐܗ ܢܗܝܪܟ</l>
                    
                </lg>
                <lg type="stanza" n="8"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܦܪܫ ܒܗ </l>
                    <l xml:lang="syr">ܓܒܪܐ ܡܢ ܐܠܥܗ</l>
                    <l xml:lang="syr">ܘܐܬܓܙܝܬ ܐܪܥܐ </l>
                    <l xml:lang="syr">ܕܠܝܬܘܗܝ ܪܝܫ ܓܘܫܡܐ </l>
                    <l xml:lang="syr">ܒܥܕܢ ܬܘܒ ܬܚܙܝܘܗܝ</l>
                    
                </lg>
                <lg type="stanza" n="9"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܬܘܒ ܕܦܪܫ </l>
                    <l xml:lang="syr">ܐܢܬܬܐ ܡܢ ܒܝܬܗܿ</l>
                    <l xml:lang="syr">ܘܟܦܐ ܘܐܦ ܐܫܝܕ </l>
                    <l xml:lang="syr">ܕܐܒܕ ܛܘܟܣܗ</l>
                    <l xml:lang="syr">ܬܒܝܐܗܿ ܡܟܠܘܬܟ</l>
                    
                </lg>
                <lg type="stanza" n="10"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܡܿܝܬܐ </l>
                    <l xml:lang="syr">ܫܡܘܥܬܐ ܡܢ ܫܠܝܐ </l>
                    <l xml:lang="syr">ܘܥܐܠ ܕܠܚܿ ܠܗܿ </l>
                    <l xml:lang="syr">ܛܒܐ ܠܡܫܡܥܬܐ </l>
                    <l xml:lang="syr">ܒܩܠܟ ܬܫܬܝܢ </l>
                    
                </lg>
                <lg type="stanza" n="11"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܓܪܓ </l>
                    <l xml:lang="syr">ܥܝ̈ܢܐ ܠܒܟܬܐ </l>
                    <l xml:lang="syr">ܘܐܝ̈ܕܐ ܠܡܪܩܘܕܬܐ </l>
                    <l xml:lang="syr">ܘܦܘܡܐ ܠܐܘܠܝܬܐ </l>
                    <l xml:lang="syr">ܒܟ ܡܪܝ ܢܬܟܝܫ</l>
                    
                </lg>
                <lg type="stanza" n="12"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܩܿܪܐ </l>
                    <l xml:lang="syr">ܠܒܟܝܐ ܣܓܝܐܐ </l>
                    <l xml:lang="syr">ܕܥܐܠ ܘܕܢܿܦܩ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܘܝܐ ܡܠܐ ܦܘܡܗ</l>
                    <l xml:lang="syr">ܒܛܘܒܟ ܢܬܒܝܐ </l>
                    
                </lg>
                <lg type="stanza" n="13"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܦܿܪܫ ܒܗ </l>
                    <l xml:lang="syr">ܪܚܡܐ ܡܢ ܚܒܪܗ</l>
                    <l xml:lang="syr">ܬܘܪ̈ܐ ܬܪܗܝܢ ܕܦܼܪܫܘ </l>
                    <l xml:lang="syr">ܡܢ ܢܝܪ ܐܘܝܘܬܐ </l>
                    <l xml:lang="syr">ܒܚܘܒܟ ܢܬܡܙܓܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="14"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܦܪܫܘ ܒܗ </l>
                    <l xml:lang="syr">ܚ̈ܬܢܐ ܘܟ̈ܠܠܬܐ </l>
                    <l xml:lang="syr">ܘܚܠܦ ܗܿܘ ܪܩܕܐ </l>
                    <l xml:lang="syr">ܗܘܬ ܠܗܿ ܡܪܩܘܕܬܐ </l>
                    <l xml:lang="syr">ܢܡܿܢܥܘܢ ܠܚܠܘܠܟ</l>
                    
                </lg>
                <lg type="stanza" n="15"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܡܒܛܠ </l>
                    <l xml:lang="syr">ܫܪܪܐ ܕܡܟܘܪ̈ܐ </l>
                    <l xml:lang="syr">ܘܚܠܦ ܓܢܘܢܐ </l>
                    <l xml:lang="syr">ܩܒܪܐ ܛܝܒ ܠܗܿ</l>
                    <l xml:lang="syr">ܐܫܘܗܿ ܠܓܢܘܢܟ</l>
                    
                </lg>
                <lg type="stanza" n="16"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܦܪܫ ܬܘܒ </l>
                    <l xml:lang="syr">ܠܒܪܬܐ ܘܠܚܬܐ </l>
                    <l xml:lang="syr">ܘܐܫܩܠ ܐܝܟ ܝܘ̈ܢܐ </l>
                    <l xml:lang="syr">ܡܢ ܒܝܬ ܡܥܡܪܗܝܢ </l>
                    <l xml:lang="syr">ܢܫܟܢܢ ܒܦܪܕܝܣܟ</l>
                    
                </lg>
                <lg type="stanza" n="17"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܦܪܫ ܬܘܒ </l>
                    <l xml:lang="syr">ܫܒܪܬܐ ܡܢ ܐܡܗܿ</l>
                    <l xml:lang="syr">ܘܐܬܟܡܪܬ ܣܬܐ </l>
                    <l xml:lang="syr">ܕܠܝܬܝܗܿ ܛܘܛܝܬܐ </l>
                    <l xml:lang="syr">ܒܥܕܢ ܬܬܪܒܐ </l>
                    <l>܀܀܀</l>
                </lg>
                <lg type="stanza" n="18"> 
                    <l xml:lang="syr">ܝܘܡܐ ܗܘ ܕܦܪܫ </l>
                    <l xml:lang="syr">ܥܘ̈ܠܐ ܣ̈ܓܝܐܐ </l>
                    <l xml:lang="syr">ܘܐܬܐܒܠܬ ܘܨܕܬ </l>
                    <l xml:lang="syr">ܓܦܬܐ ܕܐܬܩܛܦܬ</l>
                    <l xml:lang="syr">ܒܐܘܨܪܟ ܢܬܢܛܪܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="19"> 
                    <l xml:lang="syr">ܐܝܚܝܕܐ ܡܐ ܕܥܢܕ </l>
                    <l xml:lang="syr">ܣܘ̈ܟܐ ܡܬܪܟܢܢ</l>
                    <l xml:lang="syr">ܕܢܢܘܕܢ ܥܠܘܗܝ </l>
                    <l xml:lang="syr">ܕܦܐܪܐ ܕܢܬܪ ܠܗ </l>
                    <l xml:lang="syr">ܠܟ ܡܪܝ ܢܬܩܪܒ</l>
                    
                </lg>
                <lg type="stanza" n="20"> 
                    <l xml:lang="syr">ܫܘܒܚܐ ܠܕܚܢܩܗ </l>
                    <l xml:lang="syr">ܠܡܘܬܐ ܒܡܨܥܬܐ </l>
                    <l xml:lang="syr">ܒܝܬ ܚ̈ܝܐ ܠܚ̈ܝܐ </l>
                    <l xml:lang="syr">ܣܡܗ ܕܢܠܦܟܘܢ </l>
                    <l xml:lang="syr">ܕܡܘܬܟܘܢ ܛܿܠܩ ܠܗ </l>
                    
                </lg>
                <lg type="stanza" n="21"> 
                    <l xml:lang="syr">ܫܩܘܠܘ ܠܟܘܢ ܕܡ̈ܘܬܐ </l>
                    <l xml:lang="syr">ܡܢܗ ܘܒܗ ܕܦܓܪܐ </l>
                    <l xml:lang="syr">ܕܒܛܟܣܐ ܐܿܬܝܢ </l>
                    <l xml:lang="syr">ܕܪ̈ܓܘܗܝ ܘܝܘ̈ܒܠܘܗܝ</l>
                    <l xml:lang="syr">ܢܫܟܠܠܗ ܓܡܿܪ ܟܘܠ</l>
                    
                </lg>
                <lg type="stanza" n="22"> 
                    <l xml:lang="syr">ܒܪܢܫܐ ܒܚܫܗ </l>
                    <l xml:lang="syr">ܘܒܐܒܠܗ ܡܬܿܪܥܡ </l>
                    <l xml:lang="syr">ܗܒ ܠܗ ܡܪܝ ܐܬܪܐ </l>
                    <l xml:lang="syr">ܕܢܦܝܓ ܟܪܝܘܬܗ</l>
                    <l xml:lang="syr">ܕܒܟܠ ܬܫܬܒܚ </l>
                    
                </lg>
                <lg type="stanza" n="23"> 
                    <l xml:lang="syr">ܫܓܝܫܐ ܗܘ ܡܿܙܕܠܠ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܕܒܥܓܠ ܢܬܢܿܚܡ </l>
                    <l xml:lang="syr">ܠܘ ܗܟܢ ܫܓܝܫ </l>
                    <l xml:lang="syr">ܛܿܒܐ ܘܡܣܪܗܒ</l>
                    <l xml:lang="syr">ܒܪܝܟ ܗܘ ܡܣܝܒܪ ܟܠ</l>
                    
                </lg>
                <lg type="stanza" n="24"> 
                    <l xml:lang="syr">ܫܓܘܫܘ ܡܕܝܢ ܘܣܝܡܘ </l>
                    <l xml:lang="syr">ܦܐܪ̈ܐ ܩܕܡ ܦܪ̈ܥܐ </l>
                    <l xml:lang="syr">ܘܝ̈ܠܕܐ ܩܕܡ ܒ̈ܛܢܐ </l>
                    <l xml:lang="syr">ܘܫܦܝܪ ܒܿܟܝܢ ܐܢܬܘܢ </l>
                    <l xml:lang="syr">ܕܐܘܚܪ ܡܚܐ ܟܘܠ</l>
                    
                </lg>
                <lg type="stanza" n="25"> 
                    <l xml:lang="syr">ܬܗܝܡܢ ܟܪܝܘܬܢ </l>
                    <l xml:lang="syr">ܕܢܚܙܐ ܠܥܢܝ̈ܕܝܢ </l>
                    <l xml:lang="syr">ܘܥܡ ܟܠ ܚܒ̈ܝܒܝܢ </l>
                    <l xml:lang="syr">ܢܘܕܐ ܠܓܡܪ ܟܠ</l>
                    <l xml:lang="syr">ܕܢܚܿܡ ܘܐܚܝ ܟܘܠ</l>
                    
                </lg>
            </div>
