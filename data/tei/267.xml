        <body>
            <div type="title" n="10">
                <ab xml:lang="en">Hymn X</ab>
            </div>
            <div type="body">
                <lg type="superscript">
                    <l xml:lang="syr">ܓ ܕܥܠ ܐܬܙܝܛ ܚܣܢܐ ܒܪ ܩܠܗ</l>
                </lg>
                <lg type="stanza" n="1">
                    <l xml:lang="syr">ܐܬܩܛܠܘ ܝ̈ܠܕܝ   ܘܒܢ̈ܬܝ ܕܠܒܪ ܡܢܝ</l>
                    <l xml:lang="syr">ܥܩܝܪ̈ܝܢ ܫܘܪ̈ܝܗܝܢ   ܘܕܪܝܢ ܝܠܕܝ̈ܗܝܢ </l>
                    <l xml:lang="syr">ܘܕܝܫܝܢ ܩܘܫ̈ܝܗܝܢ</l>
                    
                </lg>
                
                <lg type="refrain">
                    <l xml:lang="syr">ܥܘܢܝܬܐ : ܒܪܝܟܐ ܗܝ ܡܪܕܘܬܟ</l>
                    
                </lg>
                <lg type="stanza" n="2">
                    <l xml:lang="syr">ܓܦܘ ܗܘܘ ܨܝ̈ܕܐ   ܝܘ̈ܢܝ ܡܢ ܚ̈ܣܢܝ</l>
                    <l xml:lang="syr">ܕܫܒܼܩ ܩܢܝ̈ܗܝܢ   ܘܥܪܩܘ ܠܓ̈ܦܝܦܐ </l>
                    <l xml:lang="syr">ܒܓܘܦܐ ܨܕܘ ܐܢܝܢ </l>
                    
                </lg>
                <lg type="stanza" n="3"> 
                    <l xml:lang="syr">ܒܛܘܦܣܐ ܕܫܥܘܬܐ   ܕܫܚܬ ܡܢ ܢܘܪܐ </l>
                    <l xml:lang="syr">ܫܚܘ ܘܦܫܪܘ ܦܓܓܪ̈ܐ   ܕܒ̈ܢܝ ܡܢ ܚܘܡܐ </l>
                    <l xml:lang="syr">ܘܨܗܝܐ ܕܒܚ̈ܣܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="4">
                    <l xml:lang="syr">ܘܚܦܠ ܡܒ̈ܘܥܐ   ܕܚܠܒܐ ܕܪ̈ܕܝܢ ܗܘܘ </l>
                    <l xml:lang="syr">ܠܒ̈ܢܝ ܘܠܫܒܪ̈ܝ   ܠܥܘ̈ܠܐ ܓܙ ܚܠܒܐ </l>
                    <l xml:lang="syr">ܘܡ̈ܝܐ ܠܚܣ̈ܝܠܐ </l>
                    
                </lg>
                <lg type="stanza" n="5">
                    <l xml:lang="syr">ܘܢܦܠ ܘܐܬܦܪܦܪ   ܥܘܠܐ ܡܢ ܐܡܗ</l>
                    <l xml:lang="syr">ܕܠܐ ܠܗ ܠܡܐܢܩ   ܘܠܐ ܠܗܿ ܠܡܫܬܐ </l>
                    <l xml:lang="syr">ܪܘܚܐ ܣܩܘ ܘܡܝܬܘ </l>
                    
                </lg>
                <lg type="stanza" n="6">
                    <l xml:lang="syr">ܐܝܟܢ ܐܬܡܨܝܬ   ܕܬܐܚܘܕ ܛܝܒܘܬܟ</l>
                    <l xml:lang="syr">ܦܓܘ̈ܕܐ ܕܡ̈ܒܘܥܝܗܿ   ܕܠܐ ܡܨܝܢ ܡܬܬܟܣܝܢ </l>
                    <l xml:lang="syr">ܫ̈ܦܥܐ ܕܢܒ̈ܥܝܗܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="7">
                    <l xml:lang="syr">ܘܐܝܟܢ ܟܝ ܐܚܕܬ   ܪ̈ܚܡܝܗܿ ܛܝܒܘܬܟ</l>
                    <l xml:lang="syr">ܘܟܠܬ ܡܒ̈ܘܥܝܗܿ   ܡܢ ܥܡܐ ܕܓܥܼܐ </l>
                    <l xml:lang="syr">ܕܢܪܛܒ ܠܫܢܗ</l>
                    
                </lg>
                <lg type="stanza" n="8">
                    <l xml:lang="syr">ܘܗܘܐ ܗܘܐ ܦܚܬܐ   ܒܝܬ ܠܗܘܢ ܠܐܚ̈ܝܗܘܢ </l>
                    <l xml:lang="syr">ܒܕܡܘܬ ܥܬܝܪܐ   ܕܓܿܥܐ ܘܠܝܬ ܕܥܿܢܐ </l>
                    <l xml:lang="syr">ܕܢܪܛܒ ܠܫܢܗ</l>
                    
                </lg>
                <lg type="stanza" n="9">
                    <l xml:lang="syr">ܘܐܝܟ ܕܒܓܘ ܢܘܪܐ   ܐܪܡܝܢ ܗܘܘ ܚܠܫ̈ܐ </l>
                    <l xml:lang="syr">ܘܚܘܡܐ ܒܓܘ ܨܗ̈ܝܐ   ܢܘܪܐ ܢܫܿܡ ܗܘܐ </l>
                    <l xml:lang="syr">ܘܒܗܘܢ ܕܠܩܿ ܗܘܐ </l>
                    
                </lg>
                <lg type="stanza" n="10">
                    <l xml:lang="syr">ܫܚܘ ܗܘܘ ܓܘܫܡ̈ܝܗܘܢ   ܘܦܫܪܘ ܡܢ ܚܘܡܐ </l>
                    <l xml:lang="syr">ܘܗܦܼܟܘ ܨܗ̈ܝܐ   ܕܢܫܝܘܢܗܿ ܠܐܪܥܐ </l>
                    <l xml:lang="syr">ܒܪܗܠܐ ܕܦܓܪ̈ܝܗܘܢ</l>
                    
                </lg>
                <lg type="stanza" n="11">
                    <l xml:lang="syr">ܘܚܣܢܐ ܕܩܛܠ ܗܘܐ   ܒܨܗܝܐ ܠܥܡܘܪ̈ܘܗܝ</l>
                    <l xml:lang="syr">ܗܼܦܟ ܠܗ ܕܢܫܬܐ ܗܘ   ܪܕܝܐ ܕܫ̈ܠܕܐ </l>
                    <l xml:lang="syr">ܕܫܼܚܘ ܗܘܘ ܡܢ ܨܗܝܐ </l>
                    
                </lg>
                <lg type="stanza" n="12">
                    <l xml:lang="syr">ܡܢܘ ܚܼܙܐ ܥܡܐ   ܕܨܝܝܦ ܡܢ ܨܗܝܐ</l>
                    <l xml:lang="syr">ܘܟܪܟ ܠܗ ܫܘܪܐ   ܕܡ̈ܝܐ ܘܠܐ ܡܫܟܚ</l>
                    <l xml:lang="syr">ܕܢܪܛܒ ܠܫܢܗ </l>
                    
                </lg>
                <lg type="stanza" n="13">
                    <l xml:lang="syr">ܒܕܝܢܐ ܗܘ ܟܝ ܕܣܕܘܡ   ܐܬܕܝܢܘ ܚܒ̈ܝܒܝ</l>
                    <l xml:lang="syr">ܘܐܬܢܓܕܘ ܝ̈ܠܕܝ   ܫܘܢܩܗܿ ܕܣܕܘܡ</l>
                    <l xml:lang="syr">ܕܚܕ ܗܘܐ ܠܚܘܕ ܝܘܡܐ </l>
                    
                </lg>
                <lg type="stanza" n="14">
                    <l xml:lang="syr">ܫܘܢܩܗܿ ܕܢܘܪܐ   ܕܚܕܐ ܗܝ ܡܪܝ ܫܥܐ </l>
                    <l xml:lang="syr">ܒܨܗܝܐ ܢܓܝܪܐ   ܡܘܬܐ ܢܓܝܪܐ </l>
                    <l xml:lang="syr">ܘܢܓܕܐ ܩܛܝܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="15">
                    <l xml:lang="syr">ܒܬܪ ܡܪܝ ܐܒ̈ܠܝ   ܘܚ̈ܫܝ ܡܪ̈ܝܪܐ</l>
                    <l xml:lang="syr">ܗܢܘ ܒܘܝܐܐ   ܐܚܪܢܐ ܕܒܝܐܬܢܝ</l>
                    <l xml:lang="syr">ܕܐܣܓܝܬ ܐܟܡܪܬܢܝ</l>
                    
                </lg>
                <lg type="stanza" n="16">
                    <l xml:lang="syr">ܣܡܐ ܕܠܗ ܣܟܝܬ   ܟܐܒܐ ܗܘ ܚܬܝܬܐ </l>
                    <l xml:lang="syr">ܥܨܒܐ ܕܠܗ ܚܪܬ   ܬܒܪܐ ܗܘ ܡܪܝܪܐ </l>
                    <l xml:lang="syr">ܨܿܒܐ ܕܢܥܒܕ ܠܝ </l>
                    
                </lg>
                <lg type="stanza" n="17">
                    <l xml:lang="syr">ܘܕܣܿܟܝܬ ܕܐܣܩ   ܡܢ ܓܘ ܡܚܫܘܠܐ </l>
                    <l xml:lang="syr">ܒܐܢܫ ܠܝ ܡܚܫܘܠܗ   ܕܝܠܗ ܕܠܡܐܢܐ </l>
                    <l xml:lang="syr">ܡܢ ܗܿܘ ܕܒܝܡܐ </l>
                    
                </lg>
                <lg type="stanza" n="18">
                    <l xml:lang="syr">ܕܣܒܪܬ ܒܥܛܠܘܬܝ   ܕܣܒܟܬ ܐܦ ܣܠܩܬ </l>
                    <l xml:lang="syr">ܡܢ ܓܘ ܓܘܡܨܐ   ܫܕܐܘܢܝ ܚ̈ܛܗܝ</l>
                    <l xml:lang="syr">ܡܕܪܝܫ ܠܓܘܗ</l>
                    
                </lg>
                <lg type="stanza" n="19">
                    <l xml:lang="syr">ܚܙܝ ܡܪܝ ܗܕܡ̈ܝ   ܕܣܝ̈ܦܐ ܣܒܝܣܝܢ ܒܝ </l>
                    <l xml:lang="syr">ܘܨܝܪ̈ܝܢ ܒܕܪ̈ܥܝ   ܘܟܘܬܡ̈ܬܐ ܕܓܐܪ̈ܐ </l>
                    <l xml:lang="syr">ܫܬܝܠܢ ܥܠ ܓܒ̈ܝ </l>
                    
                </lg>
                <lg type="stanza" n="20">
                    <l xml:lang="syr">ܕܡ̈ܥܐ ܒܓܘ ܥܝ̈ܢܐ   ܘܒܐ̈ܕܢܐ ܕܫܡܿܘܥܬܐ </l>
                    <l xml:lang="syr">ܘ̈ܝܐ ܒܓܘ ܦܘܡܐ   ܘܐܒܠܐ ܒܓܘ ܠܒܐ </l>
                    <l xml:lang="syr">ܠܐ ܡܪܝ ܬܘܣܦ ܠܝ</l>
                    
                </lg>
            </div>
        </body>
    </text>
