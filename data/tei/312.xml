        <body>
            <div type="title" n="58">
                <ab xml:lang="en">Hymn LVIII</ab>
            </div>
            <div type="body">
                <lg type="superscript">
                    <l xml:lang="syr">ܙ ܒܪ ܩܠܗ </l>
                </lg>
                <lg type="stanza" n="1"> 
                    <l xml:lang="syr">ܗܐ ܡܘܬܐ ܩܿܕܡ ܒܟܪ ܕܢܒܿܙܚ ܒܗ </l>
                    <l xml:lang="syr">ܒܣܛܢܐ ܕܥܬܝܕ ܕܢܗܐ ܒܙܚܐ ܠܚܪܬܐ </l>
                    
                </lg>
                
                <lg type="refrain">
                    <l xml:lang="syr">ܥܘܢܝܬܐ : ܠܟ ܫܘܒܚܐ ܕܒܙܩܝܦܘܬܟ ܠܒܼܝܫܐ ܙܟܝܬܝܗܝ</l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܘܒܢܘܚܡܟ ܫܩܠܬ ܙܟܘܬܐ ܘܐܦ ܥܠ ܡܘܬܐ</l>
                    
                </lg>
                <lg type="stanza" n="2"> 
                    <l xml:lang="syr">ܘܚܠܦ ܡܪܢ ܐܡܪ ܗܘܐ ܟܕ ܠܐܛ ܠܗ </l>
                    <l xml:lang="syr">ܠܗܿܘ ܕܗܘܼܐ ܥܠܬ ܨܥܪܗ ܘܙܩܝܦܘܬܗ</l>
                    
                </lg>
                <lg type="stanza" n="3"> 
                    <l xml:lang="syr">ܐܕܘܓܐ ܢܗܐ ܠܟ ܩܒܪܐ ܐܘ ܣܛܢܐ </l>
                    <l xml:lang="syr">ܕܓܕܦܬ ܥܠ ܩܠܐ ܩܒܝܪܐ ܕܨܪܝ ܩܒܪ̈ܐ </l>
                    
                </lg>
                <lg type="stanza" n="4"> 
                    <l xml:lang="syr">ܠܡܪܝ ܝܕܥ ܐܢܐ ܘܠܒܪ ܡܪܝ ܐܘ ܣܛܢܐ </l>
                    <l xml:lang="syr">ܟܦܪܬ ܒܡܪܟ ܘܙܩܦܬܝܗܝ ܠܒܪ ܡܪܟ</l>
                    
                </lg>
                <lg type="stanza" n="5"> 
                    <l xml:lang="syr">ܗܢܘ ܫܡܐ ܝܐܐ ܠܟ ܩܛܿܛܠ ܡܪܗ </l>
                    <l xml:lang="syr">ܕܗܛܠܬܝܗܝ ܒܓܠܝܢܗ ܗܿܘ ܩܿܛܠ ܠܟ</l>
                    
                </lg>
                <lg type="stanza" n="6"> 
                    <l xml:lang="syr">ܥܠܝܟ ܢܢܝܕ ܟܠܢܫ ܪܫܗ ܕܒܟ ܪ̈ܝܫܢܐ </l>
                    <l xml:lang="syr">ܪ̈ܝܫܝܗܘܢ ܐܢܝܕܘ ܥܠ ܗܿܘ ܡܪܐ ܕܚ̈ܝܐ </l>
                    
                </lg>
                <lg type="stanza" n="7"> 
                    <l xml:lang="syr">ܩܢܝܐ ܪܥܝܥܐ ܬܚܝܬ ܪ̈ܓܠܐ ܕܟܐ̈ܢܐ ܬܗܘܐ </l>
                    <l xml:lang="syr">ܕܒܟ ܐܘܚܕܘ ܩܢܝܐ ܒܐܝܕܗ ܕܣܡܟ ܟܘܠܐ </l>
                    
                </lg>
                <lg type="stanza" n="8"> 
                    <l xml:lang="syr">ܒܟܠܝܠ ܟܘܒ̈ܐ ܐܬܟܠܠ ܐܝܟ ܕܢܒܿܕܩ </l>
                    <l xml:lang="syr">ܕܬܓܐ ܕܡܠܟܘܬܐ ܫܩܠܗ ܡܢ ܒܝܬ ܕܘܝܕ</l>
                    
                </lg>
                <lg type="stanza" n="9"> 
                    <l xml:lang="syr">ܒܟܠܝܠ ܟܘ̈ܒܐ ܐܬܟܠܠ ܡܠܟܐ ܕܡ̈ܠܟܐ </l>
                    <l xml:lang="syr">ܘܕܨܥܪܘܗܝ ܫܩܠܗ ܬܓܐ ܡܢ ܡ̈ܠܟܝܗܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="10"> 
                    <l xml:lang="syr">ܒܢܚ̈ܬܝ ܒܙܚܐ ܕܝܗܒܘ ܠܗ ܒܗܘܢ ܒܿܙܚ ܗܘܐ </l>
                    <l xml:lang="syr">ܕܫܩܠܗ ܠܠܒܘܫ ܬܫܒܘܚܬܐ ܕܟܘܡܪ̈ܐ ܘܡ̈ܠܟܐ </l>
                    <l>܀܀܀</l>
                    
                </lg>
                <lg type="stanza" n="11"> 
                    <l xml:lang="syr">ܠܚܠܐ ܡܚܝܢ ܕܘܟܪܢܟ ܐܘ ܣܛܢܐ </l>
                    <l xml:lang="syr">ܕܚܠܐ ܩܪܒܬ ܠܨܗܝܗ ܕܡܒܘܥ ܚ̈ܝܐ </l>
                    
                </lg>
                <lg type="stanza" n="12"> 
                    <l xml:lang="syr">ܐܝܕܐ ܥܠܝܟ ܢܪܝܡ ܟܠܢܫ ܕܐܝܕܐ ܚܝܠܬ</l>
                    <l xml:lang="syr">ܕܡܚܬܗ ܠܗܿܘ ܕܒܐܝܕܗ ܩܡ ܒܪ̈ܝܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="13"> 
                    <l xml:lang="syr">ܒܠܼܥ ܒܐܝܕܐ ܘܦܣܩܗܿ ܠܐܝܕܐ ܡܢ ܩܝܦܐ </l>
                    <l xml:lang="syr">ܐܝܕܐ ܕܟܗܢܘܬܐ ܦܣܩܬ ܕܦܣܩ ܡܫܚܐ </l>
                    
                </lg>
                <lg type="stanza" n="14"> 
                    <l xml:lang="syr">ܥܠ ܥܡܘܕܐ ܬܘܒ ܡܬܚܘܗܝ ܐܝܟ ܕܠܢܓܕܐ </l>
                    <l xml:lang="syr">ܠܗܿܘ ܕܐܿܙܠ ܗܘܐ ܥܡܘܕܗ ܩܕܡ ܫܒ̈ܛܝܗܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="15"> 
                    <l xml:lang="syr">ܥܡܘܕܐ ܥܠ ܥܡܘܕܐ ܡܬܿܢܓܕ ܗܘܐ </l>
                    <l xml:lang="syr">ܫܩܼܠ ܢܦܫܗ ܡܢ ܓܘ ܨܗܝܘܢ ܘܐܬܬ ܢܦܠܬ</l>
                    
                </lg>
                <lg type="stanza" n="16"> 
                    <l xml:lang="syr">ܕܬܪ̈ܝܢ ܩܝ̈ܣܝܢ ܪܟܒܘ ܠܗ ܐܝܟ ܠܨܠܝܒܐ </l>
                    <l xml:lang="syr">ܬܒܼܪ ܐܢܘܢ ܠܬܪ̈ܝܢ ܚܘܛܪ̈ܝܢ ܢܛܘܪ̈ܝܗܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="17"> 
                    <l xml:lang="syr">ܪܟܿܒ ܚܙܩܝܐܝܠ ܩܝ̈ܣܐ ܬܪ̈ܝܢ ܒܐܘܝܘܬܐ </l>
                    <l xml:lang="syr">ܒܬܪ̈ܝܢ ܩܝ̈ܣܝܢ ܕܨܠܝܒܐ ܒܼܛܠܘ ܚܘܛܪ̈ܝܗܘܢ</l>
                    
                </lg>
                <lg type="stanza" n="18"> 
                    <l xml:lang="syr">ܬܪ̈ܝܢ ܩܝ̈ܣܝܢ ܒܪܙܐ ܕܓܦ̈ܐ ܠܥܡܐ ܛܥܢܘܗܝ</l>
                    <l xml:lang="syr">ܬܪ̈ܝܢ ܚܘܛܪ̈ܘܗܝ ܗܐ ܐܬܬܒܪܘ ܒܕܡܘܬ ܓܦܘ̈ܗܝ</l>
                    
                </lg>
                <lg type="stanza" n="19"> 
                    <l xml:lang="syr">ܟܢܦܘ̈ܗܝ ܘܓܦܘ̈ܗܝ ܕܨܠܝܒܐ ܦܫܼܛ ܒܚܢܢܐ </l>
                    <l xml:lang="syr">ܪܟܢܘ ܐܒܪ̈ܘܗܝ ܘܛܥܼܢܘ ܥܡ̈ܡܐ ܕܢܐܙܠ ܠܥܕܢ </l>
                    
                    <l>܀܀܀</l>
                </lg>
                <lg type="stanza" n="20"> 
                    <l xml:lang="syr">ܕܐܚܝܢܐ ܗܘ ܕܐܝܠܝܢ ܚ̈ܝܐ ܘܨܝܕ ܒܪ ܛܘܗܡܗ </l>
                    <l xml:lang="syr">ܡܘܒܠ ܪ̈ܚܡܘܗܝ ܕܥܠ ܣܘ̈ܟܘܗܝ ܦܐܪ̈ܘܗܝ ܢܪܥܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="21"> 
                    <l xml:lang="syr">ܙܠܝ ܐܠܝ ܘܒܟܝ ܒܝܫܐ ܥܠܝ ܘܥܠܝܟܘܢ </l>
                    <l xml:lang="syr">ܕܚܕ ܡܢܢ ܠܐ ܥܐܠ ܠܗܿ ܠܓܢܬ ܚ̈ܝܐ </l>
                    
                </lg>
                <lg type="stanza" n="22"> 
                    <l xml:lang="syr">ܗܫܐ ܕܐܘܕܝܬ ܐܘ ܡܘܬܐ ܬܐ ܐܡܪ ܠܟ</l>
                    <l xml:lang="syr">ܕܗܢܐ ܟܠܗ ܬܘܪܓܡܐ ܠܝ ܒܛܠܢܐ ܗܘ </l>
                    
                </lg>
                <lg type="stanza" n="23"> 
                    <l xml:lang="syr">ܐܙܠ ܐܕܝܩ ܥܠ ܦܚ̈ܐ ܗܢܘܢ ܕܨܠܝܬ</l>
                    <l xml:lang="syr">ܘܐܦ ܐܢܬ ܡܘܬܐ ܦܼܪܚ ܘܣܥܘܪ ܟܠ ܕܟܪ̈ܝܗܝܢ</l>
                    
                </lg>
                <lg type="stanza" n="24"> 
                    <l xml:lang="syr">ܡܪܢ ܒܿܛܠ ܠܬܪ̈ܝܗܘܢ ܒܬܪ̈ܝܢ ܓܒ̈ܝܢ </l>
                    <l xml:lang="syr">ܒܝܫܐ ܢܬܒܛܠ ܗܪܟܐ ܘܡܘܬܐ ܬܡܢ </l>
                    
                </lg>
            </div>
        </body>
