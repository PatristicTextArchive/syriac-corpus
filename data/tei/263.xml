            <div type="title" n="5">
                <ab xml:lang="en">Hymn V</ab>
            </div>
            <div type="body">
                <lg type="superscript">
                    <l xml:lang="syr">ܥܠ ܩܠܐ ܕܥܢܟ ܚܢܝܓܐܝܬ</l>
                </lg>
                <lg type="stanza" n="1">
                    <l xml:lang="syr">ܐܫܡܥ ܒܛܝܒܘܬܟ   ܛܒܐ ܕܦܘܪܩܢܐ </l>
                    <l xml:lang="syr">ܕܗܘܼܬ ܡܫܡܥܬܢ   ܐܘܪܚܐ ܕܡܥܒܪܬܐ </l>
                    <l xml:lang="syr">ܕܫܘܗܿ ܠܬܪܥܝܬܢ   ܛ̈ܒܐ ܕܣܘܪܕܐ </l>
                </lg>
                
                <lg type="refrain">
                    <l xml:lang="syr">ܥܘܢܝܬܐ : ܬܫ̈ܒܚܢ ܠܙܟܘܬܟ   ܫܘܒܚܐ ܠܡܪܘܬܟ</l>
                    
                </lg>
                <lg type="stanza" n="2">
                    <l xml:lang="syr">ܒܿܝܐ ܒܝܘܬܪ̈ܢܐ   ܙܥܘܪ̈ܐ ܘܕܠܝ̈ܠܐ </l>
                    <l xml:lang="syr">ܠܐܝܠܝܢ ܕܐܬܬܓܪܘ   ܬܘܟܐ ܒܥܡ̈ܠܝܗܘܢ </l>
                    <l xml:lang="syr">ܒܙܒܢܐ ܕܝܘܬܪܢܐ   ܝܪܬܘܗܝ ܠܚܘܣܪܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="3">
                    <l xml:lang="syr">ܓܠܝܐ ܗܝ ܕܗܼܘ ܪܘܓܙܐ   ܡܨܥ ܘܩܡ ܒܐܪܥܐ </l>
                    <l xml:lang="syr">ܬܘܟܐ ܘܝܘܬܪܢܐ   ܒܚܡܬܐ ܡܦܠܓ ܗܘܐ </l>
                    <l xml:lang="syr">ܐܝܬ ܕܐܚܪܒܗܿ ܡܢ ܫܠܝ   ܘܐܝܬ ܕܐܚܬܪܗܿ ܡܢ ܫܠܝ</l>
                    
                </lg>
                <lg type="stanza" n="4">
                    <l xml:lang="syr">ܕܢܠܦ ܕܡܫܟܚ ܗܘ   ܪܕܐ ܒܟܠ ܦܘܪ̈ܣܝܢ</l>
                    <l xml:lang="syr">ܕܚܼܙܐ ܕܪ̈ܕܘܦܐ   ܕܚܝܠܝܢ ܩܕܡ ܥܝ̈ܢܝ</l>
                    <l xml:lang="syr">ܦܫܛܢܝ ܩܕܡ ܝ̈ܠܕܝ   ܘܢܓܕܘܢܝ ܚܒܝ̈ܒܝ</l>
                    
                </lg>
                <lg type="stanza" n="5">
                    <l xml:lang="syr">ܗܐ ܐܠܦܢܝ ܕܐܕܚܠ   ܡܢܗ ܘܠܐ ܡܢ ܐܢܫ</l>
                    <l xml:lang="syr">ܕܟܕ ܠܝܬ ܕܡܚܐ ܠܢ   ܪܘܓܙܗ ܦܩܼܕ ܡܢ ܫܠܝ</l>
                    <l xml:lang="syr">ܘܟܠ ܐܢܫ ܡܬܼܚ ܢܦܫܗ   ܘܗܼܘ ܠܗ ܡܢܓܕ ܗܘܐ </l>
                    
                </lg>
                <lg type="stanza" n="6">
                    <l xml:lang="syr">ܘܐܦ ܠܗ ܠܒܒܠܝܐ   ܕܢܓܼܕ ܠܟܠ ܡ̈ܠܟܝܢ </l>
                    <l xml:lang="syr">ܟܕ ܐܬܬܟܝܠ ܘܣܒܼܪ   ܕܠܝܬ ܡܿܢ ܕܢܿܟܐ ܠܗ </l>
                    <l xml:lang="syr">ܥܼܒܕܗ ܕܗܼܘ ܒܐܝ̈ܕܘܗܝ   ܢܦܫܗ ܢܿܢܓܕ ܗܘܐ </l>
                    
                </lg>
                <lg type="stanza" n="7">
                    <l xml:lang="syr">ܙܝܘܗ ܘܪܥܝܢܗ   ܡܢ ܫܠܝ ܫܢܘ ܐܟܚܕ</l>
                    <l xml:lang="syr">ܘܒܣܒܣ ܫܼܕܐ ܢܚ̈ܬܘܗܝ   ܘܢܦܼܩ ܦܗܼܐ ܒܕܒܪܐ </l>
                    <l xml:lang="syr">ܗܼܘ ܠܗ ܪܕܦ ܠܘܩܕܡ   ܘܟܢ ܗܼܘ ܪܕܦܘܗܝ ܥܒܼ̈ܕܘܗܝ </l>
                    
                </lg>
                <lg type="stanza" n="8">
                    <l xml:lang="syr">ܚܿܘܝ ܠܟܠ ܡ̈ܠܟܝܢ   ܕܫܼܒܐ ܘܐܚܿܬ ܗܘܐ </l>
                    <l xml:lang="syr">ܕܠܘ ܗܼܘ ܒܝܕ ܚܝܠܗ   ܡܨܐ ܗܘܐ ܕܢܙܟܐ ܗܘܐ </l>
                    <l xml:lang="syr">ܚܝܠܐ ܕܠܗ ܢܓܕ   ܗܘܝܘ ܪܕܐ ܐܢܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="9">
                    <l xml:lang="syr">ܛܥܢܬ ܘܩܡܬ ܡܪܝ   ܢ̈ܓܕܐ ܕܦܪ̈ܘܩܝ</l>
                    <l xml:lang="syr">ܡܨܝܬ ܗܘ ܒܛܝܒܘܬܐ   ܕܬܛܐܒ ܒܢܟ̈ܘܝܐ </l>
                    <l xml:lang="syr">ܡܨܝܬ ܗܘ ܒܟܐܢܘܬܐ   ܕܬܪܕܐ ܒܥܕܘܪ̈ܐ </l>
                    
                    <l xml:lang="syr">ܝ 10</l>
                    <l xml:lang="syr">ܝܘܡܐ ܕܣܥܼܐ ܘܣܠܼܩ   ܥܠ ܫܡܪܝܢ ܚܝܠܐ </l>
                    <l xml:lang="syr">ܣܒܥܐ ܘܦܘܢܩܐ   ܓ̈ܙܐ ܘܩ̈ܢܝܢܐ </l>
                    <l xml:lang="syr">ܐܪܫܠܘ ܫܒܩܘ ܘܥܪܩܘ   ܟܠܠܗܿ ܒܪ̈ܕܘܦܝܗܿ</l>
                    
                </lg>
                <lg type="stanza" n="11">
                    <l xml:lang="syr">ܟܠܠܘܢܝ ܚ̈ܒܝܒܝ   ܘܣܥܪܘܢܝ ܦܪ̈ܘܩܝ</l>
                    <l xml:lang="syr">ܒܥܘܠܐ ܕܥܡܘܪ̈ܝ   ܢܓܘܢܝ ܥܕܘܪ̈ܝ</l>
                    <l xml:lang="syr">ܐܫܩܢܝ ܡܢ ܓܘܗܦܢܝ   ܟܣܐ ܕܒܘܝܐܐ</l>
                    
                </lg>
                <lg type="stanza" n="12">
                    <l xml:lang="syr">ܠܫܒܠܐ ܘܠܓܦܬܐ   ܛܪ ܡܪܝ ܒܛܝܒܘܬܟ</l>
                    <l xml:lang="syr">ܬܒܝܐ ܠܐܟܪܐ   ܓܦܬܗ ܕܟܪܡܐ </l>
                    <l xml:lang="syr">ܬܚܕܐ ܠܦܠܚܐ   ܫܒܠܗ ܕܐܟܪܐ</l>
                    
                </lg>
                <lg type="stanza" n="13">
                    <l xml:lang="syr">ܠܘܝܢ ܚܕܐ ܠܚܕܐ   ܗܿܝ ܫܒܠܐ ܘܣܬܐ </l>
                    <l xml:lang="syr">ܒܚܩܠܐ ܠܚܨ̈ܘܕܐ   ܚܡܪܐ ܡܨܐ ܡܦܨܚ</l>
                    <l xml:lang="syr">ܒܟܪܡܐ ܠܦܠܚ̈ܐ   ܠܚܡܐ ܡܚܝܠ ܬܘܒ</l>
                    
                </lg>
                <lg type="stanza" n="14">
                    <l xml:lang="syr">ܡܨܝܢ ܬܪ̈ܬܝܗܝܢ   ܕܢܒܝܐܢ ܥܩ̈ܬܝ</l>
                    <l xml:lang="syr">ܬܠܝܬܝܐ ܡܨܝܐ   ܕܬܒܝܐܢ ܝܬܝܪ</l>
                    <l xml:lang="syr">ܕܐܘܕܐ ܕܡܢ ܫܠܝܐ   ܦܠܛܬ ܒܛܝܒܘܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="15">
                    <l xml:lang="syr">ܡܿܢ ܕܝܢ ܕܢܬܢܛܪܐ   ܢܦܫܗ ܒܛܝܒܘܬܐ</l>
                    <l xml:lang="syr">ܐܢ ܐܿܙܠ ܕܢܬܪܥܡ   ܒܬܘܟܐ ܕܩ̈ܢܝܢܘܗܝ </l>
                    <l xml:lang="syr">ܛܠܡܗܿ ܠܛܝܒܘܬܗ   ܕܗܿܘ ܡܿܢ ܕܚܣ ܥܠܘܗܝ</l>
                    
                </lg>
                <lg type="stanza" n="16">
                    <l xml:lang="syr">ܡܨܒܐ ܗܘ ܨܒܼܐ ܘܚܿܒܠ   ܡܕܡ ܚܠܦ ܡܕܡ</l>
                    <l xml:lang="syr">ܚܿܒܠ ܠܩ̈ܢܝܢܐ   ܘܫܒܼܩ ܠܩ̈ܢܝܢܐ </l>
                    <l xml:lang="syr">ܚܿܒܠ ܠܫ̈ܬܠܬܢ   ܒܚܠܦܐ ܕܢܦܫ̈ܬܢ</l>
                    
                </lg>
                <lg type="stanza" n="17">
                    <l xml:lang="syr">ܢܕܚܼܠ ܕܢܬܪܥܡ   ܕܡ ܢܬܥܝܪ ܪܘܓܙܐ </l>
                    <l xml:lang="syr">ܘܢܫܒܘܩ ܠܩ̈ܢܝܢܐ   ܘܢܡܚܐ ܠܩ̈ܢܝܐ </l>
                    <l xml:lang="syr">ܕܢܐܠܦ ܒܫܘܠܡܐ   ܚܢܢܗ ܕܫܘܪܝܐ</l>
                    
                </lg>
                <lg type="stanza" n="18">
                    <l xml:lang="syr">ܢܐܠܦ ܕܥܠ ܡܢܘ   ܙܕܩ ܕܢܬܪܥܡ </l>
                    <l xml:lang="syr">ܝܠܦ ܕܬܬܪܥܡ   ܠܐ ܗܘܐ ܥܠ ܪܕܘܝܐ </l>
                    <l xml:lang="syr">ܐܠܐ ܥܠ ܨܒܝܢܟ   ܕܐܚܛܝܟ ܘܐܢܓܕܬ </l>
                    
                </lg>
                <lg type="stanza" n="19">
                    <l xml:lang="syr">ܢܪܦܝܘܗܝ ܠܪܘܥܡܐ   ܘܢܦܢܐ ܠܒܥܘܬܐ </l>
                    <l xml:lang="syr">ܕܐܢ ܡܝܬ ܩܢܝܐ   ܒܼܛܠ ܠܗ ܐܦ ܩܢܝܢܗ </l>
                    <l xml:lang="syr">ܘܟܡܐ ܕܗܼܘ ܩܝܡ   ܥܩܿܒ ܠܐܒ̈ܕܬܗ</l>
                    
                </lg>
                <lg type="stanza" n="20">
                    <l xml:lang="syr">ܢܣܓܘܢ ܒ̈ܘܝܐܐ   ܒܪ̈ܚܡܐ ܠܥܡܘܪ̈ܝ</l>
                    <l xml:lang="syr">ܣܪܝܕܐ ܘܬܘܬܪܐ   ܢܒܿܝܐ ܒܓܘ ܪܘܓܙܐ </l>
                    <l xml:lang="syr">ܘܐܛܥܐ ܒܫܪܟܢܐ   ܐܒܠܗ ܕܚܘܒܠܐ </l>
                    
                </lg>
                <lg type="stanza" n="21">
                    <l xml:lang="syr">ܣܡܣܡ ܘܪܒܐ ܡܪܝ   ܦܐܪ̈ܐ ܕܐܘܬܪ ܪܘܓܙܐ </l>
                    <l xml:lang="syr">ܕܡܘ ܠܝ ܐܝܟ ܠܟܪ̈ܝܗܐ   ܕܦܠܛܘ ܒܡܘܬܢܐ </l>
                    <l xml:lang="syr">ܐܛܥܝܢܝ ܒ̈ܕܠܝܠܐ   ܚܫܐ ܕܣ̈ܓܝܐܐ</l>
                    
                </lg>
                <lg type="stanza" n="22">
                    <l xml:lang="syr">ܥܡܗܿ ܕܡܠܬܝ ܡܪܝ   ܥܗܿܕܬ ܕܐܦ ܝܪܚܐ ܗܘ</l>
                    <l xml:lang="syr">ܕܣܡܕܪܐ ܡܪܥ ܠܗ   ܘܢܦܠ ܒܟܘܪܗܢܐ </l>
                    <l xml:lang="syr">ܢܐܬܐ ܠܚܘܠܡܢܐ   ܕܢܗܘܐ ܠܒܘܝܐܐ</l>
                    
                </lg>
                <lg type="stanza" n="23">
                    <l xml:lang="syr">ܦܠܛܘ ܓܝܪ ܒܡܘܬܢܐ   ܕܕܒܪܘ ܠܐܚ̈ܝܗܘܢ </l>
                    <l xml:lang="syr">ܓܘ̈ܦܢܐ ܕܠܐ ܩܠܐ   ܒܟܝ ܕܩܕܡܝܗܝܢ </l>
                    <l xml:lang="syr">ܓܕܝܕܝܢ ܪܡܝܢ ܪܒܬ   ܐܝ̈ܠܢܐ ܪ̈ܚܘܡܝܗܝܢ</l>
                    
                </lg>
                <lg type="stanza" n="24">
                    <l xml:lang="syr">ܨܘܬܐ ܕܢܨ̈ܒܬܐ   ܗܐ ܒܥܝܐ ܐܪܥܐ </l>
                    <l xml:lang="syr">ܥܩܪ̈ܐ ܠܦ̈ܠܚܐ   ܒܿܟܝܢ ܐܦ ܡܒܟܝܢ </l>
                    <l xml:lang="syr">ܫܘܦܪܐ ܦܪܣ ܘܐܛܠ   ܘܩܦܠܘܗܝ ܚܕܐ ܫܥܐ </l>
                    
                </lg>
                <lg type="stanza" n="25">
                    <l xml:lang="syr">ܩܪܒ ܢܪܓܐ ܘܦܣܩ   ܘܦܣܩܗ ܠܦܠܚܐ </l>
                    <l xml:lang="syr">ܦܣܩܐ ܠܐ̈ܝܠܢܐ   ܘܚܫܐ ܠܦܠܚܐ</l>
                    <l xml:lang="syr">ܟܠ ܢܪܓܐ ܕܡܚܘ   ܗܘܝܘ ܛܥܡ ܚܫܗ</l>
                    
                </lg>
