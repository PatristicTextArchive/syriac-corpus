        <body>
            <div type="title" n="74">
                <ab xml:lang="en">Hymn XXXIV</ab>
            </div>
            <div type="body">
                <lg type="superscript">
                    <l xml:lang="syr">ܥܠ ܩܠܐ ܕܐܘ ܡܪܝ ܒܓܢܝܟ</l>
                    <l>܀܀܀</l>
                </lg>
                <lg type="stanza" n="1"> 
                    <l xml:lang="syr">ܐܘ ܟܡܐ ܪܒ ܐܕܡ </l>
                    <l xml:lang="syr">ܘܫܒܝܚ ܒܒܪܝܬܗ</l>
                    <l xml:lang="syr">ܐܘ ܟܡܐ ܪܒ ܫܦܠܗ </l>
                    <l xml:lang="syr">ܒܥܕܢ ܡܝܬܘܬܗ</l>
                    <l xml:lang="syr">ܢܘܪܒܝܘܗܝ ܢܘܚܡܟ</l>
                    
                </lg>
                
                <lg type="refrain">
                    <l xml:lang="syr">ܥܘܢܝܬܐ : ܢܚܕܬܝܘܗܝ ܢܘܚܡܟ</l>
                    
                </lg>
                <lg type="stanza" n="2"> 
                    <l xml:lang="syr">ܒܪܘܟܒܗ ܨܝܪܐ </l>
                    <l xml:lang="syr">ܚܟܡܬ ܒܪܘܝܗ</l>
                    <l xml:lang="syr">ܒܚܘܒܠܗ ܪܫܝܡܐ </l>
                    <l xml:lang="syr">ܒܝܫܘܬ ܢܟܘܠܗ </l>
                    <l xml:lang="syr">ܢܒܗܬ ܒܚܘܕܬܗ</l>
                    
                </lg>
                <lg type="stanza" n="3"> 
                    <l xml:lang="syr">ܓܒܼܐ ܘܪܒ ܒܥܒܿܕܐ </l>
                    <l xml:lang="syr">ܘܫܝܛ ܗܘ ܒܥܘܢܕܢܗ </l>
                    <l xml:lang="syr">ܒܚ̈ܝܘܗܝ ܐܝܟ ܡܕܡ </l>
                    <l xml:lang="syr">ܒܡܘܬܗ ܐܝܟ ܠܐ ܡܕܡ </l>
                    <l xml:lang="syr">ܬܘܒ ܡܪܝ ܐܘܪܒܝܗܝ</l>
                    
                </lg>
                <lg type="stanza" n="4"> 
                    <l xml:lang="syr">ܕܐܿܢ ܘܡܚܝܒ </l>
                    <l xml:lang="syr">ܡܥܩܿܒ ܘܡܿܙܟܐ </l>
                    <l xml:lang="syr">ܕܘܡܝܗ ܕܐܠܗܐ </l>
                    <l xml:lang="syr">ܘܡܘܬܗ ܕܚܝ̈ܘܬܐ </l>
                    <l xml:lang="syr">ܨܠܡܟ ܢܐܪܒ ܒܟ </l>
                    
                </lg>
                <lg type="stanza" n="5"> 
                    <l xml:lang="syr">ܗܐ ܡܠܬܗ ܪܒܐ ܗܝ </l>
                    <l xml:lang="syr">ܘܥܠ ܟܘܠ ܡܬܦܪܣܐ </l>
                    <l xml:lang="syr">ܒܬܒܝܠ ܡܠܠܐ ܗܘ </l>
                    <l xml:lang="syr">ܘܒܫܝܘܠ ܡܫܿܬܬܩ</l>
                    <l xml:lang="syr">ܚܿܕܬ ܩ̈ܝܢܬܗ </l>
                    
                    <l>܀܀܀</l>
                </lg>
                <lg type="stanza" n="6"> 
                    <l xml:lang="syr">ܘܥܡܿܕ ܒܝܡܐ </l>
                    <l xml:lang="syr">ܘܡܿܣܩ ܣܝܡ̈ܬܗ</l>
                    <l xml:lang="syr">ܘܡܐ ܕܥܡܼܕ ܒܫܝܘܠ </l>
                    <l xml:lang="syr">ܟܡ ܥܠܘܗܝ ܡܘܬܐ </l>
                    <l xml:lang="syr">ܒܟ ܡܪܝ ܢܬܕܠܐ </l>
                    
                </lg>
                <lg type="stanza" n="7"> 
                    <l xml:lang="syr">ܙܪܝܙܐ ܕܠܝܡܐ </l>
                    <l xml:lang="syr">ܡܫܥܒܕ ܘܠܝܒܫܐ</l>
                    <l xml:lang="syr">ܒܩܒܪܐ ܡܫܿܬܦܠ </l>
                    <l xml:lang="syr">ܘܗܿܘܐ ܫܪܕܘܕܐ </l>
                    <l xml:lang="syr">ܢܓܘܠܘܢ ܡܪܝ ܪ̈ܚܡܝܟ</l>
                    
                </lg>
                <lg type="stanza" n="8"> 
                    <l xml:lang="syr">ܚܝܗܘܬܐ ܡܫܥܒܕ </l>
                    <l xml:lang="syr">ܢܝܪܗ ܚܣܝܢܐ </l>
                    <l xml:lang="syr">ܘܢܝܪܗ ܕܡܘܬܐ </l>
                    <l xml:lang="syr">ܡܫܦܠ ܚܐܪܘܬܗ</l>
                    <l xml:lang="syr">ܒܟ ܡܪܝ ܢܬܚܪܪ</l>
                    
                </lg>
                <lg type="stanza" n="9"> 
                    <l xml:lang="syr">ܛܿܟܣ ܒܦܓܘ̈ܕܐ </l>
                    <l xml:lang="syr">ܚܐܦܐ ܕܡܪܟܒܬܐ </l>
                    <l xml:lang="syr">ܡܘܬܐ ܒܿܠܡ ܠܗ </l>
                    <l xml:lang="syr">ܘܒܫܝܘܠ ܐܣܿܪ ܠܗ </l>
                    <l xml:lang="syr">ܢܫܪܝܘܗܝ ܫܿܪܐ ܟܠ</l>
                    
                </lg>
                <lg type="stanza" n="10"> 
                    <l xml:lang="syr">ܝܬܿܒ ܥܠ ܬܪܢܘܣ </l>
                    <l xml:lang="syr">ܒܬܓܐ ܘܒܟܠܝܠܐ </l>
                    <l xml:lang="syr">ܘܡܘܬܐ ܡܿܚܬ ܠܗ </l>
                    <l xml:lang="syr">ܐܣܟܡܗ ܘܬܒܿܪ ܠܗ </l>
                    <l xml:lang="syr">ܒܟ ܡܪܝ ܢܬܝܩܪ</l>
                    
                </lg>
                <lg type="stanza" n="11"> 
                    <l xml:lang="syr">ܟܬܿܒ ܘܐܦ ܩܿܪܐ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܘܕܪܫ ܘܡܬܿܪܓܡ </l>
                    <l xml:lang="syr">ܘܠܐ ܡܫܟܚ ܕܢܦܝܣ </l>
                    <l xml:lang="syr">ܠܡܘܬܐ ܒܚ̈ܟܡܬܗ</l>
                    <l xml:lang="syr">ܒܟ ܡܪܝ ܢܬܿܦܨܐ </l>
                    
                </lg>
                <lg type="stanza" n="12"> 
                    <l xml:lang="syr">ܟܕ ܠܐܪܝܐ ܚܿܒܫ </l>
                    <l xml:lang="syr">ܘܐܣܪ ܬܢܝܢܐ </l>
                    <l xml:lang="syr">ܘܠܐ ܒܢܩܥܐ ܕܫܝܘܠ </l>
                    <l xml:lang="syr">ܡܘܬܐ ܚܒܿܫ ܠܗ</l>
                    <l xml:lang="syr">ܢܦܩܝܘܗܝ ܩܠ ܩܪܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="13"> 
                    <l xml:lang="syr">ܠܐܝܠܢܐ ܦܿܣܩ </l>
                    <l xml:lang="syr">ܘܡܚܠܦ ܘܐܦ ܣܓܐ </l>
                    <l xml:lang="syr">ܘܠܗ ܦܪܫ ܡܘܬܐ </l>
                    <l xml:lang="syr">ܡܢ ܟܠ ܚܒܝܒ̈ܘܗܝ</l>
                    <l xml:lang="syr">ܒܫܘܒܚܟ ܢܚܙܐ ܐܢܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="14"> 
                    <l xml:lang="syr">ܠܡܚ̈ܘܬܐ ܐܣܿܝ </l>
                    <l xml:lang="syr">ܒܣܡ̈ܡܢܐ ܕܐܫܟܚ</l>
                    <l xml:lang="syr">ܘܠܡܚܘܬܗ ܕܡܘܬܐ </l>
                    <l xml:lang="syr">ܣܡܐ ܠܐ ܢܦܠ </l>
                    <l xml:lang="syr">ܢܐܣܝܘܗܝ ܣܡ ܚ̈ܝܐ </l>
                    
                </lg>
                <lg type="stanza" n="15"> 
                    <l xml:lang="syr">ܡܫܚܗ ܘܗܪ̈ܘܡܘܗܝ </l>
                    <l xml:lang="syr">ܘܣܘܓܐܐ ܕܒܣܡ̈ܢܘܗܝ</l>
                    <l xml:lang="syr">ܠܐ ܡܨܐ ܡܦܟܗ ܠܗ </l>
                    <l xml:lang="syr">ܠܪܝܚܗ ܡܐ ܕܥܼܢܕ </l>
                    <l xml:lang="syr">ܒܡܠܚܟ ܢܬܿܡܕܟ</l>
                    
                </lg>
                <lg type="stanza" n="16"> 
                    <l xml:lang="syr">ܢܗܝܪ̈ܐ ܡܿܦܠܓ </l>
                    <l xml:lang="syr">ܠܫ̈ܥܐ ܘܥ̈ܕܢܐ </l>
                    <l xml:lang="syr">ܘܫܥܬ ܥܘܢܕܢܗ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܐܝܟܐ ܗܝ ܠܐ ܝܕܥܿ</l>
                    <l xml:lang="syr">ܫܘܒܚܐ ܠܝܕܥܿ ܟܠ</l>
                    
                </lg>
                <lg type="stanza" n="17"> 
                    <l xml:lang="syr">ܣܥܿܐ ܥܠ ܕܐܪܥܐ </l>
                    <l xml:lang="syr">ܘܒܿܨܐ ܕܫܡܝܐ </l>
                    <l xml:lang="syr">ܘܡܐ ܕܡܛܝܗܝ ܡܘܬܐ </l>
                    <l xml:lang="syr">ܛܥܐ ܠܗ ܘܐܬܕܘܕ</l>
                    <l xml:lang="syr">ܒܟ ܡܪܝ ܢܬܦܿܨܐ </l>
                    
                </lg>
                <lg type="stanza" n="18"> 
                    <l xml:lang="syr">ܣܿܦܐ ܪܒܝܬܐ </l>
                    <l xml:lang="syr">ܘܡܘܣܦ ܥܠ ܩܪܢܐ </l>
                    <l xml:lang="syr">ܬܒܿܥ ܟܿܢܫ ܠܗܿ </l>
                    <l xml:lang="syr">ܘܒܕܪ ܡܘܪܬ ܠܗܿ</l>
                    <l xml:lang="syr">ܬܥܬܪܗ ܛܝܒܘܬܟ</l>
                    
                </lg>
                <lg type="stanza" n="19"> 
                    <l xml:lang="syr">ܥܒܿܕ ܡܕܝܪ̈ܐ </l>
                    <l xml:lang="syr">ܠܩܝܛܐ ܘܠܣܬܘܐ </l>
                    <l xml:lang="syr">ܘܚܕ ܩܒܪܐ ܠܩܝܛܐ </l>
                    <l xml:lang="syr">ܘܠܣܬܘܐ ܣܦܩ ܠܗ </l>
                    <l xml:lang="syr">ܠܥܕܢ ܢܬܒܿܣܡ </l>
                    
                </lg>
                <lg type="stanza" n="20"> 
                    <l xml:lang="syr">ܦܠܓ ܘܕܢܣܒ </l>
                    <l xml:lang="syr">ܫܐܠ ܝܬܝܪܐ </l>
                    <l xml:lang="syr">ܡܘܬܐ ܡܫܚ ܝܗܒ ܠܗ </l>
                    <l xml:lang="syr">ܐܡ̈ܐ ܬܠܬ ܒܫܝܘܠ</l>
                    <l xml:lang="syr">ܠܐܘܪܥܟ ܡܪܝ ܢܦܪܚ</l>
                    
                </lg>
                <lg type="stanza" n="21"> 
                    <l xml:lang="syr">ܨܿܠܠ ܚܡܪ̈ܢܐ </l>
                    <l xml:lang="syr">ܘܐܣܓܝ ܒܘܣܡ̈ܐ </l>
                    <l xml:lang="syr">ܡܘܬܐ ܣܿܟܪ ܠܗ </l>
                    <l xml:lang="syr">ܠܦܘܡܗ ܡܢ ܪܥܝܗ </l>
                    <l xml:lang="syr">ܢܒܝܐܝܘܗܝ ܦܬܘܪܟ</l>
                    <l>܀܀܀</l>
                </lg>
                <lg type="stanza" n="22"> 
                    <l xml:lang="syr">ܩܦܣ ܘܐܣܓܝ ܝܥܢܐ </l>
                    <l xml:lang="syr">ܐܘܨܪ̈ܐ ܠܐ ܣܢܗ</l>
                    <l xml:lang="syr">ܡܘܬܐ ܡܿܦܩ ܠܗ </l>
                    <l xml:lang="syr">ܘܒܫܝܘܠ ܩܿܦܣ ܠܗ </l>
                    <l xml:lang="syr">ܢܦܩܗ ܢܘܚܡܟ </l>
                    
                </lg>
                <lg type="stanza" n="23"> 
                    <l xml:lang="syr">ܪܕܐܿ ܒܫ̈ܒܝܠܐ </l>
                    <l xml:lang="syr">ܘܥܿܛܦ ܒܐܘܪ̈ܚܬܐ </l>
                    <l xml:lang="syr">ܚܕܐ ܗܝ ܐܘܪܚܐ ܐܿܙܠ </l>
                    <l xml:lang="syr">ܕܬܘܒ ܒܗܿ ܠܐ ܥܿܛܦ</l>
                    <l xml:lang="syr">ܢܦܼܢܐ ܠܦܪܕܝܣܟ</l>
                    
                </lg>
                <lg type="stanza" n="24"> 
                    <l xml:lang="syr">ܫܩ̈ܘܠܐ ܡܿܝܬܝܢ </l>
                    <l xml:lang="syr">ܘܩܿܪܝܢ ܛܥܘ̈ܢܐ </l>
                    <l xml:lang="syr">ܘܚܠܦ ܥܪ̈ܣܬܗ </l>
                    <l xml:lang="syr">ܥܪܣܐ ܕܥܢܝ̈ܕܐ </l>
                    <l xml:lang="syr">ܢܦܪܚܝܘܗܝ ܢܘܚܡܐ </l>
                    
                </lg>
                <lg type="stanza" n="25"> 
                    <l xml:lang="syr">ܬܥܫ ܒܐ̈ܦܕܢܐ </l>
                    <l xml:lang="syr">ܪ̈ܘܝܚܐ ܕܢܘܦܘܢ ܠܗ </l>
                    <l xml:lang="syr">ܘܦܓܪܗ ܡܠܐ ܩܒܪܐ </l>
                    <l xml:lang="syr">ܘܥܦܪܗ ܡܠܐ ܫܘܥܠܐ </l>
                    <l xml:lang="syr">ܡܕܪܝܫ ܚܕܬܝܗܝ</l>
                    
                </lg>
            </div>
