        <body>
            <div type="title" n="62">
                <ab xml:lang="en">Hymn LXII</ab>
            </div>
            <div type="body">
                <lg type="superscript">
                    <l xml:lang="syr">ܝܐ ܒܪ ܩܠܗ</l>
                </lg>
                <lg type="stanza" n="1"> 
                    <l xml:lang="syr">ܗܐ ܡܘܬܐ ܡܠܟܐ ܕܫܬܩܐ ܩܒܿܠ ܐܚ̈ܝ </l>
                    <l xml:lang="syr">ܕܡܠܝܢܝܗܝ ܐܬܪܗ ܐܝܠܠܬܐ ܕܦܣܩ ܣܒܪܐ </l>
                    
                </lg>
                
                <lg type="refrain">
                    <l xml:lang="syr">ܥܘܢܝܬܐ : ܠܟ ܫܘܒܚܐ ܪܒܐ ܕܢܚܼܬ ܨܝܕ ܬܚ̈ܬܝܐ </l>
                    <l xml:lang="syr">ܘܚܫ ܘܐܬܿܢܚܡ ܘܒܦܓܪܗ ܢܚܿܡ ܦܓܪ̈ܝܢ </l>
                    
                </lg>
                <lg type="stanza" n="2"> 
                    <l xml:lang="syr">ܕܒܿܟܝܢ ܚܢܢ ܐܝܟ ܫ̈ܢܝܐ ܒܬܪ̈ܥܝܗܿ ܕܫܝܘܠ</l>
                    <l xml:lang="syr">ܫܡܼܥ ܐܝܠܝܢ ܐܡܪ ܡܘܬܐ ܟܕ ܟܐܐ ܒܢ </l>
                    
                </lg>
                <lg type="stanza" n="3"> 
                    <l xml:lang="syr">ܢܟܦܬ ܠܝ ܐܡܿܪ ܡܘܬܐ ܕܟܝܬܘܢܢܝ</l>
                    <l xml:lang="syr">ܦܠܓܗܿ ܕܫܝܘܠ ܠܐ ܡܿܠܐ ܠܩ̈ܛܠܝܟܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="4"> 
                    <l xml:lang="syr">ܫ̈ܠܕܐ ܓܝܪ ܢܘܟܪ̈ܝܬܐ ܟܫܝܢ ܒܫܝܘܠ</l>
                    <l xml:lang="syr">ܬܪ̈ܬܝܢ ܡ̈ܢܘܢ ܐܝܬ ܬܡܢ ܡ̈ܝܬܐ ܩ̈ܛܝܠܐ</l>
                    
                </lg>
                <lg type="stanza" n="5"> 
                    <l xml:lang="syr">ܚܠܦ ܕܐܩܒܘܠ ܕܥܠܒܬܘܢܢܝ ܗܐ ܒܟܝܢ ܐܢܬܘܢ </l>
                    <l xml:lang="syr">ܫܚܩܬܘܢܝܗܝ ܬܪܥܗܿ ܕܫܝܘܠ ܘܐܠܙܬܘܢܢܝ</l>
                    
                    <l>܀܀܀</l>
                </lg>
                <lg type="stanza" n="6"> 
                    <l xml:lang="syr">ܠܝܠܘܕܐ ܓܝܪ ܕܡܿܝܢ ܐܢܬܘܢ ܗܿܘ ܕܥܕ ܒܿܟܐ</l>
                    <l xml:lang="syr">ܓܚܟ ܠܗ ܬܘܒ ܐܝܟ ܕܐܦ ܐܢܬܘܢ ܥܠ ܡ̈ܝܬܝܟܘܢ</l>
                    
                </lg>
                <lg type="stanza" n="7"> 
                    <l xml:lang="syr">ܠܐ ܛܥܡܐ ܓܝܪ ܠܐܒ̈ܠܝܟܘܢ ܘܠܐ ܪܥܝܢܐ </l>
                    <l xml:lang="syr">ܠܓܘܚ̈ܟܝܟܘܢ ܠܚܣܝܠܐ ܗܘ ܓܝܪ ܕܡܿܝܢ ܐܢܬܘܢ ܠܝ</l>
                    
                </lg>
                <lg type="stanza" n="8"> 
                    <l xml:lang="syr">ܚܕܐ ܫܥܐ ܒܟܝܐ ܘܐܠܝܐ ܘܒܬܪ ܩܠܝܠ</l>
                    <l xml:lang="syr">ܐܦ ܫܥܝܐ ܘܙܠܝܠܘܬܐ ܐܝܟ ܕܛ̈ܠܝܐ </l>
                    
                </lg>
                <lg type="stanza" n="9"> 
                    <l xml:lang="syr">ܠܐ ܡܨܝܢ ܐܢܬܘܢ ܓܝܪ ܠܡܗܘܐ ܐܢܫܐ ܫܠܡ̈ܐ </l>
                    <l xml:lang="syr">ܕܠܐ ܒܟܝܐ ܐܦ ܠܐ ܓܘܚܟܐ ܐܝܟ ܛܥܡ̈ܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="10"> 
                    <l xml:lang="syr">ܥܠ ܣܦܪ̈ܝܟܘܢ ܟܪܝܐ ܠܢ ܕܫܚܩܘܢ ܐܢܘܢ</l>
                    <l xml:lang="syr">ܠܟܬܒ̈ܝܗܿ ܕܐܠܗܘܬܐ ܕܠܟܘܢ ܢܩܪܘܢ</l>
                    
                </lg>
                <lg type="stanza" n="11"> 
                    <l xml:lang="syr">ܩܪ̈ܘܝܐ ܡܩܥܐ ܩܥܿܝܢ ܕܘ̈ܓܐ ܐܢܬܘܢ ܓܝܪ</l>
                    <l xml:lang="syr">ܗܼܝ ܩܥܬܐ ܡܦܝܣܐ ܥܠܝܟܘܢ ܕܥܪ̈ܕܐ ܐܢܬܘܢ</l>
                    
                </lg>
                <lg type="stanza" n="12"> 
                    <l xml:lang="syr">ܕܩܿܪܐ ܓܝܪ ܐܦ ܕܡܬܪܓܡ ܡܩܥܐ ܗܘ ܩܿܥܝܢ </l>
                    <l xml:lang="syr">ܐ̈ܕܢܝܟܘܢ ܟܝ ܝܩܝܪ̈ܢ ܐܘ ܠܒ̈ܝܟܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="13"> 
                    <l xml:lang="syr">ܐܠܘ ܓܝܪ ܐܝܬ ܗܘܐ ܐܕܢܐ ܗܿܝ ܕܦܝܣܐ </l>
                    <l xml:lang="syr">ܠܡܫܡܥ ܩܠܝܠ ܙܕܩ ܗܘܐ ܘܣܿܓܝ ܠܡܥܒܕ</l>
                    
                </lg>
                <lg type="stanza" n="14"> 
                    <l xml:lang="syr">ܕܣܟܝܪܐ ܗܝ ܕܝܢ ܡܫܡܥܬܐ ܡܐ ܕܢܩܫ ܒܗܿ</l>
                    <l xml:lang="syr">ܗܿܘ ܩܠܐ ܥܛܦ ܠܗ ܨܝܕ ܗܿܘ ܕܡܫܕܪ ܠܗ</l>
                    
                </lg>
                <lg type="stanza" n="15"> 
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܠܐ ܐܝܬ ܩܥܬܐ ܨܐܕܝ ܕܝܠܝ ܠܘ ܕܘܓܐ ܐܢܐ </l>
                    <l xml:lang="syr">ܠܐ ܕܩܿܪܐ ܘܠܐ ܕܡܬܪܓܡ ܠܘ ܥܛܠܐ ܐܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="16"> 
                    <l xml:lang="syr">ܗܘܦܐ ܕܡܢܗ ܦܩܕ ܠܝ ܕܐܠܗ ܩܘܫܬܐ </l>
                    <l xml:lang="syr">ܘܥܡ ܦܘܩܕܢܐ ܗܿܠܟ ܠܗ ܘܐܦ ܣܘܥܪܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="17"> 
                    <l xml:lang="syr">ܠܝܬ ܠܘܬܝ ܡܐܝܢܘܬܐ ܘܠܐ ܟܘܪ̈ܟܐ </l>
                    <l xml:lang="syr">ܣܒܪ ܐܢܐ ܕܐܦ ܠܐ ܓܐܪܐ ܡܨܐ ܩܕܡ ܠܝ</l>
                    
                </lg>
                <lg type="stanza" n="18"> 
                    <l xml:lang="syr">ܒܣܝܪܝܢ ܠܝ ܕܝܢ ܩ̈ܠܝܟܘܢ ܡܐ ܕܒܟܝܢ ܐܢܬܘܢ </l>
                    <l xml:lang="syr">ܥܠ ܩܒܪ̈ܐ ܕܥܢܝ̈ܕܝܟܘܢ ܒܦܣܩ ܣܒܪܐ </l>
                    
                </lg>
                <lg type="stanza" n="19"> 
                    <l xml:lang="syr">ܐܠܘ ܫܠܝܛ ܐܘ ܡܦܣ ܟܕ ܒܟܝܢ ܐܢܬܘܢ </l>
                    <l xml:lang="syr">ܢܦܩ ܗܘܝܬ ܕܠܟܘܢ ܐܬܠ ܥܠ ܐ̈ܦܝܟܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="20"> 
                    <l xml:lang="syr">ܕܐܢܐ ܥܡܿܠ ܐܢܐ ܕܐܬܠ ܚܘܫܒܢ ܡܝ̈ܬܐ </l>
                    <l xml:lang="syr">ܘܡܕܘܕܝܢ ܠܝ ܩ̈ܠܝܟܘܢ ܕܐܛܥܐ ܚܘܫܒܢܝ</l>
                    
                </lg>
                <lg type="stanza" n="21"> 
                    <l xml:lang="syr">ܐܢܬܘܢ ܥܡ̈ܡܐ ܠܐ ܢܗܘܐ ܛܠܐ ܡܕܥܟܘܢ</l>
                    <l xml:lang="syr">ܐܝܟ ܗܿܘ ܥܡܐ ܕܠܐ ܪܒܐ ܗܘܐ ܡܬܘܡ ܣܘܟܠܗ</l>
                    
                </lg>
                <lg type="stanza" n="22"> 
                    <l xml:lang="syr">ܕܠܐ ܢܒܗ ܒܗ ܒܘܝܢܐ ܐܝܟ ܕܒܣܟܠܐ</l>
                    <l xml:lang="syr">ܚܫܘܟܐ ܗܝ ܓܝܪ ܡܚܫܒܬܗ ܡܢ ܦܘܪܫܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="23"> 
                    <l xml:lang="syr">ܥܘܗܠܝܟܘܢ ܓܝܪ ܘܒ̈ܢܝܟܘܢ ܒܢܘܚܡܐ </l>
                    <l xml:lang="syr">ܗܢܘܢ ܢܿܦܩܝܢ ܩܕܡܝܬ ܐܝܟ ܪܝܫܝܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="24"> 
                    <l xml:lang="syr">ܒܬܪܗܘܢ ܕܝܢ ܙܕܝ̈ܩܐ ܐܝܟ ܙܟ̈ܝܐ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܐܚܪ̈ܝܐ ܢܿܦܩܝܢ ܚܛ̈ܝܐ ܐܝܟ ܒܗܝ̈ܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="25"> 
                    <l xml:lang="syr">ܐܦܢ ܓܝܪ ܒܪܦܦ ܥܝܢܐ ܚܝܝܢ ܐܠܐ </l>
                    <l xml:lang="syr">ܒܛܟܣܐ ܗܘ ܢܿܦܩܝܢ ܣܕܪ̈ܝܗܘܢ ܡܢܗܿ ܕܫܝܘܠ</l>
                    
                </lg>
                <lg type="stanza" n="26"> 
                    <l xml:lang="syr">ܢܿܦܩܝܢ ܢܒ̈ܝܐ ܘܫ̈ܠܝܚܐ ܘܐܒܗ̈ܬܐ </l>
                    <l xml:lang="syr">ܒܬܪܗܘܢ ܒܐܣܟܝܡ ܐܣܟܝܡ ܐܝܟ ܦܘܩܕܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="27"> 
                    <l xml:lang="syr">ܗܢܐ ܕܗܫܐ ܒܠܝܠܐܝܬ ܗܐ ܡܙܕܪܥܝܢ </l>
                    <l xml:lang="syr">ܒܛܟܣܐ ܪܒܐ ܡܬܦܢܝܢ ܐܝܟ ܙܪ̈ܥܘܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="28"> 
                    <l xml:lang="syr">ܟܕ ܓܝܪ ܐܢܫ ܢܚܠܘܛ ܢܙܪܘܥ ܟܠ ܙܪ̈ܥܘܢܝܢ </l>
                    <l xml:lang="syr">ܐܝܢܐ ܕܒܿܟܪ ܡܢ ܚܒܪܗ ܠܚܒܪܗ ܩܕܡ </l>
                    
                </lg>
                <lg type="stanza" n="29"> 
                    <l xml:lang="syr">ܘܠܐ ܐܝܟ ܕܒܠܝܠ ܡܚܬܗܘܢ ܗܟܢ ܫܓܝܫ</l>
                    <l xml:lang="syr">ܡܣܩܗܘܢ ܡܢܗܿ ܕܐܪܥܐ ܕܐܬܛܟܣ ܠܗ</l>
                    
                </lg>
                <lg type="stanza" n="30"> 
                    <l xml:lang="syr">ܗܐ ܗܿܘܝܬ ܐܢܐ ܠܘܩܒܠ ܢܦܫܝ ܒܐܝܠܝܢ ܕܐܡܪܬ</l>
                    <l xml:lang="syr">ܕܟܣ̈ܝܬܐ ܕܠܐ ܐܕܪܟܬܘܢ ܡܢܝ ܐܝܠܦܬܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="31"> 
                    <l xml:lang="syr">ܚܠܦ ܕܡ̈ܥܐ ܕܠܐ ܝܘܬܪܢܐ ܕܠܘܬ ܩܒܪܐ </l>
                    <l xml:lang="syr">ܐܫܦܥܘ ܐܢܝܢ ܒܨ̈ܠܘܬܐ ܒܓܘ ܥ̈ܕܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="32"> 
                    <l xml:lang="syr">ܕܠܡ̈ܝܬܐ ܒܗܝܢ ܝܘܬܪܢܐ ܐܦ ܠܚ̈ܝܐ </l>
                    <l xml:lang="syr">ܠܐ ܬܒܟܘܢ ܒܟܝܐ ܕܡܥܝܩ ܡ̈ܝܬܐ ܘܚ̈ܝܐ </l>
                    
                </lg>
            </div>
