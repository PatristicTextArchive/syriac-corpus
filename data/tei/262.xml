        <body>
            <div type="title" n="4">
                <ab xml:lang="en">Hymn IV</ab>
            </div>
            <div type="body">
                <lg type="superscript">
                    <l xml:lang="syr">ܒܪ ܩܠܗ ܕܟܢܫܐ ܕܐ̈ܘܠܨܢܝ</l>
                </lg>
                <lg type="stanza" n="1">
                    <l xml:lang="syr">ܐܠܗܝ ܕܠܐ ܡܡܐܢ   ܐܕܪܘܫ ܬܪܥ ܒܝܬܟ</l>
                    <l xml:lang="syr">ܕܛܠܡܬ ܠܟܠ ܛܝܒܘ   ܐܫܐܠ ܒܡܪܚܘ</l>
                    <l xml:lang="syr">ܕܐܣܒ ܒܚܨܝܦܘ</l>
                    
                </lg>
                
                <lg type="refrain">
                    <l xml:lang="syr">ܥܘܢܝܬܐ : ܣܒܪܢ ܗܼܘܝ ܫܘܪܢ </l>
                    
                </lg>
                <lg type="stanza" n="2">
                    <l xml:lang="syr">ܐܢ ܓܝܪ ܡܪܝ ܐܪܥܐ   ܠܚܛܬܐ ܡܫܘܚܕܬܐ </l>
                    <l xml:lang="syr">ܡܥܬܪܐ ܒܣ̈ܓܝܐܐ   ܟܡܐ ܢܥܬܪ̈ܢ ܗܟܝܠ</l>
                    <l xml:lang="syr">ܨܠܘ̈ܬܝ ܒܛܝܒܘܬܟ</l>
                    
                </lg>
                <lg type="stanza" n="3">
                    <l xml:lang="syr">ܒܩ̈ܠܐ ܕܝ̈ܠܘܕܝ   ܚܢܝ̈ܓܐ ܘܪ̈ܥܘܡܐ </l>
                    <l xml:lang="syr">ܦܬܼܚ ܠܝ ܬܼܪܥ ܪ̈ܚܡܝܟ   ܐܦܨܚ ܒ̈ܩܠܝܗܘܢ </l>
                    <l xml:lang="syr">ܐܒܠܐ ܕܣܩ̈ܝܗܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="4">
                    <l xml:lang="syr">ܒܘܟܪܐ ܕܗܘܼܐ ܚܣܝܠܐ   ܘܢܩܼܦ ܠܝܠܘ̈ܕܐ</l>
                    <l xml:lang="syr">ܒ̈ܢܝ ܢܨܪܬ ܠܝܗܛܐ   ܥܢܝ ܐܠܡܪ̈ܝ ܕܚܙܘ</l>
                    <l xml:lang="syr">ܕܐ̈ܒܐ ܘܗܐ ܓܿܥܝܢ </l>
                    
                </lg>
                <lg type="stanza" n="5">
                    <l xml:lang="syr">ܘܥܢܐ ܒܕܒܪܐ ܡܪܝ   ܐܢܗܼܘ ܕܚܙܬ ܕܐ̈ܒܐ </l>
                    <l xml:lang="syr">ܛܦܣܐ ܒܥܠܢܐ   ܡܬܓܘܣܐ ܒܚܘܛܪܐ </l>
                    <l xml:lang="syr">ܕܪܕܦ ܠܐ̈ܟܘܠܝܗܿ</l>
                    
                </lg>
                <lg type="stanza" n="6">
                    <l xml:lang="syr">ܥܢܟ ܚܙܬ ܕܐ̈ܒܐ   ܘܗܐ ܓܥܝܐ ܪܒܬ</l>
                    <l xml:lang="syr">ܐܕܪܟ ܕܐܬܪܗܒܬ   ܨܠܝܒܟ ܢܗܘܐ ܚܘܛܪܐ </l>
                    <l xml:lang="syr">ܕܪܕܦ ܠܒܠܘ̈ܥܝܗܿ</l>
                    
                </lg>
                <lg type="stanza" n="7">
                    <l xml:lang="syr">ܩܿܒܠ ܓܥܬܝ ܫܒܪ̈ܝ   ܕܕܟܝܢ ܒܟܠܡܕܡ</l>
                    <l xml:lang="syr">ܗܿܘ ܗܘ ܛܠܐ ܝܘܡ̈ܐ   ܡܫܟܚ ܡܪܥܐ ܡܪܝ</l>
                    <l xml:lang="syr">ܠܥܬܝܩ ܝܘܡ̈ܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="8">
                    <l xml:lang="syr">ܝܘܡܐ ܕܢܦܠ ܥܘܠܐ   ܒܓܘ ܐܘܪܝܐ ܒܗ ܗܘ</l>
                    <l xml:lang="syr">ܥܝܪ̈ܐ ܢܚܼܬܘ ܣܿܒܪܘ   ܫܠܡܐ ܕܗܼܘ ܢܗܘܐ </l>
                    <l xml:lang="syr">ܒܫܘ̈ܩܝ ܠܟܠ ܫܒܪ̈ܝ</l>
                    
                </lg>
                <lg type="stanza" n="9">
                    <l xml:lang="syr">ܫܒܥܝܢ ܘܬܪ̈ܝܢ ܣܒ̈ܝܢ   ܣ̈ܒܘܗܝ ܕܗܿܘ ܥܡܐ </l>
                    <l xml:lang="syr">ܠܐ ܣܦܼܩܘ ܠܬܘܪ̈ܥܬܐ   ܥܘܠܐ ܗܘ ܒܪ ܡܪܝܡ</l>
                    <l xml:lang="syr">ܫܿܝܢ ܠܟܠ ܦܢܝܢ</l>
                    
                </lg>
                <lg type="stanza" n="10">
                    <l xml:lang="syr">ܚܘܢ ܡܪܝ ܠܝܿܠܘܕܝ   ܒܝ̈ܠܕܝ ܥܗܿܕ ܝܠܕܟ</l>
                    <l xml:lang="syr">ܕܗܘܝܬ ܝܠܘܕܐ   ܕܕܡܝܢ ܠܛܠܝܘܬܟ</l>
                    <l xml:lang="syr">ܢܚܘܢ ܒܛܝܒܘܬܟ</l>
                    
                </lg>
                <lg type="stanza" n="11">
                    <l xml:lang="syr">ܒ̈ܠܝܠܝܢ ܒܓܘ ܥܢܟ   ܦܥܝܐ ܕܬܡ̈ܝܡܐ </l>
                    <l xml:lang="syr">ܘܩܠܐ ܕܢܩ̈ܘܬܐ   ܕܩܪܝܢ ܠܪܥܐ ܟܠ</l>
                    <l xml:lang="syr">ܕܡܢ ܟܠ ܢܦܨܐ ܐܢܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="12">
                    <l xml:lang="syr">ܐܓܕܘܠ ܠܟܠ ܩ̈ܠܝܢ   ܘܐܿܥܒܕ ܟܠܝܠ ܩ̈ܠܐ</l>
                    <l xml:lang="syr">ܐܩܪܒܝܘܗܝ ܠܐܒܘܟ   ܐܙܒܢ ---</l>
                    <l>Line missing</l>
                </lg>
                    <lg type="stanza" n="a">
                    <l xml:lang="syr">ܘܝ ܠܝ ܕܡܢܘ ܠܝ   ܫܒܒܐ ܘܩܪܝܒܐ </l>
                    <l xml:lang="syr">ܕܠܐ ܟ̈ܝܫܢ ܪ̈ܓܠܘܝ   ܒܐܬܪܗ ܕܟܠܥܕܢ</l>
                    <l xml:lang="syr">ܥܠ ܪܝܫܝ ܐܡܢ ܘܩܐܿܡ</l>
                    </lg>
                <lg type="stanza" n="b">
                    <l xml:lang="syr">ܘܝ ܠܝ ܕܡܢܘ ܠܝ   ܐܪܚܐ ܕܠܝ ܘܠܠܚܡܝ</l>
                    <l xml:lang="syr">ܒܥܿܐ ܕܢܐܟܘܠ ܡܪܝ   ܬܨܪܝܘܗܝ ܟܐܢܘܬܐ </l>
                    <l xml:lang="syr">ܕܟܦܢ ܠܝܥܢܘܬܐ </l>
                </lg>
                <lg type="stanza" n="c">
                    <l xml:lang="syr">ܘܝ ܠܝ ܕܡܢܘ ܠܝ   ܣܐܢܐ ܘܩܪܝܒܐ </l>
                    <l xml:lang="syr">ܛܘܒܝ ܕܡܢܘ ܠܝ   ܡܪܐ ܘܦܪܘܩܐ </l>
                    <l xml:lang="syr">ܕܙܓܪܗ ܘܙܓܪ ܠܗ </l>
                </lg>
                <lg type="stanza" n="13">
                    <l xml:lang="syr">ܚܕܘܬܐ ܕܣܘܓܦܢܐ   ܥܩܬܐ ܛܡܝܪܐ ܒܗܿ</l>
                    <l xml:lang="syr">ܥܩܬܐ ܕܥܘܕܪܢܐ   ܡܥܝܢܐ ܗܝ ܕܚ̈ܕܘܬܐ</l>
                    <l xml:lang="syr">ܒܗܿܘ ܥܠܡܐ ܚܕܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="14">
                    <l xml:lang="syr">ܛܘܒܐ ܕܩܢܐ ܪܕܘܦܝ   ܘ̈ܝܐ ܛܡܝܪ̈ܝܢ ܒܗ </l>
                    <l xml:lang="syr">ܒܕܓܘܢ ܦܨܝܚܐ ܐܢܐ   ܕܘܝܐ ܕܩܢܝܬ ܡܢܗ </l>
                    <l xml:lang="syr">ܛܘܒܐ ܟܣܐ ܠܝ ܒܗ</l>
                    
                </lg>
                <lg type="stanza" n="15">
                    <l xml:lang="syr">ܡܢܘ ܕܠܐ ܢܘܕܐ   ܠܗܿܘ ܡܿܢ ܕܐܘܠܕ ܠܢ </l>
                    <l xml:lang="syr">ܘܡܨܐ ܕܢܘܠܕ ܬܘܒ   ܡܢ ܓܘ ܫܡ̈ܘܥܬܐ </l>
                    <l xml:lang="syr">ܩ̈ܠܐ ܕܣܒܪ̈ܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="16">
                    <l xml:lang="syr">ܐܢܬ ܗܘ ܡܐܣܐ ܟܠ   ܣܥܪܬܢܝ ܒܟܘܪ̈ܗܢܝ </l>
                    <l xml:lang="syr">ܐܓܪܐ ܕܣܡ̈ܡܢܝܟ   ܠܐ ܐܬܡܨܝܬ ܕܐܬܠ </l>
                    <l xml:lang="syr">ܕܕܡܝܢ ܠܝܬ ܠܗܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="17">
                    <l xml:lang="syr">ܙܟܝܢ ܠܣܡ̈ܡܢܝܟ   ܪ̈ܚܡܝܟ ܥܬܝܪ̈ܐ </l>
                    <l xml:lang="syr">ܠܐ ܡܨܝܢ ܡܙܕܒܢܝܢ   ܡܓܢ ܡܬܝܗܒܝܢ</l>
                    <l xml:lang="syr">ܒܕܡ̈ܥܐ ܗܘ ܡܬܢܣܒܝܢ </l>
                    
                </lg>
                <lg type="stanza" n="18">
                    <l xml:lang="syr">ܟܡܐ ܡܫܟܚܐ ܪܒܘܢܝ   ܡܕܝܢܬܐ ܡܓܙܝܬܐ </l>
                    <l xml:lang="syr">ܕܪܚܝܩ ܒܪ ܡܠܟܗܿ   ܘܩܪܝܒ ܒܥܠܕܪܗܿ</l>
                    <l xml:lang="syr">ܕܬܩܘܡ ܕܠܐ ܪ̈ܚܡܐ </l>
                    
                </lg>
                <lg type="stanza" n="19">
                    <l xml:lang="syr">ܠܡܐܢܐ ܘܒܝܬ ܓܘܣܐ   ܐܢܬ ܗܘ ܒܟܠ ܥܕܢ</l>
                    <l xml:lang="syr">ܟܕ ܚܦܝܘܢܝ ܝܡ̈ܡܐ   ܢܚܼܬܘ ܕܠܝܘܢܝ ܪ̈ܚܡܝܟ</l>
                    <l xml:lang="syr">ܬܘܒ ܢܕܪܟܢܝ ܥܕܪܟ</l>
                    
                </lg>
                <lg type="stanza" n="20">
                    <l xml:lang="syr">ܐܣܪܚ ܠܒܘ̈ܣܒܣܝ   ܣܡܐ ܕܦܘܪܩܢܟ </l>
                    <l xml:lang="syr">ܘܚܫܐ ܕܥܘܕܪܢܟ   ܢܝܫܟ ܡܨܐ ܕܢܗܘܐ </l>
                    <l xml:lang="syr">ܣܡܐ ܡܐܣܐ ܟܠ</l>
                    
                </lg>
                <lg type="stanza" n="21">
                    <l xml:lang="syr">ܣܿܓܝ ܐܠܝܨܐ ܐܢܐ   ܘܕܐܩܒܘܠ ܐܟܝܦܐ ܐܢܬ</l>
                    <l xml:lang="syr">ܥܠ ܡܿܢ ܕܫܿܓܫ ܠܝ   ܚܢܢܟ ܢܦܟܗ ܡܪܝ</l>
                    <l xml:lang="syr">ܟܣܐ ܕܡܼܙܓܘ   ܚܘ̈ܒܝ</l>
                    
                </lg>
                <lg type="stanza" n="22">
                    <l xml:lang="syr">ܚܪܬ ܠܟܠ ܓܒ̈ܝܢ   ܘܒܿܟܝܬ ܕܐܬܓܙܝܬ</l>
                    <l xml:lang="syr">ܟܕ ܛܒ ܣܓܝܐ̈ܝܢ   ܪ̈ܝܫܝ ܘܦܪ̈ܘܩܝ</l>
                    <l xml:lang="syr">ܚܕ ܗܘ ܕܦܪܩ ܠܝ</l>
                    
                </lg>
                <lg type="stanza" n="23">
                    <l xml:lang="syr">ܦܪܘ ܡܪܝ ܢܦܩܘ ܝ̈ܠܕܝ   ܘܕܡܘ ܠܦܪ̈ܘܓܐ </l>
                    <l xml:lang="syr">ܕܢܫܐ ܪܕܦ ܐܢܘܢ   ܗܐ ܛܫܝܢ ܒܣܬܪܐ </l>
                    <l xml:lang="syr">ܫܝܢܟ ܢܦܢܐ ܐܢܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="24">
                    <l xml:lang="syr">ܨܘܬܐ ܕܟܪ̈ܡܝ   ܗܐ ܦܩܕܢ ܐ̈ܕܢܝ</l>
                    <l xml:lang="syr">ܕܓܪܕܝܘ ܩ̈ܠܝܗܘܢ   ܢܪܥܡ ܒܣܒܪ̈ܬܐ </l>
                    <l xml:lang="syr">ܛܒܐ ܕܦܘܪܩܢܟ </l>
                    
                </lg>
                <lg type="stanza" n="25">
                    <l xml:lang="syr">ܩܠܐ ܕܣܘܪܕܐ   ܥܠ ܡ̈ܓܕܠܝ ܫܡܿܥܬ</l>
                    <l xml:lang="syr">ܕܩܿܥܝܢ ܦܪ̈ܘܩܝ   ܟܕ ܢܛܪܝܢ ܫܘܪ̈ܝ</l>
                    <l xml:lang="syr">ܫܠܝܗܝ ܒܩܠ ܫܝܢܟ</l>
                    
                </lg>
                <lg type="stanza" n="26">
                    <l xml:lang="syr">ܪܒܒܬܐ ܕܦܠܚ̈ܝ   ܬܫܝܢ ܠܒܪ ܡܢ ܫܘܪܝ</l>
                    <l xml:lang="syr">ܪܥܡܐ ܕܥܡܘܪ̈ܝ   ܢܫܝܢ ܠܓܘ ܡܢ ܫܘܪܝ</l>
                    <l xml:lang="syr">ܕܐܘܕܐ ܠܒܪ ܘܠܓܘ</l>
                    
                </lg>
                <lg type="stanza" n="27">
                    <l xml:lang="syr">ܫܪܝ ܡܪܝ ܐܒܝܠܘܬܗ   ܕܗܿܘ ܡܕܒܚܟ ܕܟܝܐ</l>
                    <l xml:lang="syr">ܘܕܟܗܢܟ ܢܟܦܐ   ܕܩܐܡ ܠܒܝܫ ܐܒܠܐ</l>
                    <l xml:lang="syr">ܡܢ ܠܥܠ ܟܒܝܢ ܣܩܐ </l>
                    
                </lg>
                <lg type="stanza" n="28">
                    <l xml:lang="syr">ܬܘܕܐ ܒܦܘܪܩܢܟ   ܥܕܬܐ ܘܫܡ̈ܫܝܗܿ</l>
                    <l xml:lang="syr">ܡܕܝܢܬܐ ܘܥܡܪ̈ܝܗܿ   ܢܗܐ ܡܪܝ ܩܠ ܫܝܢܐ </l>
                    <l xml:lang="syr">ܐܓܪܐ ܕܩ̈ܠܝܗܘܢ</l>
                </lg>
            </div>
