        <body>
            <div type="title" n="55">
                <ab xml:lang="en">Hymn LV</ab>
            </div>
            <div type="body">
                <lg type="superscript">
                    <l xml:lang="syr">ܕ ܒܪ ܩܠܗ</l>
                </lg>
                <lg type="stanza" n="1"> 
                    <l xml:lang="syr">ܒܝܼܫܐ ܠܡܘܬܐ ܗܐ ܡܨܿܥܪ ܘܐܦ ܡܨܛܥܪ</l>
                    <l xml:lang="syr">ܡܢܗܘܢ ܘܒܗܘܢ ܐܦ ܠܗܘܢ ܩܘܠܩ̈ܠܝܗܘܢ </l>
                    
                </lg>
                
                <lg type="refrain">
                    <l xml:lang="syr">ܥܘܢܝܬܐ : ܠܟ ܫܘܒܚܐ ܒܪ ܡܪܐ ܟܠ ܕܡܝܬ ܡܛܘܠ ܟܠ</l>
                    <l xml:lang="syr">ܘܐܬܢܚܡ ܕܠܟܠ ܢܚܿܐ ܒܝܘܡ ܡܐܬܝܬܗ</l>
                    
                </lg>
                <lg type="stanza" n="2"> 
                    <l xml:lang="syr">ܝܘܢܢ ܕܙܟܼܟ ܘܦܢܐ ܗܘܐ ܡܢܗܿ ܕܫܝܘܠ</l>
                    <l xml:lang="syr">ܣܢܓܪܐ ܗܘܼܐ ܠܝ ܕܠܡܢܐ ܚܝܘ ܚ̈ܛܝܐ </l>
                    
                </lg>
                <lg type="stanza" n="3"> 
                    <l xml:lang="syr">ܠܐ ܬܥܫܘܩܝܗܝ ܐܘ ܒܝܫܐ ܠܗܿܘ ܒܪ ܡܬܝ</l>
                    <l xml:lang="syr">ܦܪܨܘܦܐ ܕܚܡܬܐ ܚܿܘܝ ܕܢܣܓܘܢ ܢܘܕܘܢ</l>
                    
                </lg>
                <lg type="stanza" n="4"> 
                    <l xml:lang="syr">ܛܒ ܦܚܝܚ ܟܠܗ ܦܝܣܟ ܡܘܬܐ ܛܪܘܢܐ </l>
                    <l xml:lang="syr">ܠܐ ܓܝܪ ܒܣܼܡ ܠܝ ܡܕܡ ܡܢ ܟܠ ܕܐܡܪܬ </l>
                    
                </lg>
                <lg type="stanza" n="5"> 
                    <l xml:lang="syr">ܐܡܬܝ ܗܘ ܓܝܪ ܒܣܡܬ ܠܟ ܡܠܬ ܩܘܫܬܐ </l>
                    <l xml:lang="syr">ܦܚܬܐ ܗܘ ܒܝܬ ܠܟ ܠܫܪܪܐ ܐܘ ܟܕܒܐ </l>
                    
                </lg>
                <lg type="stanza" n="6"> 
                    <l xml:lang="syr">ܟܐܢܐ ܐܝܬܝ ܡܢ ܝܘܡ̈ܝ ܠܘ ܬܝܒܐ </l>
                    <l xml:lang="syr">ܐܢܐ ܐܢܐ ܕܡܥܕܐ ܐܢܐ ܡܢܟ ܠܒ̈ܢܝ ܐܢܫܐ</l>
                    
                </lg>
                <lg type="stanza" n="7"> 
                    <l xml:lang="syr">ܩܕܐ ܬܝܒܘܬܟ ܡܘܬܐ ܫܦܝܪ ܐܬܝܬ</l>
                    <l xml:lang="syr">ܗܐ ܐܦ ܫܐܘܠ ܒܢܒ̈ܝܐ ܥܝܛܐ ܪܒܐ </l>
                    
                </lg>
                <lg type="stanza" n="8"> 
                    <l xml:lang="syr">ܐܢ ܐܢܬ ܡܘܬܐ ܬܙܕܕܩ ܐܦ ܠܐ ܥܠ ܢܦܫܝ</l>
                    <l xml:lang="syr">ܣܒܪܐ ܡܕܝܢ ܦܣܿܩ ܐܢܐ ܕܠܐ ܬܐܒ ܐܢܐ</l>
                    
                </lg>
                <lg type="stanza" n="9"> 
                    <l xml:lang="syr">ܦܬܟܪܐ ܥܡ ܡܪܝ ܠܐ ܥܒܕܬ ܣܿܢܐ ܡܪܗ</l>
                    <l xml:lang="syr">ܒܦܬܟܪ̈ܐ ܡ̈ܝܬܐ ܠܚ̈ܝܐ ܗܐ ܩܿܛܠ ܐܢܬ</l>
                    <l>܀܀܀</l>
                </lg>
                <lg type="stanza" n="10"> 
                    <l xml:lang="syr">ܕܦܠܟܝ ܐܢܬ ܡܘܬܐ ܝܿܕܥ ܐܢܐ ܘܐܢܐ ܦܠܓܟ</l>
                    <l xml:lang="syr">ܦܠܓܝ ܗܘ ܬܐܒ ܐܢ ܬܐܒ ܬܡܗ ܐܢܐ ܕܝܢ </l>
                    
                </lg>
                <lg type="stanza" n="11"> 
                    <l xml:lang="syr">ܫܘܬܦܟ ܐܢܬ ܒܡܢܬܐ ܘܠܐ ܒܚܛܝܬܐ </l>
                    <l xml:lang="syr">ܠܝ ܩ̈ܛܝܠܐ ܘܠܟ ܩ̈ܛܘܠܐ ܕܐܚܛܝܬ ܐܢܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="12"> 
                    <l xml:lang="syr">ܬܒܟܐ ܥܪܝܡܘܬܝ ܥܠ ܢܦܫܗܿ ܕܥܡܟ ܕܪܫܬ</l>
                    <l xml:lang="syr">ܨ̈ܢܝܬܝ ܥܠܝ ܢܬܐܒܠܢ ܕܡܛܝܬ ܨܐܕܝܟ</l>
                    
                </lg>
                <lg type="stanza" n="13"> 
                    <l xml:lang="syr">ܩܨܡ̈ܐ ܘܢܚܫ̈ܐ ܘܙܟܘܪ̈ܐ ܥܡ ܟܠ ܚܘ̈ܒܝܢ</l>
                    <l xml:lang="syr">ܢܘܪܐ ܕܐܣܦܬ ܒܬܒܝܠ ܒܫܝܘܠ ܕܥܟܬ</l>
                    
                </lg>
                <lg type="stanza" n="14"> 
                    <l xml:lang="syr">ܬܝܒܐ ܕܨܿܠܠ ܒܩ̈ܐ ܘܒܼܠܥ ܟܐ̈ܢܐ </l>
                    <l xml:lang="syr">ܢܨܪܘܢܟ ܢܟ̈ܦܐ ܕܓܥܿܝܢ ܡܢ ܓܘ ܟܪܣܟ</l>
                    
                </lg>
                <lg type="stanza" n="15"> 
                    <l xml:lang="syr">ܒܝܬ ܓܙܐ ܗܘ ܢܛܝܪܝܢ ܠܝ ܟܠ ܙܕܝ̈ܩܐ </l>
                    <l xml:lang="syr">ܢܘܚܡܗܘܢ ܠܟ ܡܬܠܚܡ ܕܪܕܦܬ ܐܢܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="16"> 
                    <l xml:lang="syr">ܝܥܢܐ ܕܠܟܠܗܿ ܒܪܝܬܐ ܚܡܠܗܿ ܒܡ̈ܥܘܗܝ</l>
                    <l xml:lang="syr">ܗܐ ܡܗܿܠ ܒܝ ܕܐܫܬܠܚܬ ܡܢ ܩ̈ܢܝܢܝ</l>
                    
                </lg>
                <lg type="stanza" n="17"> 
                    <l xml:lang="syr">ܩܕܡ ܢܓܕܐ ܠܐ ܬܬܪܥܡ ܠܐ ܓܝܪ ܡܛܟ</l>
                    <l xml:lang="syr">ܢܐܬܐ ܝܘܡܐ ܕܬܒܿܓܢ ܘܐܫܡܥ ܘܐܚܕܐ </l>
                    
                </lg>
                <lg type="stanza" n="18"> 
                    <l xml:lang="syr">ܬܐܬܐ ܢܘܪܐ ܕܐܦ ܡܫܟܟ ܡܢܟ ܬܫܘܛ</l>
                    <l xml:lang="syr">ܐܝܟ ܕܢܫܛܬܝܗܝ ܒܝܕ ܚܨܦܐ ܡܫܟܗ ܕܐܝܘܒ</l>
                    
                </lg>
                <lg type="stanza" n="19"> 
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܪܝܚܐ ܕܫܦܠܘܬܐ ܫܪܝ ܕܐܝܟ ܢܦܪܚ ܒܝ</l>
                    <l xml:lang="syr">ܚܠܡܐ ܗܘ ܟܝ ܕܐܢܐ ܒܛܠܬ ܛܘܪܐ ܙܥܘܪܐ </l>
                    
                </lg>
                <lg type="stanza" n="20"> 
                    <l xml:lang="syr">ܠܐ ܗܘܼܐ ܡ̈ܠܐ ܚܣܼܪ ܗܘܝ ܠܝ ܘܥܠ ܗܿܘ ܫܬܩܬ</l>
                    <l xml:lang="syr">ܥܠ ܥܕܢܐ ܗܘ ܟܪܝܬ ܠܝ ܕܢܦܼܩ ܡܓܢ </l>
                    
                </lg>
                <lg type="stanza" n="21"> 
                    <l xml:lang="syr">ܬܘܟܗ ܕܡܡܠܠܟ ܛܒ ܣܓܝ ܠܘܝ ܠܐ ܫܡܥܬܗ</l>
                    <l xml:lang="syr">ܕܪܥܝܢܝ ܟܠܗ ܐܝܬܘܗܝ ܗܘܐ ܨܕܝ ܣܘܥܪܢܝ</l>
                    
                </lg>
                <lg type="stanza" n="22"> 
                    <l xml:lang="syr">ܗܕܐ ܐܢܫܘܬܐ ܕܐܒܕܬ ܦܗܝܐ ܣܪܚܗܿ</l>
                    <l xml:lang="syr">ܒܛܠܢܐ ܥܡ ܒܣܝܢܐ ܒܢܝܪܐ ܟܕܢܘܗܿ</l>
                    
                </lg>
                <lg type="stanza" n="23"> 
                    <l xml:lang="syr">ܗܕܝܐܐ ܕܪܓܬܐ ܡܡܘܢܐ ܣܦܣܪ ܙܒܢܗܿ</l>
                    <l xml:lang="syr">ܚܪܝܢܐ ܥܡ ܫܘܒܗܪܐ ܗܘܘ ܥܪ̈ܒܐ </l>
                    
                </lg>
                <lg type="stanza" n="24"> 
                    <l xml:lang="syr">ܒܐܡܝܢܘܬܐ ܚܠܦ ܚܝܠܐ ܡܬܟܬܫ ܐܢܐ </l>
                    <l xml:lang="syr">ܘܐܢ ܗܼܘ ܕܒܣܐ ܐܢܐ ܩܠܝܠ ܠܝܬܘܗܝ ܫܘܠܛܢܝ</l>
                    
                </lg>
                <lg type="stanza" n="25"> 
                    <l xml:lang="syr">ܒܢܘ̈ܛܦܬܐ ܐܡ̈ܝܢܬܐ ܫܘ̈ܥܐ ܒܙܥܬ</l>
                    <l xml:lang="syr">ܕܫܕܠܐ ܐܡܝܢܐ ܐܦ ܛܘܪܐ ܡܫܟܚ ܫܿܪܐ </l>
                    
                </lg>
                <lg type="stanza" n="26"> 
                    <l xml:lang="syr">ܥܝܕܐ ܐܦ ܠܗ ܠܟܝܢܐ ܡܪܐ ܗܿܘܐ </l>
                    <l xml:lang="syr">ܡܠܦ ܢܿܓܕ ܐܦ ܠܐܪܝܐ ܐܝܟ ܠܒܥܝܪܐ </l>
                    
                </lg>
                <lg type="stanza" n="27"> 
                    <l xml:lang="syr">ܥܝܕܐ ܢܝܚܐ ܘܝܘܬܪܢܐ ܘܐܡܝܢܘܬܐ </l>
                    <l xml:lang="syr">ܒܗܘܢ ܡܙܕܟܝܐ ܚܐܪܘܬܐ ܩܫܝܬ ܡܢ ܟܠ</l>
                    
                </lg>
                <lg type="stanza" n="28"> 
                    <l xml:lang="syr">ܐܢ ܡܬܥܙܙ ܨܒܝܢܗܿ ܣܘܛܡ̈ܐ ܬܒܪ</l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܘܐܢ ܒܣܐ ܢܫܒܐ ܡܚܝܠܐ ܡܨܐ ܨܐܕ ܠܗܿ</l>
                    
                </lg>
                <lg type="stanza" n="29"> 
                    <l xml:lang="syr">ܐܢ ܗܘ ܕܢܗܡܬ ܚܐܪܘܬܐ ܐܬܒܕܪܢܢ </l>
                    <l xml:lang="syr">ܘܐܢ ܕܝܢ ܒܗܠܬ ܟܢܫܢ ܚܢܢ ܠܢ ܕܢܒܙܚ ܒܗܿ</l>
                    
                </lg>
                <lg type="stanza" n="30"> 
                    <l xml:lang="syr">ܠܐ ܢܣܓܐ ܢܡܠܠ ܕܠܡܐ ܢܣܓܐ ܢܒܛܠ</l>
                    <l xml:lang="syr">ܒܚܘܒܐ ܢܩܪܒ ܥܡ ܫܘܪܐ ܘܗܐ ܐܬܬܪܥ</l>
                    
                </lg>
                <lg type="stanza" n="31"> 
                    <l xml:lang="syr">ܙܠ ܐܢܬ ܘܣܥܘܪ ܟܘܪ̈ܗܢܐ ܘܐܢܐ ܦ̈ܚܐ </l>
                    <l xml:lang="syr">ܕܠܝ ܚܘ̈ܒܐ ܘܠܟ ܡܘܬܢܐ ܢܝܚܐ ܪܒܐ </l>
                    
                </lg>
                <lg type="stanza" n="32"> 
                    <l xml:lang="syr">ܘܐܦܢ ܒܛܬ ܠܐ ܒܛܬ ܡܢ ܡܪܢܝܬܐ </l>
                    <l xml:lang="syr">ܕܨܒܝܢܝ ܡܢ ܡܬܘܡ ܠܐ ܒܛܠ ܕܡܛܝܒ ܗܘ</l>
                    
                </lg>
            </div>
