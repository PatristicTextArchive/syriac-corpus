        <body>
            <div type="title" n="44">
                <ab xml:lang="en">Hymn XLIV</ab>
            </div>
            <div type="body">
                <lg type="superscript">
                    <l xml:lang="syr">ܒ ܒܪ ܩܠܗ</l>
                </lg>
                <lg type="stanza" n="1"> 
                    <l xml:lang="syr">ܛܒܐ ܓܒܼܠ ܦܓܪܐ </l>
                    <l xml:lang="syr">ܕܢܿܠܦ ܠܛܥ̈ܝܐ </l>
                    <l xml:lang="syr">ܟܡܐ ܪܒ ܥܒܕ ܐܝ̈ܕܘܗܝ </l>
                    <l xml:lang="syr">ܘܠܥܠܡܝܢ ܩܝܡ</l>
                    <l xml:lang="syr">ܟܐܢܐ ܢܦܼܚ ܢܦܫܐ </l>
                    <l xml:lang="syr">ܕܢܠܦ ܟܡܐ ܪܒܐ </l>
                    <l xml:lang="syr">ܡܢ ܗܿܝ ܕܚܝ̈ܘܬܐ </l>
                    <l xml:lang="syr">ܕܠܐ ܢܦܼܚ</l>
                    <l xml:lang="syr">ܗܿܝ ܓܝܪ ܕܠܐ ܢܦܝܚܐ </l>
                    <l xml:lang="syr">ܦܘܡܗܿ ܫܠܐ ܘܚܼܪܫ</l>
                    <l xml:lang="syr">ܘܗܕܐ ܕܢܦܚ ܦܘܡܗ </l>
                    <l xml:lang="syr">ܦܘܡܗܿ ܐܦ ܡܠܠܐ ܗܘ</l>
                    
                </lg>
                
                <lg type="refrain">
                    <l xml:lang="syr">ܥܘܢܝܬܐ : ܢܦܫܐ ܘܦܓܪܐ ܡܪܝ ܢܚܕܘܢ ܒܢܘܚܡܟ</l>
                    
                </lg>
                <lg type="stanza" n="2"> 
                    <l xml:lang="syr">ܬܩܘܠܝܗܝ ܠܒܪܢܫܐ </l>
                    <l xml:lang="syr">ܥܡܗܝܢ ܕܚܝ̈ܘܬܐ </l>
                    <l xml:lang="syr">ܒܟ̈ܦܐ ܕܒܘܝܢܐ </l>
                    <l xml:lang="syr">ܘܚܙܝܘܗܝ ܒܪܥܝܢܐ </l>
                    <l xml:lang="syr">ܕܐܝܟܢ ܕܗܼܝ ܒܥܝܪܐ </l>
                    <l xml:lang="syr">ܡܢܬܐ ܗܝ ܕܚܘܒܠܐ </l>
                    <l xml:lang="syr">ܘܥܒܘܪܬܐ ܗܝ ܟܠܗܿ </l>
                    <l xml:lang="syr">ܒܟܠ ܐܣܟܝܡ</l>
                    <l xml:lang="syr">ܗܟܢ ܐܦ ܐܢܫܘܬܐ </l>
                    <l xml:lang="syr">ܣܝܡܬܐ ܗܝ ܕܢܘܛܪܐ </l>
                    <l xml:lang="syr">ܟܠܗܿ ܒܢܘܚܡܐ </l>
                    <l xml:lang="syr">ܡܢܬܐ ܗܝ ܕܚܝܘܬܐ </l>
                    
                    <l>܀܀܀</l>
                </lg>
                <lg type="stanza" n="3"> 
                    <l xml:lang="syr">ܚܘܪ ܬܘܒ ܒܪܘܟܒܐ </l>
                    <l xml:lang="syr">ܕܝܠܗܝܢ ܕܚܝ̈ܘܬܐ </l>
                    <l xml:lang="syr">ܘܚܙܝ ܕܫܿܠܡ ܗܘ </l>
                    <l xml:lang="syr">ܠܝܬܗ ܒܟܠܡܕܡ </l>
                    <l xml:lang="syr">ܟܠܗ ܫܘܐ ܒܗܕܐ </l>
                    <l xml:lang="syr">ܕܟܠܗ ܕܠܐ ܣܒܪܐ ܗܘ </l>
                    <l xml:lang="syr">ܕܢܟܣ ܠܛܥ̈ܝܐ </l>
                    <l xml:lang="syr">ܕܦܠܓܘܗܝ</l>
                    <l xml:lang="syr">ܟܝܢܗ ܕܒܪܢܫܐ </l>
                    <l xml:lang="syr">ܕܟܕ ܗܼܘ ܫܘܐ ܣܡܘܗܝ</l>
                    <l xml:lang="syr">ܦܠܓܗ ܬܚܝܬ ܣܒܪܐ </l>
                    <l xml:lang="syr">ܘܦܠܓܗ ܕܠܐ ܣܒܪܐ</l>
                    
                </lg>
                <lg type="stanza" n="4"> 
                    <l xml:lang="syr">ܣܗܕܐ ܠܦܘܪܥܢܢ </l>
                    <l xml:lang="syr">ܒܥܝܪܐ ܕܡܬܛܠܡܐ </l>
                    <l xml:lang="syr">ܕܥܡܠܗܿ ܕܠܐ ܣܒܪܐ ܗܘ </l>
                    <l xml:lang="syr">ܘܪܗܛܗܿ ܕܠܐ ܐܓܪܐ </l>
                    <l xml:lang="syr">ܘܚܫܗ ܕܠܐ ܡܘܠܟܢ </l>
                    <l xml:lang="syr">ܘܟܠܗܿ ܕܠܐ ܢܘܚܡ</l>
                    <l xml:lang="syr">ܕܢܿܠܦ ܠܒܪܢܫܐ </l>
                    <l xml:lang="syr">ܕܬܛܦܝܣ</l>
                    <l xml:lang="syr">ܕܬܪ̈ܝܢ ܒܚܕ ܢܝܪܐ </l>
                    <l xml:lang="syr">ܪܗܛܗܘܢ ܕܟܘܠܠܐ ܗܘ </l>
                    <l xml:lang="syr">ܥܡܠܗܘܢ ܕܡܘܠܟܢܐ ܗܘ </l>
                    <l xml:lang="syr">ܘܚܫܗܘܢ ܕܢܨܝܚܐ ܗܘ </l>
                    
                </lg>
                <lg type="stanza" n="5"> 
                    <l xml:lang="syr">ܗܐ ܕܝܢ ܬܪ̈ܝܢ ܫܪ̈ܒܝܢ </l>
                    <l xml:lang="syr">ܡܬܬܠܝܢ ܒܚܠܫܐ </l>
                    <l xml:lang="syr">ܕܢܦܝܣ ܥܠ ܪܗܛܐ </l>
                    <l xml:lang="syr">ܛܠܝܡܐ ܕܚ̈ܝܘܬܐ</l>
                    <l xml:lang="syr">ܘܕܢܦܝܣ ܥܠ ܐܓܪܐ </l>
                    <l xml:lang="syr">ܡܠܝܟܐ ܕܒܪܢܫܐ </l>
                    <l xml:lang="syr">ܘܕܢܦܝܣ ܕܠܐ ܥܘܠ </l>
                    <l xml:lang="syr">ܒܪܝܢ</l>
                    <l xml:lang="syr">ܕܡܠܟ ܠܒܪܢܫܐ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܓܢܬܐ ܘܓܗܢܐ </l>
                    <l xml:lang="syr">ܘܐܣܓܝ ܠܚܝ̈ܘܬܐ </l>
                    <l xml:lang="syr">ܢܝ̈ܚܐ ܕܠܐ ܚܘ̈ܒܐ </l>
                    
                </lg>
                <lg type="stanza" n="6"> 
                    <l xml:lang="syr">ܚܘܪ ܬܘܒ ܒܚܝ̈ܘܬܐ </l>
                    <l xml:lang="syr">ܕܠܐ ܐܬܐܠܨ ܘܐܘܙܦ</l>
                    <l xml:lang="syr">ܡܕܡ ܠܐܠܗܐ </l>
                    <l xml:lang="syr">ܕܢܐܡܪ ܕܡܬܛܠܡܢ</l>
                    <l xml:lang="syr">ܦܓܪܐ ܐܠܝܨ ܕܐܘܙܦ </l>
                    <l xml:lang="syr">ܨܘܡܗ ܠܟܐܢܘܬܐ </l>
                    <l xml:lang="syr">ܘܐܢ ܠܝܬ ܠܗ ܢܘܚܡ </l>
                    <l xml:lang="syr">ܐܬܛܠܡ</l>
                    <l xml:lang="syr">ܘܛܒ ܡܢ ܕܡܗ ܕܗܒܝܠ </l>
                    <l xml:lang="syr">ܫܬܩܗ ܒܓܘ ܐܪܥܐ </l>
                    <l xml:lang="syr">ܓܥܿܐ ܥܠ ܓܘܥܠܢܗ </l>
                    <l xml:lang="syr">ܩܕܡܘܗܝ ܕܦܪܥ ܟܠ</l>
                    
                </lg>
                <lg type="stanza" n="7"> 
                    <l xml:lang="syr">ܩܛܘܠ ܚܝܘܬܐ ܘܝܠܦ </l>
                    <l xml:lang="syr">ܕܠܐ ܐܝܬ ܕܩܿܛܠ ܠܟ </l>
                    <l xml:lang="syr">ܕܥܒܘܪܬܐ ܗܝ ܢܦܫܗܿ </l>
                    <l xml:lang="syr">ܥܡܗ ܕܗܿܘ ܦܓܪܐ </l>
                    <l xml:lang="syr">ܘܠܐ ܐܝܬ ܒܗܿ ܡܕܡ </l>
                    <l xml:lang="syr">ܕܐܬܐ ܠܢܘܚܡܐ </l>
                    <l xml:lang="syr">ܡܠܬܐ ܗܝ ܕܟܠ ܚܪܝܢ </l>
                    <l xml:lang="syr">ܫܪܝܐ</l>
                    <l xml:lang="syr">ܕܐܝܟܢ ܕܚܝ̈ܘܬܐ </l>
                    <l xml:lang="syr">ܕܢܦܫܗܝܢ ܐܝܟ ܦܓܪ̈ܝܗܝܢ</l>
                    <l xml:lang="syr">ܗܟܢ ܥܬܝܕ ܦܓܪܢ </l>
                    <l xml:lang="syr">ܕܢܚܐ ܒܪܙ ܢܦܫܢ</l>
                    
                </lg>
                <lg type="stanza" n="8"> 
                    <l xml:lang="syr">ܟܬܒ̈ܐ ܠܦܪ̈ܘܫܐ </l>
                    <l xml:lang="syr">ܟܝܢܐ ܠܟܦܘܪ̈ܐ </l>
                    <l xml:lang="syr">ܡܿܠܦ ܕܥܒܘܪܐ </l>
                    <l xml:lang="syr">ܡܬܢܛܪ ܡܠܐ ܙܒܢܐ </l>
                    <l xml:lang="syr">ܘܐܝܢܐ ܕܠܐ ܥܿܒܪ </l>
                    <l xml:lang="syr">ܠܥܠܡ ܕܢܘܛܪܐ ܗܘ </l>
                    <l xml:lang="syr">ܘܐܝܢܐ ܕܩܿܛܠ ܠܗ </l>
                    <l xml:lang="syr">ܡܬܩܛܠ</l>
                    <l xml:lang="syr">ܫܪܝܗ ܡܦܝܣ ܕܐܦ ܗܘ </l>
                    <l xml:lang="syr">ܩܒܥܗ ܠܥܠܡ ܗܿܘܐ </l>
                    <l xml:lang="syr">ܐܠܠܝܛ ܒܟܠ ܡܢ ܟܠ </l>
                    <l xml:lang="syr">ܚܘܝܐ ܕܢܟܠ ܘܫܪܝܗܝ</l>
                    
                </lg>
                <lg type="stanza" n="9"> 
                    <l xml:lang="syr">ܗܐ ܓܝܪ ܦܪܚܬܐ </l>
                    <l xml:lang="syr">ܘܢܘ̈ܢܐ ܘܚܝ̈ܘܬܐ </l>
                    <l xml:lang="syr">ܒܒܘܪܟܬܐ ܗܘ ܡܬܢܟܣܝܢ </l>
                    <l xml:lang="syr">ܘܒܗܿ ܬܘܒ ܡܬܐܟܠܝܢ</l>
                    <l xml:lang="syr">ܒܗܿ ܡܬܚܨܕ ܙܪܥܐ </l>
                    <l xml:lang="syr">ܒܗܿ ܡܬܩܛܦ ܦܐܪܐ </l>
                    <l xml:lang="syr">ܘܠܐ ܡܬܠܛܝ ܕܢܟܼܣ </l>
                    <l xml:lang="syr">ܐܘ ܩܼܛܦ</l>
                    <l xml:lang="syr">ܘܐܢ ܗܼܘ ܕܚܘܠܒܐ ܗܘ </l>
                    <l xml:lang="syr">ܦܓܪܗ ܕܒܪ ܐܢܫܐ</l>
                    <l xml:lang="syr">ܠܡܢ ܡܬܠܝܛ ܐܘ ܠܝܛ </l>
                    <l xml:lang="syr">ܚܘܝܐ ܘܩܛܘܠܐ </l>
                    
                </lg>
                <lg type="stanza" n="10"> 
                    <l xml:lang="syr">ܙܪܥܐ ܕܥܦ ܘܢܬܪ </l>
                    <l xml:lang="syr">ܦܐܪܐ ܕܦܓ ܘܦܟܗ </l>
                    <l xml:lang="syr">ܪܫܝܢ ܠܦܠܚܐ </l>
                    <l xml:lang="syr">ܕܐܘܚܪ ܘܠܐ ܩܛܦܗ</l>
                    <l xml:lang="syr">ܘܠܐ ܐܫܠܚܗ ܘܦܪܫܗ </l>
                    <l xml:lang="syr">ܠܙܪܥܐ ܡܢ ܓܘ ܬܒܢܐ </l>
                    <l xml:lang="syr">ܙܕܩ ܐܝܟ ܡܠܬܗܘܢ </l>
                    <l xml:lang="syr">ܕܢܬܪܫܐ </l>
                    <l xml:lang="syr">ܐܝܢܐ ܕܠܐ ܩܛܿܠ </l>
                    <l xml:lang="syr">ܠܣܒܐ ܕܦܟܗ ܛܥܡܗ </l>
                    <l xml:lang="syr">ܕܢܫܪܐ ܡܢ ܗܿܝ ܢܦܫܐ </l>
                    <l xml:lang="syr">ܐܣܘܪܗ ܕܝܩܝܪܐ </l>
                    
                </lg>
                <lg type="stanza" n="11"> 
                    <l xml:lang="syr">ܘܟܠܗ ܕܡܫܬܒܩܝܢ </l>
                    <l xml:lang="syr">ܣ̈ܒܐ ܕܠܐ ܚܫܚܘ</l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܕܢܠܦ ܒܗܘܢ ܛܿܒܐ </l>
                    <l xml:lang="syr">ܫܪܪܐ ܠܟܕܒ̈ܐ </l>
                    <l xml:lang="syr">ܕܟܕ ܛܒ ܗܼܘ ܣܝܦܐ </l>
                    <l xml:lang="syr">ܠܣܒܐ ܡܢܝܚܢܐ ܗܘ </l>
                    <l xml:lang="syr">ܥܠܝܡܐ ܕܢܥܓ ܠܗ </l>
                    <l xml:lang="syr">ܡܬܢܥܓ </l>
                    <l xml:lang="syr">ܡܚܒܠ ܠܛܠܝܘܬܐ </l>
                    <l xml:lang="syr">ܕܚܒܠܬ ܠܣܝܒܘܬܐ </l>
                    <l xml:lang="syr">ܕܢܠܦ ܟܡܐ ܚܒܝܒ </l>
                    <l xml:lang="syr">ܦܓܪܐ ܠܓܒܘܠܗ</l>
                    
                    
                </lg>
                <lg type="stanza" n="12"> 
                    <l xml:lang="syr">ܣܒܐ ܕܟܠ ܡ̈ܘܡܝܢ </l>
                    <l xml:lang="syr">ܡܘܒܠܐ ܗܘ ܕܥܩ̈ܬܐ </l>
                    <l xml:lang="syr">ܠܡܘܬܗ ܡܣܿܟܐ ܟܠ </l>
                    <l xml:lang="syr">ܘܠܐ ܐܝܬ ܕܩܿܛܠ ܠܗ </l>
                    <l xml:lang="syr">ܕܟܕ ܛܒ ܪܚܝܡ ܡܘܬܗ </l>
                    <l xml:lang="syr">ܣܿܓܝ ܕܚܝܠ ܩܛܠܗ</l>
                    <l xml:lang="syr">ܕܢܠܦ ܒܫܝܛܘܬܗ </l>
                    <l xml:lang="syr">ܟܡܐ ܫܒܝܚ</l>
                    <l xml:lang="syr">ܘܕܟܡܐ ܡܿܝܩܪ ܗܘܐ </l>
                    <l xml:lang="syr">ܟܕ ܗܼܘ ܒܦܪܕܝܣܐ </l>
                    <l xml:lang="syr">ܘܕܟܡܐ ܗܝ ܬܫܒܘܚܬܗ </l>
                    <l xml:lang="syr">ܡܐ ܕܩܡ ܘܐܬܢܚܿܡ</l>
                    
                </lg>
            </div>
