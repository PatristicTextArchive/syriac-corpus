        <body>
            <div type="title" n="61">
                <ab xml:lang="en">Hymn LXI</ab>
            </div>
            <div type="body">
                <lg type="superscript">
                    <l xml:lang="syr">ܝ ܒܪ ܩܠܗ</l>
                </lg>
                <lg type="stanza" n="1"> 
                    <l xml:lang="syr">ܒܒܘܝܢܐ ܠܡܘܬܐ ܢܫܡܥ ܐܘ ܚ̈ܒܝܒܝ</l>
                    <l xml:lang="syr">ܕܡܩܛܪܓ ܠܢ ܥܠ ܒܟܝܢ ܘܥܠ ܝ̈ܠܠܬܢ</l>
                    
                </lg>
                
                <lg type="refrain">
                    <l xml:lang="syr">ܥܘܢܝܬܐ : ܠܟ ܫܘܒܚܐ ܕܢܚܬܬ ܒܬܪ ܐܕܡ </l>
                    <l xml:lang="syr">ܘܐܫܟܚ ܗܘܐ ܠܐܕܡ ܘܐܦ ܒܗ ܠܝ̈ܠܕܘܗܝ ܕܐܕܡ</l>
                    
                </lg>
                <lg type="stanza" n="2"> 
                    <l xml:lang="syr">ܘܒܙܕܩܐ ܐܟܒܪ ܐܡܪ ܕܩ̈ܛܝܠܝܟܘܢ </l>
                    <l xml:lang="syr">ܕܠܐ ܪ̈ܚܡܐ ܘܗܐ ܕܡ̈ܥܝܟܘܢ ܐܝܟ ܪ̈ܚܡܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="3"> 
                    <l xml:lang="syr">ܥܒܕܬܘܢܢܝ ܐܝܟ ܣܪܘܚܐ ܐܘ ܩ̈ܛܘܠܐ </l>
                    <l xml:lang="syr">ܩܛܿܠܝܢ ܐܢܬܘܢ ܓܝܪ ܠܚ̈ܕܕܐ ܡܢ ܒܠܥܕܝ</l>
                    
                </lg>
                <lg type="stanza" n="4"> 
                    <l xml:lang="syr">ܥܕ ܒܿܥܐ ܡܘܬܐ ܕܢܐܬܐ ܩܕܡܗ ܣܝܦܐ </l>
                    <l xml:lang="syr">ܢܚܙܐ ܓܝܪ ܥܠ ܡܿܢ ܓܿܥܐ ܕܡܐ ܕܩ̈ܛܝܠܐ </l>
                    
                </lg>
                <lg type="stanza" n="5"> 
                    <l xml:lang="syr">ܥܠܝܟܘܢ ܓܥܿܝܢ ܚܢܝ̈ܦܐ ܕܐܠܝܨܝܢ ܗܘܘ</l>
                    <l xml:lang="syr">ܢܟܦܬ ܠܝ ܓܪܝ ܒܚܒܠܐ ܕܚܘܢܩ̈ܝܗܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="6"> 
                    <l xml:lang="syr">ܥܠܝ ܦܣܩܝܢ ܐܦ ܫܦܠܘܬܐ ܕܡܢ ܒܠܥܕܝ</l>
                    <l xml:lang="syr">ܚܢܝ̈ܩܐ ܘܩܛ̈ܝܠܐ ܐܝܟܢ ܥܠܘ ܠܗܿ ܠܫܝܘܠ</l>
                    
                </lg>
                <lg type="stanza" n="7"> 
                    <l xml:lang="syr">ܥ̈ܘܠܝܟܘܢ ܗܐ ܡܫܬܕܝܢ ܐܝܟ ܕܒܡܨܪܝܢ </l>
                    <l xml:lang="syr">ܒ̈ܢܝܟܘܢ ܠܫܐܗܕܐ ܕܒܚܬܘܢ ܐܘ ܫܐ̈ܕܢܐ </l>
                    
                    <l>܀܀܀</l>
                </lg>
                <lg type="stanza" n="8"> 
                    <l xml:lang="syr">ܥܕ ܒܥܿܐ ܡܘܐ ܕܢܛܥܡ ܒܫ̈ܠܕܝܟܘܢ </l>
                    <l xml:lang="syr">ܩܐܝܢ ܫܪܚܢܝ ܩܕܡܐܝܬ ܒܕܡܐ ܕܐܢܫܐ </l>
                    
                </lg>
                <lg type="stanza" n="9"> 
                    <l xml:lang="syr">ܥܕ ܒܥܐ ܕܐܓܪ ܪܘܚܝ ܕܢܡܘܬ ܐܕܡ </l>
                    <l xml:lang="syr">ܩܕܡ ܫܘܠܛܢܝ ܫܠܛܬܘܢܢܝ ܥܠ ܦܓܪ̈ܝܟܘܢ</l>
                    
                </lg>
                <lg type="stanza" n="10"> 
                    <l xml:lang="syr">ܥܩܪܗ ܩܐܝܢ ܒܣܝܦܗ ܠܬܪܥܗܿ ܕܫܝܘܠ </l>
                    <l xml:lang="syr">ܐܚܝܕ ܗܘܐ ܓܝܪ ܘܩܕܡ ܙܒܢܐ ܩܕܡ ܦܬܚܗ</l>
                    
                </lg>
                <lg type="stanza" n="11"> 
                    <l xml:lang="syr">ܥܡܠ ܕܪܫܗܿ ܐܘܪܚܐ ܕܫܝܘܠ ܡ ܒܠܥܕܝ</l>
                    <l xml:lang="syr">ܒܐܘܪܚܐ ܓܝܪ ܕܕܪܫܬܘܢ ܠܝ ܗܐ ܪܕܐ ܐܢܐ </l>
                    
                </lg>
                <lg type="stanza" n="12"> 
                    <l xml:lang="syr">ܬܫܥܡܐܐ ܫ̈ܢܝܢ ܝܬܒܬ ܩܘܝܬ ܠܐܕܡ ܕܢܡܘܬ</l>
                    <l xml:lang="syr">ܩܐܝܢ ܕܝܢ ܐܦ ܠܐ ܝܘܡܐ ܫܒܩܗ ܠܐܚܘܗܝ</l>
                    
                </lg>
                <lg type="stanza" n="13"> 
                    <l xml:lang="syr">ܓܝ̈ܣܐ ܒܓܘ ܐܘܪ̈ܚܬܐ ܒܝܫ̈ܝܢ ܐܢܘܢ ܡܢܝ</l>
                    <l xml:lang="syr">ܐܢܐ ܕܡܿܟ ܐܢܐ ܘܗܼܢܘܢ ܥܝܪܝܢ ܠܡܩܿܛܠܘ</l>
                    
                </lg>
                <lg type="stanza" n="14"> 
                    <l xml:lang="syr">ܗܐ ܚܪ̈ܝܒܝܟܘܢ ܒܩܒܪ̈ܐ ܘܩ̈ܛܝܠܝܟܘܢ </l>
                    <l xml:lang="syr">ܒܐܘܪ̈ܚܬܐ ܘܚܝ̈ܩܝܟܘܢ ܥܠ ܣܟܝ̈ܟܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="15"> 
                    <l xml:lang="syr">ܐܢ ܐܢܐ ܡܪܕܬ ܥܠ ܡܪܝ ܠܡ ܘܩܛܠܬܗ </l>
                    <l xml:lang="syr">ܡܢܘ ܩܛܿܠ ܐܢܘܢ ܠܗܠܝܢ ܐܡܿܪ ܝܗܘ</l>
                    
                </lg>
                <lg type="stanza" n="16"> 
                    <l xml:lang="syr">ܘܐܢ ܐܢܐ ܡܘܬܐ ܕܒܪܬ ܠܥܢܝ̈ܕܝܟܘܢ </l>
                    <l xml:lang="syr">ܚܢܝ̈ܩܐ ܩ̈ܛܝܠܐ ܘܚܪ̈ܝܒܐ ܡܢܘ ܩܿܛܠ</l>
                    
                </lg>
                <lg type="stanza" n="17"> 
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܣܛܢܐ ܐܢܬܘܢ ܠܚ̈ܕܕܐ ܘܣܩܝܪ ܒܝܼܫܐ </l>
                    <l xml:lang="syr">ܡܘܬܢܐ ܐܢܬܘܢ ܠܚ̈ܕܕܐ ܘܥܕܝܠ ܡܘܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="18"> 
                    <l xml:lang="syr">ܨܒܝܢܟܘܢ ܠܟܘܢ ܣܛܢܐ ܗܘ ܘܐܦ ܩܛܘܠܐ ܗܘ </l>
                    <l xml:lang="syr">ܘܡܢ ܡܘܬܐ ܘܡܢ ܣܛܢܐ ܩܒܠ ܟܠ ܐܢܫ </l>
                    
                </lg>
                <lg type="stanza" n="19"> 
                    <l xml:lang="syr">ܣܡܐ ܕܡܘܬܐ ܡܫܩܝܢ ܐܢܬܘܢ ܬܘܒ ܠܚ̈ܕܕܐ </l>
                    <l xml:lang="syr">ܟܡܐ ܡ̈ܘܬܝܢ ܗܐ ܐܝܬ ܠܟܘܢ ܡܢ ܒܠܥܕܝ</l>
                    
                </lg>
                <lg type="stanza" n="20"> 
                    <l xml:lang="syr">ܢܟ̈ܟܐ ܟܡܐ̈ܢܐ ܐܦ ܦ̈ܚܐ ܣܝܦܐ ܘܣܡܐ </l>
                    <l xml:lang="syr">ܟܡܐ ܡܘ̈ܬܝܢ ܡܢܟܘܢ ܘܒܟܘܢ ܗܐ ܡܬܝܠܕܝܢ</l>
                    
                </lg>
                <lg type="stanza" n="21"> 
                    <l xml:lang="syr">ܕܝܿܢܐ ܒܓܘ ܒܝܬ ܕܝܢܼܐ ܡܘܬܐ ܗܘ ܕܬܪ̈ܝܢ </l>
                    <l xml:lang="syr">ܗܿܘ ܩܛܿܠ ܒܐܓܪܐ ܟܣܝܐ ܘܐܢܐ ܡܓܢ </l>
                    
                </lg>
                <lg type="stanza" n="22"> 
                    <l xml:lang="syr">ܚܙܝܬܗ ܠܫܘܚܕܐ ܘܬܗܪܐ ܒܗ ܕܪܗܛ ܩܕܡܢܝ</l>
                    <l xml:lang="syr">ܟܡܐ ܩ̈ܛܠܝܢ ܩܛܿܠ ܫܘܚܕܐ ܘܠܐ ܐܢܫ ܡܪܓܫ</l>
                    
                </lg>
                <lg type="stanza" n="23"> 
                    <l xml:lang="syr">ܢܟܦܬ ܠܝ ܕܗܕܝܘܛܐܝܬ ܡܬܕܒܪ ܐܢܐ </l>
                    <l xml:lang="syr">ܚܕܐ ܫܠܕܐ ܐܢ ܕܒܪ ܐܢܐ ܟܠ ܐܢܫ ܡܪܓܫ</l>
                    
                </lg>
                <lg type="stanza" n="24"> 
                    <l xml:lang="syr">ܒܒ̈ܬܐ ܒܟܝܐ ܘܒܫܘ̈ܩܐ ܐܦ ܡܪܩܘܕܬܐ </l>
                    <l xml:lang="syr">ܥܕܡܐ ܕܥܠ ܬܪ̈ܥܝܗܿ ܕܫܝܘܠ ܥܘܝܢ ܥܠܝ</l>
                    
                </lg>
                <lg type="stanza" n="25"> 
                    <l xml:lang="syr">ܥܘܘ ܥܠܝܟܘܢ ܕܟܡܐ ܣܢܝܢ ܐܢܬܘܢ ܘܠܝ ܣܢܝܢ ܐܢܬܘܢ</l>
                    <l xml:lang="syr">ܫܝܘܠ ܡܟܝܠ ܬܥܘܐ ܥܠܝܟܘܢ ܐܘ ܩ̈ܛܘܠܐ</l>
                    
                </lg>
                <lg type="stanza" n="26"> 
                    <l xml:lang="syr">ܒܣܪܩܐ ܢܓܐ ܘܢܘܪܐ ܘܐܦ ܒܪܓܡܐ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܡܡܝܬܝܢ ܐܢܬܘܢ ܠܒ̈ܢܝܢܫܐ ܘܚܬܝܪܝܢ ܐܢܬܘܢ </l>
                    
                </lg>
                <lg type="stanza" n="27"> 
                    <l xml:lang="syr">ܢܟܦ ܐܢܐ ܡܢܟܘܢ ܐܦ ܪܚܡܢ ܐܦ ܡܿܝܩܪ </l>
                    <l xml:lang="syr">ܒܐܝܩܪܐ ܓܝܪ ܕܒܪ ܐܢܐ ܠܥܢܝ̈ܕܝܟܘܢ</l>
                    
                </lg>
                <lg type="stanza" n="28"> 
                    <l xml:lang="syr">ܥܠ ܥܪ̈ܣܬܐ ܡܫܕܠ ܐܢܐ ܠܐܝܢܐ ܕܟܪܝܗ</l>
                    <l xml:lang="syr">ܘܢܝܚܐܝܬ ܡܕܡܟ ܐܢܐ ܠܗ ܫܢܬ ܙܒܢܐ</l>
                    
                </lg>
            </div>
