        <body>
            <div type="title" n="48">
                <ab xml:lang="en">Hymn XLVIII</ab>
            </div>
            <div type="body">
                <lg type="superscript">
                    <l xml:lang="syr">ܘ ܒܪ ܩܠܗ</l>
                </lg>
                <lg type="stanza" n="1"> 
                    <l xml:lang="syr">ܐܦܪܥ ܘܐܬܿܥܠܡ </l>
                    <l xml:lang="syr">ܫܒܛܗ ܕܠܘܝܐ </l>
                    <l xml:lang="syr">ܕܨܒܝܢ ܥܠܝܐ </l>
                    <l xml:lang="syr">ܢܚܡܗ ܕܢܿܟܣ ܒܗ </l>
                    <l xml:lang="syr">ܪܙܐ ܕܢܘܚܡܐ </l>
                    <l xml:lang="syr">ܠܚܼܫ ܠܢ ܒܫܠܝܘܬܗ</l>
                    <l xml:lang="syr">ܦܐܪ̈ܐ ܐܦ ܛܪ̈ܦܐ </l>
                    <l xml:lang="syr">ܠܒܼܫ ܗܘܐ</l>
                    <l xml:lang="syr">ܒܦܪ̈ܥܘܗܝ ܡܝܒܒ ܗܘܐ </l>
                    <l xml:lang="syr">ܕܠܐܗܪܘܢ ܐܙܕܕܩܘ</l>
                    <l xml:lang="syr">ܠܒ̈ܘܫܐ ܕܟܘܡܪܘܬܐ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܙܕܩ̈ܐ ܕܬܫܡܫܬܐ </l>
                    
                </lg>
                
                <lg type="refrain">
                    <l xml:lang="syr">ܥܘܢܝܬܐ : ܬܒܼܥ ܡܪܝ ܛܠܝܡܘܬܗ </l>
                    <l xml:lang="syr">ܕܦܓܪܐ ܒܢܘܚܡܟ</l>
                    
                </lg>
                <lg type="stanza" n="2"> 
                    <l xml:lang="syr">ܥܠܘ ܐܬܐܣܝܡܘ ܫ̈ܒܛܐ </l>
                    <l xml:lang="syr">ܟܠܗܘܢ ܒܪܙ ܦܓܪܐ </l>
                    <l xml:lang="syr">ܘܟܕ ܢܦܼܩܘ ܘܐܬܦܪܫܘ </l>
                    <l xml:lang="syr">ܚܕ ܗܘ ܡܟܠܠ ܗܘܐ </l>
                    <l xml:lang="syr">ܘܟܠܗܘܢ ܫܠܝܚܝܢ ܗܘܘ </l>
                    <l xml:lang="syr">ܘܚܣܕܐ ܛܥܝܢܝܢ ܗܘܘ</l>
                    <l xml:lang="syr">ܒܫܒܛܐ ܚܙܝ ܪܙܐ </l>
                    <l xml:lang="syr">ܕܚܪܬܐ </l>
                    <l xml:lang="syr">ܕܦܓܪ̈ܐ ܕܙ̈ܢܝܐ </l>
                    <l xml:lang="syr">ܩܝܡܝܢ ܒܟܘܐܪܐ </l>
                    <l xml:lang="syr">ܘܡܦܪܓ ܒܬܫܒܘܚܬܐ </l>
                    <l xml:lang="syr">ܦܓܪܗܘܢ ܕܩܕܝܫ̈ܐ </l>
                    
                </lg>
                <lg type="stanza" n="3"> 
                    <l xml:lang="syr">ܗܼܘ ܕܝܢ ܗܿܘ ܫܒܛܐ </l>
                    <l xml:lang="syr">ܐܬܣܝܡ ܒܐܪܘܢܐ </l>
                    <l xml:lang="syr">ܘܟܡܐ ܕܬܡܢ ܗܘܐ </l>
                    <l xml:lang="syr">ܡܗܒܒ ܘܪܘܙ ܗܘܐ </l>
                    <l xml:lang="syr">ܪܐܙܐ ܗܘ ܕܦܪܕܝܣܐ </l>
                    <l xml:lang="syr">ܕܒܗ ܪܘܙܝܢ ܦܓܪ̈ܐ </l>
                    <l xml:lang="syr">ܡܢܢܐ ܢܦܝܣ ܥܠܘܗܝ </l>
                    <l xml:lang="syr">ܕܠܐ ܚܡܝ</l>
                    <l xml:lang="syr">ܕܟܕ ܗܼܘ ܒܓܘ ܩܣܛܐ </l>
                    <l xml:lang="syr">ܠܐ ܣܪܝ ܕܣܪܐ ܗܘܐ </l>
                    <l xml:lang="syr">ܪܐܙܐ ܗܘ ܕܡ̈ܝܘܬܐ </l>
                    <l xml:lang="syr">ܕܠܐ ܡܝܬܝܢ ܒܥܕܢ </l>
                    
                </lg>
                <lg type="stanza" n="4"> 
                    <l xml:lang="syr">ܚܘܛܪܗ ܕܒܪ ܥܡܪܡ </l>
                    <l xml:lang="syr">ܥܝ̈ܢܐ ܩܢܼܐ ܡܢ ܫܠܝ</l>
                    <l xml:lang="syr">ܘܐܢ ܗܿܘ ܕܠܐ ܟܝܢܗ </l>
                    <l xml:lang="syr">ܩܼܢܐ ܨܘܪܬܐ ܘܚ̈ܝܐ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܦܓܪܐ ܟܡܐ ܬܫܦܪ </l>
                    <l xml:lang="syr">ܨܘܪܬܐ ܕܒܟܝܢܗ </l>
                    <l xml:lang="syr">ܚܘܛܪܐ ܚܝܐ ܘܪܚܫ </l>
                    <l xml:lang="syr">ܒܡܠܬܐ </l>
                    <l xml:lang="syr">ܘܐܢܗܼܘ ܕܠܐ ܥܝܕܗ </l>
                    <l xml:lang="syr">ܩܢܐ ܗܘܐ ܕܠܐ ܕܝܠܗ</l>
                    <l xml:lang="syr">ܦܓܪܐ ܟܡܐ ܢܦܢܐ </l>
                    <l xml:lang="syr">ܠܕܝܠܗ ܒܢܘܚܡܐ</l>
                    
                </lg>
                <lg type="stanza" n="5"> 
                    <l xml:lang="syr">ܡܘܫܐ ܢܛܪ ܓܪ̈ܡܐ </l>
                    <l xml:lang="syr">ܘܬܒܪ ܫܕܐ ܠܘ̈ܚܐ </l>
                    <l xml:lang="syr">ܝܬܝܪ ܡܢ ܠܘ̈ܚܐ </l>
                    <l xml:lang="syr">ܫܠܕܐ ܡܙܝܚ ܗܘܐ </l>
                    <l xml:lang="syr">ܠܘ̈ܚܐ ܚܠܦ ܠܘ̈ܚܐ </l>
                    <l xml:lang="syr">ܓܠܦ ܗܘܐ ܕܢܠܦ ܗܘܐ </l>
                    <l xml:lang="syr">ܕܠܐ ܗܘܼܐ ܠܢܘܚܡܐ </l>
                    <l xml:lang="syr">ܡܙܡܢܢ</l>
                    <l xml:lang="syr">ܠܘ ܕܝܢ ܐܚܪܝܢ ܦܓܪܐ </l>
                    <l xml:lang="syr">ܚܠܦ ܗܿܘ ܕܠܥܙܪ</l>
                    <l xml:lang="syr">ܢܦܼܩ ܗܘܐ ܕܢܘܕܥ ܗܘܐ </l>
                    <l xml:lang="syr">ܕܗܢܘ ܕܡܬܢܚܡ</l>
                    
                </lg>
                <lg type="stanza" n="6"> 
                    <l xml:lang="syr">ܐܢ ܐܢܫ ܩܪܒ ܗܘܐ </l>
                    <l xml:lang="syr">ܠܓܪ̈ܡܐ ܒܓܘ ܕܒܪܐ </l>
                    <l xml:lang="syr">ܟܬܒ ܛܡܐܗ ܡܘܫܐ </l>
                    <l xml:lang="syr">ܕܠܐ ܛܡܐܘܗܝ ܓܪ̈ܡܐ </l>
                    <l xml:lang="syr">ܐܪ̈ܒܥܝܢ ܫ̈ܢܝܢ ܗܿܠܟ </l>
                    <l xml:lang="syr">ܡܝܬܐ ܒܡܫܪܝܬܐ </l>
                    <l xml:lang="syr">ܪܙܐ ܗܘ ܨܪ ܬܡܢ </l>
                    <l xml:lang="syr">ܠܥܕܬܐ </l>
                    <l xml:lang="syr">ܕܒܗܿ ܡܬܟܪܙ ܟܠܝܘܢ </l>
                    <l xml:lang="syr">ܡܘܬܗ ܕܡܚܐ ܟܠ</l>
                    <l xml:lang="syr">ܨܠܝܒܐ ܗܘ ܕܚܝܘܬܐ </l>
                    <l xml:lang="syr">ܕܗܿܠܟ ܒܡܫܪܝܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="7"> 
                    <l xml:lang="syr">ܒܨܒܥܐ ܕܨܿܝܪܐ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܘܥܘܬܪܐ ܕܣܡ̈ܡܢܐ </l>
                    <l xml:lang="syr">ܡܬܬܨܝܪ ܨܠܡ ܡܠܟܐ </l>
                    <l xml:lang="syr">ܘܡܛܘܠ ܕܒܠܐ ܠܗ </l>
                    <l xml:lang="syr">ܡܬܚܫܠ ܒܐܘܡ̈ܢܐ </l>
                    <l xml:lang="syr">ܨܠܡܐ ܕܠܐ ܒܿܠܐ </l>
                    <l xml:lang="syr">ܡ̈ܠܟܐ ܠܨܠܡ̈ܝܗܘܢ </l>
                    <l xml:lang="syr">ܡܪܡܪܡܝܢ </l>
                    <l xml:lang="syr">ܡܢܘ ܚܼܙܐ ܡܠܟܐ </l>
                    <l xml:lang="syr">ܕܐܬܡܙܓ ܒܓܘ ܨܠܡܗ </l>
                    <l xml:lang="syr">ܠܒܫ ܝܘܩܢܗ ܝܬܼܒ </l>
                    <l xml:lang="syr">ܕܒܗ ܢܣܬܓܕ ܨܠܡܗ </l>
                    
                </lg>
                <lg type="stanza" n="8"> 
                    <l xml:lang="syr">ܐܚܪܢܐ ܥܒܕ ܨܠܡܐ </l>
                    <l xml:lang="syr">ܕܫܬܝܢ ܘܫܬ ܐܡ̈ܝܢ </l>
                    <l xml:lang="syr">ܘܟܕ ܗܼܘ ܙܥܘܪܐ ܗܘܐ </l>
                    <l xml:lang="syr">ܒܨܠܡܐ ܨܒܼܐ ܕܢܐܪܒ</l>
                    <l xml:lang="syr">ܟܿܢܫ ܠܗܿܘ ܨܠܡܗ </l>
                    <l xml:lang="syr">ܣܓܕܬܐ ܕܐܬܟܣܣܬ</l>
                    <l xml:lang="syr">ܡܪܢ ܥܒܼܕ ܬܗܪܐ </l>
                    <l xml:lang="syr">ܒܡܐܬܝܗ </l>
                    <l xml:lang="syr">ܕܟܕ ܗܼܘ ܕܠܐ ܣܟܐ ܗܘ </l>
                    <l xml:lang="syr">ܒܨܠܡܐ ܙܥܪ ܫܝܛܐ </l>
                    <l xml:lang="syr">ܘܟܿܢܫ ܒܗܿܘ ܨܠܡܐ </l>
                    <l xml:lang="syr">ܣܓܕܬܐ ܡܒܕܪܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="9"> 
                    <l xml:lang="syr">ܐܕܡ ܗܼܦܟ ܠܐܪܥܗ </l>
                    <l xml:lang="syr">ܘܥܒܕ ܕܝܬܩܐ </l>
                    <l xml:lang="syr">ܟܬܒ ܚܒ ܠܗ ܣܿܓܝ </l>
                    <l xml:lang="syr">ܠܡܘܬܐ ܘܠܚܛܝܬܐ </l>
                    <l xml:lang="syr">ܒܥܒܪ ܦܘܩܕܢܐ </l>
                    <l xml:lang="syr">ܛܒܥܗ ܠܡܫܟܢܐ </l>
                    <l xml:lang="syr">ܡܪܢ ܐܬܐ ܦܪܩܗ </l>
                    <l xml:lang="syr">ܘܢܚܡܗ </l>
                    <l xml:lang="syr">ܡܘܬܐ ܗܼܦܟ ܘܟܬܼܒ </l>
                    <l xml:lang="syr">ܘܥܪܒܬ ܫܝܘܠ ܥܡܗ </l>
                    <l>܀܀܀</l>
                    <l xml:lang="syr">ܕܟܠ ܡܐ ܕܒܙܘ ܘܚܛܦܘ </l>
                    <l xml:lang="syr">ܢܿܦܢܘܢ ܒܢܘܚܡܐ </l>
                    
                </lg>
                <lg type="stanza" n="10"> 
                    <l xml:lang="syr">ܐܠܥܐ ܕܚܘܐ ܬܘܒ </l>
                    <l xml:lang="syr">ܡܢܗܿ ܘܒܗܿ ܣܓܝܬ </l>
                    <l xml:lang="syr">ܓܪܡܐ ܓܣܐ ܓܪ̈ܡܐ </l>
                    <l xml:lang="syr">ܘܪ̈ܓܫܐ ܫܪ̈ܝܢܐ </l>
                    <l xml:lang="syr">ܫܒܫܬܐ ܗܝ ܕܡܢ ܐܕܡ </l>
                    <l xml:lang="syr">ܕܒܗܿ ܗܘ ܟܣܐ ܫܘܦܪܗ </l>
                    <l xml:lang="syr">ܕܒܝܬܐ ܕܗܐ ܥܦܪܗܿ </l>
                    <l xml:lang="syr">ܒܓܘ ܫܝܘܠ</l>
                    <l xml:lang="syr">ܟܡܐ ܟܝ ܕܠܝܠܐ ܠܗ </l>
                    <l xml:lang="syr">ܠܐܪܕܟܠܐ ܕܟܠܐ</l>
                    <l xml:lang="syr">ܕܡܢܗ ܘܒܗ ܢܒܢܝܘܗܝ </l>
                    <l xml:lang="syr">ܒܪܡܙܐ ܕܡܐܬܝܬܗ</l>
                    
                </lg>
                <lg type="stanza" n="11"> 
                    <l xml:lang="syr">ܡܘܠܕܝܢ ܒܓܘ ܡ̈ܝܐ </l>
                    <l xml:lang="syr">ܢܘ̈ܢܐ ܕܠܐ ܪ̈ܚܡܐ </l>
                    <l xml:lang="syr">ܘܝܡܐ ܕܩܛܘܠܐ ܗܘ </l>
                    <l xml:lang="syr">ܒܥܘܡ̈ܩܘܗܝ ܠܗܘܢ ܡܚܐ </l>
                    <l xml:lang="syr">ܘܟܕ ܛܒ ܡܪܝܪܐ ܗܘ </l>
                    <l xml:lang="syr">ܒܥܘܒ̈ܘܗܝ ܠܗܝܢ ܡܝܢܩ</l>
                    <l xml:lang="syr">ܟܠܗܝܢ ܠܡܪܐ ܟܠ </l>
                    <l xml:lang="syr">ܡܩܠܣܢ</l>
                    <l xml:lang="syr">ܕܢܘ̈ܢܐ ܒܓܘ ܝܡܐ </l>
                    <l xml:lang="syr">ܕܝܨܝܢ ܒܡܝܬܘܬܗ </l>
                    <l xml:lang="syr">ܘܐܢ ܗܼܘ ܕܣܠܼܩܘ ܠܐܐܪ </l>
                    <l xml:lang="syr">ܐܬܚܢܩܘ ܒܚܝܘܬܐ </l>
                    
                </lg>
                <lg type="stanza" n="12"> 
                    <l xml:lang="syr">ܠܐ ܟܝܬ ܢܿܦܗܘܢܟ </l>
                    <l xml:lang="syr">ܩ̈ܠܐ ܕܠܐ ܣܒܪܐ </l>
                    <l xml:lang="syr">ܕܚܕ ܗܘ ܕܐܢ ܦܿܩܕ </l>
                    <l xml:lang="syr">ܠܚ̈ܝܐ ܡܡܝܬܝܢ ܠܟ </l>
                    <l xml:lang="syr">ܘܗܘܝܘ ܕܐܢ ܪܡܿܙ </l>
                    <l xml:lang="syr">ܠܡܘܬܐ ܡܢܚܡ ܠܟ</l>
                    <l xml:lang="syr">ܒܓܙܐ ܕܨܒܝܢܗ </l>
                    <l xml:lang="syr">ܫܟܝܚ ܟܠ</l>
                    <l xml:lang="syr">ܡܘܬܐ ܠܙܕܝ̈ܩܐ </l>
                    <l xml:lang="syr">ܫܢܬܐ ܗܘ ܒܩܒܪ̈ܝܗܘܢ </l>
                    <l xml:lang="syr">ܘܚ̈ܝܐ ܠܚ̈ܛܝܐ </l>
                    <l xml:lang="syr">ܩܛܿܠܝܢ ܒܓܗܢܐ </l>
                    
                </lg>
            </div>
